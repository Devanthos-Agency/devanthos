---
import Button from "../ui/Button.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import {
    Bot,
    TrendingUp,
    Code2,
    ArrowRight,
    CheckCircle,
    Brain,
} from "lucide-react";

// Datos de servicios organizados en una estructura reutilizable
const services = [
    {
        id: "desarrollo-web-y-mobile",
        title: "Desarrollo Web y Móvil",
        description:
            "Nos especializamos en la creación de soluciones digitales modernas, intuitivas y eficientes, tanto en plataformas web como móviles.",
        icon: Code2,
        gradient: "from-blue-500 to-cyan-500",
        price: "Desde $250",
        features: [
            "React & Next.js",
            "Apps Móviles",
            "APIs REST",
            "UI/UX Moderno",
        ],
        href: "/servicios/desarrollo-web-y-mobile",
    },
    {
        id: "marketing-digital-seo",
        title: "Marketing Digital y SEO",
        description:
            "Nuestro equipo de marketing digital ofrece estrategias personalizadas para mejorar la visibilidad en línea de tu negocio.",
        icon: TrendingUp,
        gradient: "from-green-500 to-emerald-500",
        price: "Desde $450/mes",
        features: ["SEO Avanzado", "Google Ads", "Social Media", "Analytics"],
        href: "/servicios/marketing-digital-seo",
    },
    {
        id: "chatbots-inteligentes",
        title: "Chatbots Inteligentes",
        description:
            "Ofrecemos servicios de desarrollo de chatbots inteligentes que mejoran la interacción con los usuarios y optimizan los procesos.",
        icon: Bot,
        gradient: "from-purple-500 to-indigo-500",
        price: "Desde $299/mes",
        features: [
            "IA Avanzada",
            "24/7 Disponible",
            "Multi-plataforma",
            "Automatización",
        ],
        href: "/servicios/chatbots-inteligentes",
    },
    {
        id: "consultoria-empresarial",
        title: "Consultoría Empresarial",
        description:
            "Impulsamos el crecimiento de tu empresa con estrategias personalizadas, optimización de procesos y transformación digital integral.",
        icon: Brain,
        gradient: "from-orange-500 to-red-500",
        price: "Desde $2,500",
        features: [
            "Transformación Digital",
            "Optimización Procesos",
            "Estrategia Empresarial",
            "Consultoría 24/7",
        ],
        href: "/servicios/consultoria-empresarial",
    },
];
---

<section class="relative p-0">
    <div
        class="absolute h-full w-full bg-[url('/images/llleaves.svg')] [mask-image:linear-gradient(to_right,white,transparent,transparent,white)] bg-cover opacity-100 lg:block dark:opacity-50"
    >
    </div>
    <div class="container py-28 md:py-32 mx-auto px-2 md:px-6 lg:px-8">
        <div class="mx-auto flex max-w-7xl flex-col items-center">
            <div
                class="z-10 mx-auto flex max-w-7xl flex-col items-center gap-6 text-center"
            >
                <span
                    data-slot="badge"
                    class="inline-flex items-center justify-center rounded-md border px-2 py-0.5 text-xs font-medium w-fit whitespace-nowrap shrink-0 [&>svg]:size-3 gap-1 [&>svg]:pointer-events-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive overflow-hidden text-foreground [a&]:hover:bg-accent [a&]:hover:text-accent-foreground transition-colors hover:bg-secondary/20"
                >
                    Nuestros servicios
                </span>
                <div>
                    <h2
                        class="mb-6 text-4xl font-cocogoose font-normal tracking-tight text-pretty md:text-5xl lg:text-6xl"
                    >
                        En Devanthos ofrecemos soluciones digitales
                        personalizadas
                    </h2>
                    <p
                        class="mx-auto max-w-2xl text-muted-foreground md:text-lg lg:text-xl"
                    >
                        Ofrecemos una amplia gama de servicios diseñados para
                        satisfacer las necesidades de tu negocio, incluyendo
                        desarrollo web, marketing digital y consultoría
                        estratégica.
                    </p>
                </div>
                <div class="mt-6 flex items-center gap-4">
                    <Button href="/contacto" variant="primary" class="group">
                        Comenzar
                    </Button>
                    <Button href="/servicios" variant="outline" class="group">
                        Más información
                    </Button>
                </div>
                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16"
                >
                    {
                        services.map((service) => {
                            const IconComponent = service.icon;
                            return (
                                <Card className="group hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 border-2 hover:border-primary/20 overflow-hidden">
                                    <div
                                        class={`h-2 bg-gradient-to-r ${service.gradient} scale-110 blur-xl group-hover:blur-2xl group-hover:scale-150 group-hover:saturate-200 transition-all duration-500 animate-aurora`}
                                    />

                                    <CardHeader className="pb-4">
                                        <div class="flex items-center gap-3 mb-4">
                                            <div
                                                class={`p-3 rounded-xl bg-gradient-to-br ${service.gradient} text-white`}
                                            >
                                                <IconComponent className="w-6 h-6" />
                                            </div>
                                            <Badge
                                                variant="secondary"
                                                className="text-xs"
                                            >
                                                {service.price}
                                            </Badge>
                                        </div>

                                        <CardTitle className="text-xl group-hover:text-primary transition-colors">
                                            {service.title}
                                        </CardTitle>
                                    </CardHeader>

                                    <CardContent>
                                        <p class="text-muted-foreground mb-6 line-clamp-3">
                                            {service.description}
                                        </p>

                                        <div class="space-y-2 mb-6">
                                            {service.features.map((feature) => (
                                                <div class="flex items-center gap-2 text-sm">
                                                    <CheckCircle className="w-4 h-4 text-green-500" />
                                                    <span>{feature}</span>
                                                </div>
                                            ))}
                                        </div>

                                        <div class="flex gap-2">
                                            <Button
                                                href={service.href}
                                                class="flex-1"
                                                variant="secondary"
                                            >
                                                Ver Detalles
                                                <ArrowRight className="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform" />
                                            </Button>
                                        </div>
                                    </CardContent>
                                </Card>
                            );
                        })
                    }
                </div>
            </div>
        </div>
    </div>
</section>
