---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import {
    Target,
    Users,
    Award,
    Heart,
    Code2,
    Lightbulb,
    Mail,
    Phone,
    MapPin,
} from "lucide-react";

const values = [
    {
        icon: Code2,
        title: "Excelencia Técnica",
        description:
            "Nos comprometemos a entregar código de la más alta calidad usando las mejores prácticas y tecnologías modernas.",
    },
    {
        icon: Heart,
        title: "Pasión por el Desarrollo",
        description:
            "Amamos lo que hacemos y se refleja en cada línea de código que escribimos y cada proyecto que entregamos.",
    },
    {
        icon: Lightbulb,
        title: "Innovación Constante",
        description:
            "Siempre buscamos nuevas formas de resolver problemas y mejorar la experiencia del usuario.",
    },
    {
        icon: Users,
        title: "Trabajo en Equipo",
        description:
            "Creemos en la colaboración y el poder del trabajo conjunto para lograr resultados extraordinarios.",
    },
];

const team = [
    {
        name: "Juan Morales",
        role: "Fundador & CEO",
        description:
            "Full-stack developer con más de 8 años de experiencia en desarrollo web y móvil.",
        avatar: "https://avatars.githubusercontent.com/u/85465719?v=4",
        social: {
            github: "https://github.com/Juanmorales1810",
            linkedin: "https://linkedin.com/in/juanmorales",
        },
    },
    {
        name: "María García",
        role: "Lead Designer",
        description:
            "Especialista en UX/UI con experiencia en diseño de productos digitales.",
        avatar: "https://images.unsplash.com/photo-1494790108755-2616b612b1e3?w=400&h=400&fit=crop&crop=face",
        social: {
            behance: "https://behance.net/mariagarcia",
            linkedin: "https://linkedin.com/in/mariagarcia",
        },
    },
    {
        name: "Carlos López",
        role: "Senior Developer",
        description: "Experto en React, Node.js y arquitecturas escalables.",
        avatar: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=400&h=400&fit=crop&crop=face",
        social: {
            github: "https://github.com/carloslopez",
            linkedin: "https://linkedin.com/in/carloslopez",
        },
    },
];

const stats = [
    { number: "100+", label: "Proyectos Completados" },
    { number: "50+", label: "Clientes Satisfechos" },
    { number: "3", label: "Años de Experiencia" },
    { number: "24/7", label: "Soporte Técnico" },
];
---

<Layout
    title="Sobre Nosotros - DevsHub"
    description="Conoce al equipo detrás de DevsHub, nuestra misión, valores y compromiso con la excelencia en el desarrollo de software."
>
    <main class="min-h-screen pt-24">
        <!-- Hero Section -->
        <section class="py-20 bg-gradient-to-br from-primary/5 to-primary/10">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto text-center">
                    <Badge className="mb-4">Sobre Nosotros</Badge>
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        Construyendo el <span class="text-primary"
                            >futuro digital</span
                        > juntos
                    </h1>
                    <p class="text-xl text-muted-foreground mb-8">
                        Somos un equipo apasionado de desarrolladores,
                        diseñadores y estrategas digitales comprometidos con
                        transformar ideas en experiencias digitales
                        excepcionales.
                    </p>
                </div>
            </div>
        </section>

        <!-- Mission Section -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div
                    class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
                >
                    <div>
                        <div class="flex items-center gap-2 mb-4">
                            <Target className="w-6 h-6 text-primary" />
                            <Badge variant="outline">Nuestra Misión</Badge>
                        </div>
                        <h2 class="text-3xl md:text-4xl font-bold mb-6">
                            Democratizar el desarrollo de software
                        </h2>
                        <p class="text-lg text-muted-foreground mb-6">
                            Creemos que toda empresa, sin importar su tamaño,
                            merece tener acceso a tecnología de clase mundial.
                            Nuestra misión es hacer que el desarrollo de
                            software sea más accesible, eficiente y efectivo.
                        </p>
                        <div class="space-y-4">
                            <div class="flex items-start gap-3">
                                <div
                                    class="w-2 h-2 rounded-full bg-primary mt-2 flex-shrink-0"
                                >
                                </div>
                                <p class="text-muted-foreground">
                                    Crear herramientas que simplifiquen el
                                    proceso de desarrollo
                                </p>
                            </div>
                            <div class="flex items-start gap-3">
                                <div
                                    class="w-2 h-2 rounded-full bg-primary mt-2 flex-shrink-0"
                                >
                                </div>
                                <p class="text-muted-foreground">
                                    Proporcionar soluciones escalables y
                                    sostenibles
                                </p>
                            </div>
                            <div class="flex items-start gap-3">
                                <div
                                    class="w-2 h-2 rounded-full bg-primary mt-2 flex-shrink-0"
                                >
                                </div>
                                <p class="text-muted-foreground">
                                    Impulsar la innovación en la industria
                                    tecnológica
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="relative">
                        <img
                            src="/images/hero/sistema-html-diseno-collages-sitios-web_23-2150432955.avif"
                            alt="Equipo trabajando"
                            class="rounded-lg shadow-lg w-full"
                        />
                    </div>
                </div>
            </div>
        </section>

        <!-- Values Section -->
        <section class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Nuestros Valores
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Los principios que guían nuestro trabajo y nuestras
                        relaciones con clientes y colaboradores.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
                >
                    {
                        values.map((value) => (
                            <Card className="text-center border-0 shadow-md group hover:shadow-lg transition-all duration-300">
                                <CardHeader>
                                    <div class="mx-auto mb-4 p-4 rounded-lg bg-primary/10 w-fit group-hover:bg-primary/20 transition-colors">
                                        <value.icon className="w-8 h-8 text-primary" />
                                    </div>
                                    <CardTitle className="text-xl">
                                        {value.title}
                                    </CardTitle>
                                </CardHeader>
                                <CardContent>
                                    <p class="text-muted-foreground">
                                        {value.description}
                                    </p>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Stats Section -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                    {
                        stats.map((stat) => (
                            <div class="text-center">
                                <div class="text-4xl md:text-5xl font-bold text-primary mb-2">
                                    {stat.number}
                                </div>
                                <div class="text-muted-foreground font-medium">
                                    {stat.label}
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Team Section -->
        <section class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Conoce a Nuestro Equipo
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Las personas talentosas que hacen posible todo lo que
                        creamos.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto"
                >
                    {
                        team.map((member) => (
                            <Card className="text-center border-0 shadow-md group hover:shadow-lg transition-all duration-300">
                                <CardHeader>
                                    <div class="mb-6">
                                        <img
                                            src={member.avatar}
                                            alt={member.name}
                                            class="w-24 h-24 rounded-full mx-auto object-cover mb-4"
                                        />
                                        <CardTitle className="text-xl mb-2">
                                            {member.name}
                                        </CardTitle>
                                        <Badge variant="outline">
                                            {member.role}
                                        </Badge>
                                    </div>
                                </CardHeader>
                                <CardContent>
                                    <p class="text-muted-foreground mb-6">
                                        {member.description}
                                    </p>
                                    <div class="flex justify-center gap-4">
                                        {member.social.github && (
                                            <a
                                                href={member.social.github}
                                                class="text-muted-foreground hover:text-primary transition-colors"
                                            >
                                                <svg
                                                    class="w-5 h-5"
                                                    fill="currentColor"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                                                </svg>
                                            </a>
                                        )}
                                        {member.social.linkedin && (
                                            <a
                                                href={member.social.linkedin}
                                                class="text-muted-foreground hover:text-primary transition-colors"
                                            >
                                                <svg
                                                    class="w-5 h-5"
                                                    fill="currentColor"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                                                </svg>
                                            </a>
                                        )}
                                    </div>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Contact CTA -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <Card
                    className="border-0 shadow-lg bg-gradient-to-r from-primary to-primary/80 text-primary-foreground"
                >
                    <CardContent className="p-12 text-center">
                        <h2 class="text-3xl md:text-4xl font-bold mb-6">
                            ¿Listo para trabajar con nosotros?
                        </h2>
                        <p class="text-lg opacity-90 mb-8 max-w-2xl mx-auto">
                            Nos encantaría conocer tu proyecto y ayudarte a
                            convertir tus ideas en realidad. Programa una
                            consultoría gratuita hoy mismo.
                        </p>
                        <div
                            class="flex flex-col sm:flex-row gap-4 justify-center"
                        >
                            <a
                                href="/contacto"
                                class="inline-flex items-center justify-center px-8 py-3 bg-white text-primary rounded-lg font-medium hover:bg-gray-100 transition-colors"
                            >
                                <Mail className="w-4 h-4 mr-2" />
                                Contactar Ahora
                            </a>
                            <a
                                href="/productos"
                                class="inline-flex items-center justify-center px-8 py-3 border border-white/20 rounded-lg font-medium hover:bg-white/10 transition-colors"
                            >
                                Ver Nuestros Productos
                            </a>
                        </div>
                    </CardContent>
                </Card>
            </div>
        </section>
    </main>
</Layout>
