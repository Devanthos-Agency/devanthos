---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import {
    Check,
    Star,
    Zap,
    Crown,
    Rocket,
    MessageCircle,
    Clock,
    Shield,
    Code,
    Palette,
    Smartphone,
    Globe,
} from "lucide-react";

const plans = [
    {
        name: "Básico",
        price: "$299",
        period: "/mes",
        description: "Perfecto para startups y pequeños proyectos",
        icon: Zap,
        popular: false,
        features: [
            "Hasta 3 proyectos activos",
            "Componentes UI básicos",
            "Soporte por email",
            "Documentación completa",
            "Actualizaciones mensuales",
            "Hosting básico incluido",
        ],
        cta: "Comenzar Gratis",
        ctaLink: "/contacto?plan=basico",
    },
    {
        name: "Profesional",
        price: "$599",
        period: "/mes",
        description: "Ideal para equipos en crecimiento",
        icon: Crown,
        popular: true,
        features: [
            "Proyectos ilimitados",
            "Biblioteca completa de componentes",
            "Soporte prioritario 24/7",
            "Consultoría técnica incluida",
            "Actualizaciones semanales",
            "Hosting premium + CDN",
            "Integración con APIs",
            "Análisis y métricas",
        ],
        cta: "Más Popular",
        ctaLink: "/contacto?plan=profesional",
    },
    {
        name: "Enterprise",
        price: "Custom",
        period: "",
        description: "Soluciones personalizadas para grandes empresas",
        icon: Rocket,
        popular: false,
        features: [
            "Todo lo del plan Profesional",
            "Desarrollo personalizado",
            "Arquitectura escalable",
            "Soporte dedicado",
            "SLA garantizado",
            "Integración con sistemas existentes",
            "Capacitación del equipo",
            "Mantenimiento y actualizaciones",
        ],
        cta: "Contactar Ventas",
        ctaLink: "/contacto?plan=enterprise",
    },
];

const services = [
    {
        title: "Desarrollo Web",
        description: "Sitios web modernos y responsivos",
        icon: Globe,
        startingPrice: "$1,499",
        features: [
            "Diseño responsive",
            "SEO optimizado",
            "Performance optimizada",
            "CMS integrado",
        ],
    },
    {
        title: "Aplicaciones Móviles",
        description: "Apps nativas para iOS y Android",
        icon: Smartphone,
        startingPrice: "$3,999",
        features: [
            "Multiplataforma",
            "UI/UX nativo",
            "Push notifications",
            "App Store deployment",
        ],
    },
    {
        title: "Sistemas Personalizados",
        description: "Software a medida para tu negocio",
        icon: Code,
        startingPrice: "$5,999",
        features: [
            "Arquitectura escalable",
            "Integración APIs",
            "Base de datos custom",
            "Panel de administración",
        ],
    },
    {
        title: "Diseño UI/UX",
        description: "Interfaces que conectan con usuarios",
        icon: Palette,
        startingPrice: "$899",
        features: [
            "Research de usuarios",
            "Wireframes",
            "Prototipos interactivos",
            "Design system",
        ],
    },
];

const faqs = [
    {
        question: "¿Puedo cambiar de plan en cualquier momento?",
        answer: "Sí, puedes actualizar o reducir tu plan en cualquier momento. Los cambios se reflejan en tu próxima facturación.",
    },
    {
        question: "¿Ofrecen garantía de devolución de dinero?",
        answer: "Ofrecemos una garantía de 30 días. Si no estás satisfecho, te devolvemos el 100% de tu dinero.",
    },
    {
        question: "¿Qué incluye el soporte técnico?",
        answer: "Nuestro soporte incluye asistencia técnica, resolución de bugs, consultas sobre implementación y actualizaciones.",
    },
    {
        question: "¿Los precios incluyen impuestos?",
        answer: "Los precios mostrados no incluyen impuestos. Los impuestos se calculan según tu ubicación geográfica.",
    },
];
---

<Layout
    title="Precios - DevsHub"
    description="Conoce nuestros planes de precios flexibles y servicios personalizados. Desde startups hasta empresas, tenemos la solución perfecta para ti."
>
    <main class="min-h-screen pt-24">
        <!-- Hero Section -->
        <section class="py-20 bg-gradient-to-br from-primary/5 to-primary/10">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto text-center">
                    <Badge className="mb-4">Precios</Badge>
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        Planes que se adaptan a <span class="text-primary"
                            >tu crecimiento</span
                        >
                    </h1>
                    <p class="text-xl text-muted-foreground mb-8">
                        Desde startups hasta grandes empresas, tenemos la
                        solución perfecta para impulsar tu negocio digital.
                    </p>
                    <div class="flex items-center justify-center gap-4 mb-8">
                        <span class="text-muted-foreground">Mensual</span>
                        <div class="relative">
                            <input
                                type="checkbox"
                                id="billing-toggle"
                                class="sr-only"
                            />
                            <label
                                for="billing-toggle"
                                class="block w-12 h-6 bg-gray-300 rounded-full cursor-pointer"
                            ></label>
                        </div>
                        <span class="text-muted-foreground"
                            >Anual <Badge variant="secondary" className="ml-2"
                                >-20%</Badge
                            ></span
                        >
                    </div>
                </div>
            </div>
        </section>

        <!-- Pricing Plans -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div
                    class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto"
                >
                    {
                        plans.map((plan) => (
                            <Card
                                className={`relative border-0 shadow-lg transition-all duration-300 hover:shadow-xl ${plan.popular ? "ring-2 ring-primary scale-105" : ""}`}
                            >
                                {plan.popular && (
                                    <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                                        <Badge className="px-4 py-1 bg-primary text-primary-foreground">
                                            <Star className="w-3 h-3 mr-1" />
                                            Más Popular
                                        </Badge>
                                    </div>
                                )}

                                <CardHeader className="text-center pb-8">
                                    <div class="mx-auto mb-4 p-3 rounded-lg bg-primary/10 w-fit">
                                        <plan.icon className="w-8 h-8 text-primary" />
                                    </div>
                                    <CardTitle className="text-2xl font-bold">
                                        {plan.name}
                                    </CardTitle>
                                    <p class="text-muted-foreground mt-2">
                                        {plan.description}
                                    </p>
                                    <div class="mt-6">
                                        <span class="text-4xl font-bold text-primary">
                                            {plan.price}
                                        </span>
                                        <span class="text-muted-foreground">
                                            {plan.period}
                                        </span>
                                    </div>
                                </CardHeader>

                                <CardContent className="space-y-6">
                                    <ul class="space-y-3">
                                        {plan.features.map((feature) => (
                                            <li class="flex items-start gap-3">
                                                <Check className="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" />
                                                <span class="text-sm">
                                                    {feature}
                                                </span>
                                            </li>
                                        ))}
                                    </ul>

                                    <a
                                        href={plan.ctaLink}
                                        class={`w-full inline-flex items-center justify-center px-6 py-3 rounded-lg font-medium transition-colors ${
                                            plan.popular
                                                ? "bg-primary text-primary-foreground hover:bg-primary/90"
                                                : "border border-input hover:bg-accent hover:text-accent-foreground"
                                        }`}
                                    >
                                        {plan.cta}
                                    </a>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Services Section -->
        <section class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Servicios Personalizados
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Además de nuestros planes, ofrecemos servicios de
                        desarrollo completamente personalizados.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
                >
                    {
                        services.map((service) => (
                            <Card className="border-0 shadow-md hover:shadow-lg transition-all duration-300 group">
                                <CardHeader className="text-center">
                                    <div class="mx-auto mb-4 p-3 rounded-lg bg-primary/10 w-fit group-hover:bg-primary/20 transition-colors">
                                        <service.icon className="w-6 h-6 text-primary" />
                                    </div>
                                    <CardTitle className="text-lg">
                                        {service.title}
                                    </CardTitle>
                                    <p class="text-sm text-muted-foreground mt-2">
                                        {service.description}
                                    </p>
                                </CardHeader>
                                <CardContent className="space-y-4">
                                    <div class="text-center">
                                        <span class="text-2xl font-bold text-primary">
                                            Desde {service.startingPrice}
                                        </span>
                                    </div>
                                    <ul class="space-y-2">
                                        {service.features.map((feature) => (
                                            <li class="flex items-center gap-2">
                                                <div class="w-1.5 h-1.5 rounded-full bg-primary flex-shrink-0" />
                                                <span class="text-xs text-muted-foreground">
                                                    {feature}
                                                </span>
                                            </li>
                                        ))}
                                    </ul>
                                    <a
                                        href="/contacto?service={service.title.toLowerCase().replace(' ', '-')}"
                                        class="w-full inline-flex items-center justify-center px-4 py-2 border border-input rounded-lg text-sm font-medium hover:bg-accent hover:text-accent-foreground transition-colors"
                                    >
                                        Solicitar Cotización
                                    </a>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Features Comparison -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        ¿Por qué elegir DevsHub?
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Más que un proveedor de servicios, somos tu socio
                        tecnológico de confianza.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
                >
                    <div class="text-center">
                        <div
                            class="mx-auto mb-4 p-3 rounded-lg bg-green-100 w-fit"
                        >
                            <Shield className="w-8 h-8 text-green-600" />
                        </div>
                        <h3 class="font-semibold mb-2">Garantía de Calidad</h3>
                        <p class="text-sm text-muted-foreground">
                            Código limpio, probado y documentado
                        </p>
                    </div>
                    <div class="text-center">
                        <div
                            class="mx-auto mb-4 p-3 rounded-lg bg-blue-100 w-fit"
                        >
                            <Clock className="w-8 h-8 text-blue-600" />
                        </div>
                        <h3 class="font-semibold mb-2">Entrega Puntual</h3>
                        <p class="text-sm text-muted-foreground">
                            Cumplimos con los plazos acordados
                        </p>
                    </div>
                    <div class="text-center">
                        <div
                            class="mx-auto mb-4 p-3 rounded-lg bg-purple-100 w-fit"
                        >
                            <MessageCircle
                                className="w-8 h-8 text-purple-600"
                            />
                        </div>
                        <h3 class="font-semibold mb-2">
                            Comunicación Constante
                        </h3>
                        <p class="text-sm text-muted-foreground">
                            Updates regulares del progreso
                        </p>
                    </div>
                    <div class="text-center">
                        <div
                            class="mx-auto mb-4 p-3 rounded-lg bg-orange-100 w-fit"
                        >
                            <Zap className="w-8 h-8 text-orange-600" />
                        </div>
                        <h3 class="font-semibold mb-2">Soporte Continuo</h3>
                        <p class="text-sm text-muted-foreground">
                            Asistencia post-lanzamiento
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- FAQ Section -->
        <section class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Preguntas Frecuentes
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Resolvemos las dudas más comunes sobre nuestros
                        servicios y precios.
                    </p>
                </div>

                <div class="max-w-3xl mx-auto space-y-6">
                    {
                        faqs.map((faq) => (
                            <Card className="border-0 shadow-md">
                                <CardContent className="p-6">
                                    <h3 class="font-semibold text-lg mb-3">
                                        {faq.question}
                                    </h3>
                                    <p class="text-muted-foreground">
                                        {faq.answer}
                                    </p>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <Card
                    className="border-0 shadow-lg bg-gradient-to-r from-primary to-primary/80 text-primary-foreground"
                >
                    <CardContent className="p-12 text-center">
                        <h2 class="text-3xl md:text-4xl font-bold mb-6">
                            ¿Listo para comenzar tu proyecto?
                        </h2>
                        <p class="text-lg opacity-90 mb-8 max-w-2xl mx-auto">
                            Agenda una consultoría gratuita y descubre cómo
                            podemos ayudarte a alcanzar tus objetivos digitales.
                        </p>
                        <div
                            class="flex flex-col sm:flex-row gap-4 justify-center"
                        >
                            <a
                                href="/contacto"
                                class="inline-flex items-center justify-center px-8 py-3 bg-white text-primary rounded-lg font-medium hover:bg-gray-100 transition-colors"
                            >
                                Consultoría Gratuita
                            </a>
                            <a
                                href="/productos"
                                class="inline-flex items-center justify-center px-8 py-3 border border-white/20 rounded-lg font-medium hover:bg-white/10 transition-colors"
                            >
                                Ver Productos
                            </a>
                        </div>
                    </CardContent>
                </Card>
            </div>
        </section>
    </main>
</Layout>
