---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import {
    CheckCircle,
    Code,
    Palette,
    Zap,
    Download,
    Github,
} from "lucide-react";
import { DaisyUI, HeroUI, Shadcnui } from "@/components/icons";

const features = [
    {
        icon: Code,
        title: "Inspirado en shadcn/ui",
        description:
            "Arquitectura basada en shadcn/ui con componentes headless y primitivos de Radix UI.",
    },
    {
        icon: Palette,
        title: "Estilo daisyUI y NextUI",
        description:
            "Combina la elegancia de NextUI con la simplicidad de daisyUI en una experiencia cohesiva.",
    },
    {
        icon: Zap,
        title: "Copy & Paste Ready",
        description:
            "Al estilo shadcn/ui: copia el código y personalízalo según tus necesidades específicas.",
    },
    {
        icon: CheckCircle,
        title: "Accesibilidad First",
        description:
            "Basado en Radix UI primitives como shadcn/ui, garantizando accesibilidad WCAG 2.1 AA.",
    },
];
---

<Layout
    title="Componentes UI - Devanthos"
    description="Biblioteca completa de componentes UI modernos, accesibles y customizables para acelerar tu desarrollo."
>
    <main class="min-h-screen">
        <!-- Hero Section -->
        <section class="h-dvh md:py-40 md:h-fit relative overflow-hidden">
            <div
                class="absolute inset-0 bg-gradient-to-br from-primary/50 via-transparent to-accent/50"
            >
            </div>
            <div
                class="absolute -top-40 -right-40 w-80 h-80 bg-primary/60 rounded-full blur-3xl"
            >
            </div>
            <div
                class="absolute -bottom-40 -left-40 w-80 h-80 bg-accent/80 rounded-full blur-3xl"
            >
            </div>
            <div
                class="container h-full flex justify-center items-center mx-auto px-4"
            >
                <div class="max-w-4xl mx-auto text-center">
                    <Badge className="mb-4">Componentes UI</Badge>
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        Biblioteca de <span class="text-primary"
                            >Componentes</span
                        > Moderna
                    </h1>
                    <p class="text-xl text-muted-foreground mb-8">
                        Biblioteca completa inspirada en shadcn/ui, daisyUI y
                        NextUI. Más de 50 componentes pre-construidos, probados
                        y listos para usar con Tailwind CSS, React y frameworks
                        modernos.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a
                            href="#bibliotecas"
                            class="inline-flex items-center justify-center px-8 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors"
                        >
                            <Download className="w-4 h-4 mr-2" />
                            Ver Bibliotecas
                        </a>
                        <a
                            href="https://github.com/devsHub/ui-components"
                            class="inline-flex items-center justify-center px-8 py-3 border border-input rounded-lg font-medium hover:bg-accent hover:text-accent-foreground transition-colors"
                        >
                            <Github className="w-4 h-4 mr-2" />
                            GitHub
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        ¿Por qué elegir nuestros componentes?
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Combinamos lo mejor de shadcn/ui, daisyUI y NextUI en
                        una biblioteca cohesiva y moderna.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
                >
                    {
                        features.map((feature) => (
                            <Card className="text-center border-0 shadow-md">
                                <CardHeader>
                                    <div class="mx-auto mb-4 p-3 rounded-lg bg-primary/10 w-fit">
                                        <feature.icon className="w-8 h-8 text-primary" />
                                    </div>
                                    <CardTitle className="text-xl">
                                        {feature.title}
                                    </CardTitle>
                                </CardHeader>
                                <CardContent>
                                    <p class="text-muted-foreground">
                                        {feature.description}
                                    </p>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Libraries Comparison -->
        <section id="bibliotecas" class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Lo mejor de cada biblioteca
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
                        Nuestra biblioteca combina las fortalezas de las mejores
                        herramientas de UI del ecosistema React y Tailwind CSS.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 lg:grid-cols-3 gap-8 max-w-6xl mx-auto"
                >
                    <Card
                        className="border-0 shadow-lg relative overflow-hidden"
                    >
                        <div
                            class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-orange-500 to-red-500"
                        >
                        </div>
                        <CardHeader className="text-center pb-4">
                            <div
                                class="mx-auto mb-4 p-4 rounded-lg bg-orange-100 dark:bg-orange-900/20 w-fit"
                            >
                                <Shadcnui
                                    className="w-10 h-10 text-orange-600"
                                />
                            </div>
                            <CardTitle className="text-2xl">
                                shadcn/ui
                            </CardTitle>
                            <Badge
                                variant="secondary"
                                className="w-fit mx-auto mt-2"
                            >
                                Copy & Paste
                            </Badge>
                        </CardHeader>
                        <CardContent className="space-y-4">
                            <p class="text-muted-foreground text-center">
                                Arquitectura headless con primitivos de Radix UI
                            </p>
                            <ul class="space-y-2">
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >Primitivos de Radix UI</span
                                    >
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >Totalmente customizable</span
                                    >
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >TypeScript nativo</span
                                    >
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >No hay dependencias externas</span
                                    >
                                </li>
                            </ul>
                            <div class="pt-4">
                                <a
                                    href="https://ui.shadcn.com"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="inline-flex items-center justify-center w-full px-4 py-2 bg-orange-600 text-white rounded-lg font-medium hover:bg-orange-700 transition-colors"
                                >
                                    Visitar shadcn/ui
                                    <svg
                                        class="w-4 h-4 ml-2"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                        ></path>
                                    </svg>
                                </a>
                            </div>
                        </CardContent>
                    </Card>

                    <Card
                        className="border-0 shadow-lg relative overflow-hidden"
                    >
                        <div
                            class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-purple-500 to-pink-500"
                        >
                        </div>
                        <CardHeader className="text-center pb-4">
                            <div
                                class="mx-auto mb-4 p-4 rounded-lg bg-purple-100 dark:bg-purple-900/20 w-fit"
                            >
                                <DaisyUI
                                    className="w-10 h-10 text-purple-600"
                                />
                            </div>
                            <CardTitle className="text-2xl">
                                daisyUI
                            </CardTitle>
                            <Badge
                                variant="secondary"
                                className="w-fit mx-auto mt-2"
                            >
                                CSS Classes
                            </Badge>
                        </CardHeader>
                        <CardContent className="space-y-4">
                            <p class="text-muted-foreground text-center">
                                Componentes semánticos con clases CSS simples
                            </p>
                            <ul class="space-y-2">
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >Sintaxis intuitiva</span
                                    >
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm">Múltiples temas</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >Framework agnóstico</span
                                    >
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >Fácil implementación</span
                                    >
                                </li>
                            </ul>
                            <div class="pt-4">
                                <a
                                    href="https://daisyui.com"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="inline-flex items-center justify-center w-full px-4 py-2 bg-purple-600 text-white rounded-lg font-medium hover:bg-purple-700 transition-colors"
                                >
                                    Visitar daisyUI
                                    <svg
                                        class="w-4 h-4 ml-2"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                        ></path>
                                    </svg>
                                </a>
                            </div>
                        </CardContent>
                    </Card>

                    <Card
                        className="border-0 shadow-lg relative overflow-hidden"
                    >
                        <div
                            class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-500 to-cyan-500"
                        >
                        </div>
                        <CardHeader className="text-center pb-4">
                            <div
                                class="mx-auto mb-4 p-4 rounded-lg bg-blue-100 dark:bg-blue-900/20 w-fit"
                            >
                                <HeroUI className="w-10 h-10 text-blue-600" />
                            </div>
                            <CardTitle className="text-2xl"> NextUI </CardTitle>
                            <Badge
                                variant="secondary"
                                className="w-fit mx-auto mt-2"
                            >
                                Modern Design
                            </Badge>
                        </CardHeader>
                        <CardContent className="space-y-4">
                            <p class="text-muted-foreground text-center">
                                Componentes modernos con diseño elegante
                            </p>
                            <ul class="space-y-2">
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm">Diseño moderno</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >Animaciones fluidas</span
                                    >
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm">Theming avanzado</span
                                    >
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >Performance optimizada</span
                                    >
                                </li>
                            </ul>
                            <div class="pt-4">
                                <a
                                    href="https://nextui.org"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="inline-flex items-center justify-center w-full px-4 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-colors"
                                >
                                    Visitar NextUI
                                    <svg
                                        class="w-4 h-4 ml-2"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                        ></path>
                                    </svg>
                                </a>
                            </div>
                        </CardContent>
                    </Card>
                </div>

                <div class="text-center mt-12">
                    <Card
                        className="max-w-4xl mx-auto border-2 border-primary/20 bg-primary/5"
                    >
                        <CardHeader>
                            <CardTitle className="text-xl text-primary">
                                🎯 Nuestra Propuesta de Valor
                            </CardTitle>
                        </CardHeader>
                        <CardContent>
                            <p class="text-muted-foreground">
                                Combinamos la <strong
                                    >flexibilidad de shadcn/ui</strong
                                >, la <strong>simplicidad de daisyUI</strong> y el
                                <strong>diseño moderno de NextUI</strong> en una
                                biblioteca cohesiva que se adapta a cualquier proyecto.
                            </p>
                        </CardContent>
                    </Card>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-20 bg-primary text-primary-foreground">
            <div class="container mx-auto px-4 text-center">
                <div class="max-w-3xl mx-auto">
                    <h2 class="text-3xl md:text-4xl font-bold mb-6">
                        Lo mejor de shadcn/ui, daisyUI y NextUI
                    </h2>
                    <p class="text-lg opacity-90 mb-8">
                        Únete a miles de desarrolladores que ya están usando
                        nuestra biblioteca híbrida para crear interfaces
                        increíbles más rápido con la flexibilidad que necesitas.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a
                            href="/contacto"
                            class="inline-flex items-center justify-center px-8 py-3 bg-white text-primary rounded-lg font-medium hover:bg-gray-100 transition-colors"
                        >
                            Comenzar Ahora
                        </a>
                        <a
                            href="/productos/documentacion"
                            class="inline-flex items-center justify-center px-8 py-3 border border-white/20 rounded-lg font-medium hover:bg-white/10 transition-colors"
                        >
                            Ver Documentación
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
