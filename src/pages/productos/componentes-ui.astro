---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import {
    CheckCircle,
    Code,
    Palette,
    Zap,
    Download,
    Github,
} from "lucide-react";
import { DaisyUI, HeroUI, Shadcnui } from "@/components/icons";

const components = [
    {
        category: "Navegación",
        items: [
            "Header",
            "Navbar",
            "Breadcrumb",
            "Pagination",
            "Tabs",
            "Sidebar",
        ],
    },
    {
        category: "Formularios",
        items: [
            "Input",
            "Button",
            "Select",
            "Checkbox",
            "Radio",
            "Textarea",
            "Switch",
        ],
    },
    {
        category: "Feedback",
        items: [
            "Alert",
            "Toast",
            "Modal",
            "Tooltip",
            "Progress",
            "Skeleton",
            "Loading",
        ],
    },
    {
        category: "Layout",
        items: ["Container", "Grid", "Card", "Divider", "Spacer", "Stack"],
    },
    {
        category: "Datos",
        items: ["Table", "List", "Badge", "Avatar", "Tag", "Timeline"],
    },
];

const features = [
    {
        icon: Code,
        title: "Inspirado en shadcn/ui",
        description:
            "Arquitectura basada en shadcn/ui con componentes headless y primitivos de Radix UI.",
    },
    {
        icon: Palette,
        title: "Estilo daisyUI y NextUI",
        description:
            "Combina la elegancia de NextUI con la simplicidad de daisyUI en una experiencia cohesiva.",
    },
    {
        icon: Zap,
        title: "Copy & Paste Ready",
        description:
            "Al estilo shadcn/ui: copia el código y personalízalo según tus necesidades específicas.",
    },
    {
        icon: CheckCircle,
        title: "Accesibilidad First",
        description:
            "Basado en Radix UI primitives como shadcn/ui, garantizando accesibilidad WCAG 2.1 AA.",
    },
];
---

<Layout
    title="Componentes UI - DevsHub"
    description="Biblioteca completa de componentes UI modernos, accesibles y customizables para acelerar tu desarrollo."
>
    <main class="min-h-screen pt-24">
        <!-- Hero Section -->
        <section
            class="py-20 bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-blue-950/20 dark:to-indigo-950/20"
        >
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto text-center">
                    <Badge className="mb-4">Componentes UI</Badge>
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        Biblioteca de <span class="text-primary"
                            >Componentes</span
                        > Moderna
                    </h1>
                    <p class="text-xl text-muted-foreground mb-8">
                        Biblioteca completa inspirada en shadcn/ui, daisyUI y
                        NextUI. Más de 50 componentes pre-construidos, probados
                        y listos para usar con Tailwind CSS, React y frameworks
                        modernos.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a
                            href="#componentes"
                            class="inline-flex items-center justify-center px-8 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors"
                        >
                            <Download className="w-4 h-4 mr-2" />
                            Ver Componentes
                        </a>
                        <a
                            href="https://github.com/devsHub/ui-components"
                            class="inline-flex items-center justify-center px-8 py-3 border border-input rounded-lg font-medium hover:bg-accent hover:text-accent-foreground transition-colors"
                        >
                            <Github className="w-4 h-4 mr-2" />
                            GitHub
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        ¿Por qué elegir nuestros componentes?
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Combinamos lo mejor de shadcn/ui, daisyUI y NextUI en
                        una biblioteca cohesiva y moderna.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
                >
                    {
                        features.map((feature) => (
                            <Card className="text-center border-0 shadow-md">
                                <CardHeader>
                                    <div class="mx-auto mb-4 p-3 rounded-lg bg-primary/10 w-fit">
                                        <feature.icon className="w-8 h-8 text-primary" />
                                    </div>
                                    <CardTitle className="text-xl">
                                        {feature.title}
                                    </CardTitle>
                                </CardHeader>
                                <CardContent>
                                    <p class="text-muted-foreground">
                                        {feature.description}
                                    </p>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Libraries Comparison -->
        <section class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Lo mejor de cada biblioteca
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
                        Nuestra biblioteca combina las fortalezas de las mejores
                        herramientas de UI del ecosistema React y Tailwind CSS.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 lg:grid-cols-3 gap-8 max-w-6xl mx-auto"
                >
                    <Card
                        className="border-0 shadow-lg relative overflow-hidden"
                    >
                        <div
                            class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-orange-500 to-red-500"
                        >
                        </div>
                        <CardHeader className="text-center pb-4">
                            <div
                                class="mx-auto mb-4 p-4 rounded-lg bg-orange-100 dark:bg-orange-900/20 w-fit"
                            >
                                <Shadcnui
                                    className="w-10 h-10 text-orange-600"
                                />
                            </div>
                            <CardTitle className="text-2xl">
                                shadcn/ui
                            </CardTitle>
                            <Badge
                                variant="secondary"
                                className="w-fit mx-auto mt-2"
                            >
                                Copy & Paste
                            </Badge>
                        </CardHeader>
                        <CardContent className="space-y-4">
                            <p class="text-muted-foreground text-center">
                                Arquitectura headless con primitivos de Radix UI
                            </p>
                            <ul class="space-y-2">
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >Primitivos de Radix UI</span
                                    >
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >Totalmente customizable</span
                                    >
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >TypeScript nativo</span
                                    >
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >No hay dependencias externas</span
                                    >
                                </li>
                            </ul>
                        </CardContent>
                    </Card>

                    <Card
                        className="border-0 shadow-lg relative overflow-hidden"
                    >
                        <div
                            class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-purple-500 to-pink-500"
                        >
                        </div>
                        <CardHeader className="text-center pb-4">
                            <div
                                class="mx-auto mb-4 p-4 rounded-lg bg-purple-100 dark:bg-purple-900/20 w-fit"
                            >
                                <DaisyUI
                                    className="w-10 h-10 text-purple-600"
                                />
                            </div>
                            <CardTitle className="text-2xl">
                                daisyUI
                            </CardTitle>
                            <Badge
                                variant="secondary"
                                className="w-fit mx-auto mt-2"
                            >
                                CSS Classes
                            </Badge>
                        </CardHeader>
                        <CardContent className="space-y-4">
                            <p class="text-muted-foreground text-center">
                                Componentes semánticos con clases CSS simples
                            </p>
                            <ul class="space-y-2">
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >Sintaxis intuitiva</span
                                    >
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm">Múltiples temas</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >Framework agnóstico</span
                                    >
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >Fácil implementación</span
                                    >
                                </li>
                            </ul>
                        </CardContent>
                    </Card>

                    <Card
                        className="border-0 shadow-lg relative overflow-hidden"
                    >
                        <div
                            class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-500 to-cyan-500"
                        >
                        </div>
                        <CardHeader className="text-center pb-4">
                            <div
                                class="mx-auto mb-4 p-4 rounded-lg bg-blue-100 dark:bg-blue-900/20 w-fit"
                            >
                                <HeroUI className="w-10 h-10 text-blue-600" />
                            </div>
                            <CardTitle className="text-2xl"> NextUI </CardTitle>
                            <Badge
                                variant="secondary"
                                className="w-fit mx-auto mt-2"
                            >
                                Modern Design
                            </Badge>
                        </CardHeader>
                        <CardContent className="space-y-4">
                            <p class="text-muted-foreground text-center">
                                Componentes modernos con diseño elegante
                            </p>
                            <ul class="space-y-2">
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm">Diseño moderno</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >Animaciones fluidas</span
                                    >
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm">Theming avanzado</span
                                    >
                                </li>
                                <li class="flex items-center gap-2">
                                    <CheckCircle
                                        className="w-4 h-4 text-green-500 flex-shrink-0"
                                    />
                                    <span class="text-sm"
                                        >Performance optimizada</span
                                    >
                                </li>
                            </ul>
                        </CardContent>
                    </Card>
                </div>

                <div class="text-center mt-12">
                    <Card
                        className="max-w-4xl mx-auto border-2 border-primary/20 bg-primary/5"
                    >
                        <CardHeader>
                            <CardTitle className="text-xl text-primary">
                                🎯 Nuestra Propuesta de Valor
                            </CardTitle>
                        </CardHeader>
                        <CardContent>
                            <p class="text-muted-foreground">
                                Combinamos la <strong
                                    >flexibilidad de shadcn/ui</strong
                                >, la <strong>simplicidad de daisyUI</strong> y el
                                <strong>diseño moderno de NextUI</strong> en una
                                biblioteca cohesiva que se adapta a cualquier proyecto.
                            </p>
                        </CardContent>
                    </Card>
                </div>
            </div>
        </section>

        <!-- Components Grid -->
        <section id="componentes" class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Catálogo de Componentes
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
                        Explora nuestra colección inspirada en shadcn/ui,
                        daisyUI y NextUI. Cada componente está optimizado para
                        Tailwind CSS y frameworks modernos.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-8"
                >
                    {
                        components.map((category) => (
                            <Card className="border-0 shadow-md">
                                <CardHeader>
                                    <CardTitle className="text-xl text-primary">
                                        {category.category}
                                    </CardTitle>
                                </CardHeader>
                                <CardContent>
                                    <div class="grid grid-cols-2 gap-3">
                                        {category.items.map((item) => (
                                            <div class="p-3 rounded-lg bg-background border hover:shadow-sm transition-shadow cursor-pointer group">
                                                <span class="text-sm font-medium group-hover:text-primary transition-colors">
                                                    {item}
                                                </span>
                                            </div>
                                        ))}
                                    </div>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Usage Section -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto">
                    <div class="text-center mb-12">
                        <h2 class="text-3xl md:text-4xl font-bold mb-4">
                            Cómo Usar Nuestros Componentes
                        </h2>
                        <p class="text-lg text-muted-foreground">
                            Explora ejemplos prácticos y descubre los beneficios
                            de usar nuestros componentes híbridos en tus
                            proyectos.
                        </p>
                    </div>

                    <div class="space-y-8">
                        <!-- Button Examples -->
                        <Card className="border-0 shadow-md">
                            <CardHeader>
                                <CardTitle className="flex items-center gap-2">
                                    <span
                                        class="flex items-center justify-center w-8 h-8 rounded-full bg-orange-500 text-white text-sm font-bold"
                                        >1</span
                                    >
                                    Botones Versátiles
                                </CardTitle>
                                <p class="text-sm text-muted-foreground">
                                    Un componente, múltiples estilos y casos de
                                    uso
                                </p>
                            </CardHeader>
                            <CardContent>
                                <div class="space-y-4">
                                    <div
                                        class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4"
                                    >
                                        <div
                                            class="p-4 bg-muted/50 rounded-lg text-center"
                                        >
                                            <div class="mb-2">
                                                <button
                                                    class="bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary/90 transition-colors"
                                                >
                                                    Primario
                                                </button>
                                            </div>
                                            <p
                                                class="text-xs text-muted-foreground"
                                            >
                                                Acciones principales
                                            </p>
                                        </div>
                                        <div
                                            class="p-4 bg-muted/50 rounded-lg text-center"
                                        >
                                            <div class="mb-2">
                                                <button
                                                    class="border border-input px-4 py-2 rounded-lg hover:bg-accent transition-colors"
                                                >
                                                    Secundario
                                                </button>
                                            </div>
                                            <p
                                                class="text-xs text-muted-foreground"
                                            >
                                                Acciones secundarias
                                            </p>
                                        </div>
                                        <div
                                            class="p-4 bg-muted/50 rounded-lg text-center"
                                        >
                                            <div class="mb-2">
                                                <button
                                                    class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition-colors"
                                                >
                                                    Destructivo
                                                </button>
                                            </div>
                                            <p
                                                class="text-xs text-muted-foreground"
                                            >
                                                Acciones críticas
                                            </p>
                                        </div>
                                    </div>
                                    <div
                                        class="bg-muted rounded-lg p-4 font-mono text-sm"
                                    >
                                        <div class="text-green-600">
                                            // Ejemplo de uso
                                        </div>
                                        <div>
                                            &lt;Button variant="primary"
                                            size="md"&gt;Guardar&lt;/Button&gt;
                                        </div>
                                        <div>
                                            &lt;Button variant="outline"
                                            size="md"&gt;Cancelar&lt;/Button&gt;
                                        </div>
                                        <div>
                                            &lt;Button variant="destructive"
                                            size="md"&gt;Eliminar&lt;/Button&gt;
                                        </div>
                                    </div>
                                </div>
                            </CardContent>
                        </Card>

                        <!-- Form Components -->
                        <Card className="border-0 shadow-md">
                            <CardHeader>
                                <CardTitle className="flex items-center gap-2">
                                    <span
                                        class="flex items-center justify-center w-8 h-8 rounded-full bg-purple-500 text-white text-sm font-bold"
                                        >2</span
                                    >
                                    Formularios Inteligentes
                                </CardTitle>
                                <p class="text-sm text-muted-foreground">
                                    Componentes de formulario con validación y
                                    accesibilidad
                                </p>
                            </CardHeader>
                            <CardContent>
                                <div class="space-y-4">
                                    <div
                                        class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4"
                                    >
                                        <div class="space-y-3">
                                            <label class="text-sm font-medium"
                                                >Nombre completo</label
                                            >
                                            <input
                                                type="text"
                                                placeholder="Ingresa tu nombre"
                                                class="w-full px-3 py-2 border border-input rounded-lg focus:outline-none focus:ring-2 focus:ring-primary/50"
                                            />
                                        </div>
                                        <div class="space-y-3">
                                            <label class="text-sm font-medium"
                                                >Email</label
                                            >
                                            <input
                                                type="email"
                                                placeholder="tu@email.com"
                                                class="w-full px-3 py-2 border border-input rounded-lg focus:outline-none focus:ring-2 focus:ring-primary/50"
                                            />
                                        </div>
                                    </div>
                                    <div
                                        class="bg-muted rounded-lg p-4 font-mono text-sm"
                                    >
                                        <div class="text-green-600">
                                            // Validación automática
                                        </div>
                                        <div>&lt;Input</div>
                                        <div class="ml-2">type="email"</div>
                                        <div class="ml-2">
                                            validation="required|email"
                                        </div>
                                        <div class="ml-2">
                                            errorMessage="Email inválido"
                                        </div>
                                        <div>/&gt;</div>
                                    </div>
                                </div>
                            </CardContent>
                        </Card>

                        <!-- Cards and Layout -->
                        <Card className="border-0 shadow-md">
                            <CardHeader>
                                <CardTitle className="flex items-center gap-2">
                                    <span
                                        class="flex items-center justify-center w-8 h-8 rounded-full bg-blue-500 text-white text-sm font-bold"
                                        >3</span
                                    >
                                    Layouts Responsivos
                                </CardTitle>
                                <p class="text-sm text-muted-foreground">
                                    Cards y contenedores que se adaptan
                                    perfectamente
                                </p>
                            </CardHeader>
                            <CardContent>
                                <div class="space-y-4">
                                    <div
                                        class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4"
                                    >
                                        <div
                                            class="p-4 border border-border rounded-lg bg-card"
                                        >
                                            <h4 class="font-semibold mb-2">
                                                Card Básico
                                            </h4>
                                            <p
                                                class="text-sm text-muted-foreground mb-3"
                                            >
                                                Descripción del contenido del
                                                card.
                                            </p>
                                            <button
                                                class="text-primary text-sm hover:underline"
                                                >Ver más →</button
                                            >
                                        </div>
                                        <div
                                            class="p-4 border border-border rounded-lg bg-card shadow-lg"
                                        >
                                            <h4 class="font-semibold mb-2">
                                                Card con Sombra
                                            </h4>
                                            <p
                                                class="text-sm text-muted-foreground mb-3"
                                            >
                                                Card elevado con sombra sutil.
                                            </p>
                                            <button
                                                class="text-primary text-sm hover:underline"
                                                >Ver más →</button
                                            >
                                        </div>
                                    </div>
                                    <div
                                        class="bg-muted rounded-lg p-4 font-mono text-sm"
                                    >
                                        <div class="text-green-600">
                                            // Responsive por defecto
                                        </div>
                                        <div>
                                            &lt;Card className="hover:shadow-lg
                                            transition-shadow"&gt;
                                        </div>
                                        <div class="ml-2">
                                            &lt;CardHeader&gt;Título&lt;/CardHeader&gt;
                                        </div>
                                        <div class="ml-2">
                                            &lt;CardContent&gt;Contenido&lt;/CardContent&gt;
                                        </div>
                                        <div>&lt;/Card&gt;</div>
                                    </div>
                                </div>
                            </CardContent>
                        </Card>

                        <!-- Interactive Components -->
                        <Card className="border-0 shadow-md">
                            <CardHeader>
                                <CardTitle className="flex items-center gap-2">
                                    <span
                                        class="flex items-center justify-center w-8 h-8 rounded-full bg-green-500 text-white text-sm font-bold"
                                        >4</span
                                    >
                                    Componentes Interactivos
                                </CardTitle>
                                <p class="text-sm text-muted-foreground">
                                    Modales, tooltips y elementos con
                                    animaciones fluidas
                                </p>
                            </CardHeader>
                            <CardContent>
                                <div class="space-y-4">
                                    <div class="flex flex-wrap gap-4 mb-4">
                                        <button
                                            class="relative group bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary/90 transition-colors"
                                        >
                                            Hover me
                                            <div
                                                class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-2 py-1 bg-gray-900 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity"
                                            >
                                                Tooltip example
                                            </div>
                                        </button>
                                        <div
                                            class="flex items-center space-x-2"
                                        >
                                            <span
                                                class="w-3 h-3 bg-green-500 rounded-full animate-pulse"
                                            ></span>
                                            <span class="text-sm"
                                                >Estado en vivo</span
                                            >
                                        </div>
                                        <div
                                            class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm"
                                        >
                                            Badge dinámico
                                        </div>
                                    </div>
                                    <div
                                        class="bg-muted rounded-lg p-4 font-mono text-sm"
                                    >
                                        <div class="text-green-600">
                                            // Interactividad incluida
                                        </div>
                                        <div>
                                            &lt;Tooltip content="Información
                                            útil"&gt;
                                        </div>
                                        <div class="ml-2">
                                            &lt;Button&gt;Hover
                                            aquí&lt;/Button&gt;
                                        </div>
