---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import {
    Palette,
    Grid,
    Type,
    Eye,
    Layers,
    Layout as LayoutIcon,
    Download,
    BookOpen,
    Zap,
    CheckCircle,
} from "lucide-react";
import { TailwindCSS } from "@/components/icons";

const designPrinciples = [
    {
        icon: Grid,
        title: "Sistema de Grid con Tailwind",
        description:
            "Grid responsivo basado en Flexbox y CSS Grid de Tailwind con breakpoints consistentes para todos los dispositivos.",
        features: [
            "Grid system de Tailwind",
            "Breakpoints: sm, md, lg, xl, 2xl",
            "Flexbox utilities",
            "Container responsive",
        ],
    },
    {
        icon: Type,
        title: "Tipografía Escalable",
        description:
            "Escala tipográfica armoniosa utilizando las utilidades de texto de Tailwind con jerarquía clara y legibilidad optimizada.",
        features: [
            "Tailwind text-* classes",
            "Font weights variables",
            "Line-height optimizado",
            "Responsive typography",
        ],
    },
    {
        icon: Palette,
        title: "Paleta de Colores Tailwind",
        description:
            "Sistema de colores coherente extendiendo la paleta de Tailwind con tokens semánticos personalizados para diferentes estados.",
        features: [
            "Tailwind color palette",
            "Custom color tokens",
            "Dark mode support",
            "Accesibilidad WCAG AA",
        ],
    },
    {
        icon: Eye,
        title: "Espaciado Consistente",
        description:
            "Sistema de espaciado basado en la escala de Tailwind (múltiplos de 0.25rem) para armonía visual perfecta.",
        features: [
            "Tailwind spacing scale",
            "Semantic spacing",
            "Margin/Padding utilities",
            "Responsive spacing",
        ],
    },
];

const designTokens = [
    {
        category: "Colores Tailwind",
        tokens: [
            {
                name: "bg-primary",
                value: "bg-blue-600",
                description: "Color primario - equivale a blue-600",
                tailwind: "bg-blue-600",
            },
            {
                name: "bg-secondary",
                value: "bg-slate-600",
                description: "Color secundario - equivale a slate-600",
                tailwind: "bg-slate-600",
            },
            {
                name: "bg-success",
                value: "bg-emerald-500",
                description: "Estados de éxito - equivale a emerald-500",
                tailwind: "bg-emerald-500",
            },
            {
                name: "bg-warning",
                value: "bg-amber-500",
                description: "Estados de advertencia - equivale a amber-500",
                tailwind: "bg-amber-500",
            },
            {
                name: "bg-error",
                value: "bg-red-500",
                description: "Estados de error - equivale a red-500",
                tailwind: "bg-red-500",
            },
        ],
    },
    {
        category: "Tipografía Tailwind",
        tokens: [
            {
                name: "text-xs",
                value: "0.75rem (12px)",
                description: "Texto muy pequeño",
                tailwind: "text-xs",
            },
            {
                name: "text-sm",
                value: "0.875rem (14px)",
                description: "Texto pequeño",
                tailwind: "text-sm",
            },
            {
                name: "text-base",
                value: "1rem (16px)",
                description: "Texto base",
                tailwind: "text-base",
            },
            {
                name: "text-lg",
                value: "1.125rem (18px)",
                description: "Texto grande",
                tailwind: "text-lg",
            },
            {
                name: "text-xl",
                value: "1.25rem (20px)",
                description: "Texto muy grande",
                tailwind: "text-xl",
            },
        ],
    },
    {
        category: "Espaciado Tailwind",
        tokens: [
            {
                name: "space-1",
                value: "0.25rem (4px)",
                description: "Espaciado mínimo",
                tailwind: "p-1, m-1, gap-1",
            },
            {
                name: "space-2",
                value: "0.5rem (8px)",
                description: "Espaciado pequeño",
                tailwind: "p-2, m-2, gap-2",
            },
            {
                name: "space-4",
                value: "1rem (16px)",
                description: "Espaciado base",
                tailwind: "p-4, m-4, gap-4",
            },
            {
                name: "space-8",
                value: "2rem (32px)",
                description: "Espaciado grande",
                tailwind: "p-8, m-8, gap-8",
            },
            {
                name: "space-16",
                value: "4rem (64px)",
                description: "Espaciado muy grande",
                tailwind: "p-16, m-16, gap-16",
            },
        ],
    },
];

const guidelines = [
    {
        title: "Utility-First con Tailwind",
        description:
            "Adopta el enfoque utility-first de Tailwind para construir interfaces rápidas y mantenibles con clases atómicas.",
        icon: Layers,
    },
    {
        title: "Accesibilidad Universal",
        description:
            "Implementa prácticas de accesibilidad usando las utilidades de Tailwind y asegura cumplimiento WCAG 2.1 AA.",
        icon: Eye,
    },
    {
        title: "Design System Escalable",
        description:
            "Extiende Tailwind con componentes personalizados y tokens semánticos para un sistema de diseño escalable.",
        icon: Zap,
    },
    {
        title: "Mobile-First Design",
        description:
            "Diseña con enfoque mobile-first usando los breakpoints responsivos de Tailwind para experiencias optimales.",
        icon: LayoutIcon,
    },
];
---

<Layout
    title="Diseño de Sistema - DevsHub"
    description="Sistema de diseño completo con tokens, guías de estilo y patrones reutilizables para crear interfaces consistentes y escalables."
>
    <main class="min-h-screen pt-24">
        <!-- Hero Section -->
        <section
            class="py-20 bg-gradient-to-br from-purple-50 to-blue-100 dark:from-purple-950/20 dark:to-blue-950/20"
        >
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto text-center">
                    <Badge className="mb-4">Diseño de Sistema</Badge>
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        Sistema de <span class="text-primary"
                            >Diseño Cohesivo</span
                        >
                    </h1>
                    <p class="text-xl text-muted-foreground mb-8">
                        Sistema de diseño basado en Tailwind CSS con tokens,
                        patrones y mejores prácticas que garantizan consistencia
                        visual y experiencia de usuario excepcional en todos tus
                        productos digitales.
                    </p>
                    <TailwindCSS className="h-10 w-2xl mx-auto mb-4" />
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a
                            href="#tokens"
                            class="inline-flex items-center justify-center px-8 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors"
                        >
                            <Download className="w-4 h-4 mr-2" />
                            Descargar Tokens
                        </a>
                        <a
                            href="#guias"
                            class="inline-flex items-center justify-center px-8 py-3 border border-input rounded-lg font-medium hover:bg-accent hover:text-accent-foreground transition-colors"
                        >
                            <BookOpen className="w-4 h-4 mr-2" />
                            Ver Guías
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Design Principles -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Fundamentos del Sistema
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Los pilares sobre los que construimos interfaces
                        consistentes y escalables.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
                >
                    {
                        designPrinciples.map((principle) => (
                            <Card className="border-0 shadow-md hover:shadow-lg transition-all duration-300 group">
                                <CardHeader className="text-center pb-4">
                                    <div class="mx-auto mb-4 p-3 rounded-lg bg-primary/10 w-fit group-hover:bg-primary/20 transition-colors">
                                        <principle.icon className="w-8 h-8 text-primary" />
                                    </div>
                                    <CardTitle className="text-xl">
                                        {principle.title}
                                    </CardTitle>
                                    <p class="text-sm text-muted-foreground mt-2">
                                        {principle.description}
                                    </p>
                                </CardHeader>
                                <CardContent>
                                    <ul class="space-y-2">
                                        {principle.features.map((feature) => (
                                            <li class="flex items-center gap-2">
                                                <CheckCircle className="w-4 h-4 text-green-500 flex-shrink-0" />
                                                <span class="text-sm">
                                                    {feature}
                                                </span>
                                            </li>
                                        ))}
                                    </ul>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Design Tokens -->
        <section id="tokens" class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Design Tokens con Tailwind
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Tokens semánticos basados en las utilidades de Tailwind
                        CSS que definen los elementos visuales de tu sistema de
                        diseño.
                    </p>
                </div>

                <div class="space-y-12">
                    {
                        designTokens.map((tokenGroup) => (
                            <div>
                                <h3 class="text-2xl font-bold mb-8 text-center">
                                    {tokenGroup.category}
                                </h3>
                                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                                    {tokenGroup.tokens.map((token) => (
                                        <Card className="border-0 shadow-md">
                                            <CardContent className="p-6">
                                                <div class="flex items-center justify-between mb-4">
                                                    <code class="text-sm font-mono bg-muted px-2 py-1 rounded">
                                                        {token.name}
                                                    </code>
                                                    {tokenGroup.category ===
                                                        "Colores Tailwind" && (
                                                        <div
                                                            class={`w-8 h-8 rounded-full border-2 border-border ${token.value}`}
                                                        />
                                                    )}
                                                </div>
                                                <div class="text-lg font-semibold mb-2">
                                                    {token.value}
                                                </div>
                                                <p
                                                    class={`text-sm text-muted-foreground mb-3 ${
                                                        tokenGroup.category ===
                                                        "Tipografía Tailwind"
                                                            ? token.tailwind
                                                            : ""
                                                    }`}
                                                >
                                                    {token.description}
                                                </p>
                                                {token.tailwind && (
                                                    <div class="flex items-center gap-2">
                                                        <Badge
                                                            variant="secondary"
                                                            className="text-xs"
                                                        >
                                                            {token.tailwind}
                                                        </Badge>
                                                    </div>
                                                )}
                                            </CardContent>
                                        </Card>
                                    ))}
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Guidelines -->
        <section id="guias" class="py-20">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Guías de Uso
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Principios y mejores prácticas para implementar el
                        sistema de diseño correctamente.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto"
                >
                    {
                        guidelines.map((guideline) => (
                            <Card className="border-0 shadow-md hover:shadow-lg transition-all duration-300 group">
                                <CardHeader>
                                    <div class="flex items-center gap-4 mb-4">
                                        <div class="p-3 rounded-lg bg-primary/10 group-hover:bg-primary/20 transition-colors">
                                            <guideline.icon className="w-6 h-6 text-primary" />
                                        </div>
                                        <CardTitle className="text-xl">
                                            {guideline.title}
                                        </CardTitle>
                                    </div>
                                </CardHeader>
                                <CardContent>
                                    <p class="text-muted-foreground">
                                        {guideline.description}
                                    </p>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Tailwind Best Practices -->
        <section class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Mejores Prácticas con Tailwind
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Patrones probados y técnicas avanzadas para maximizar el
                        potencial de Tailwind CSS en tus proyectos.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto"
                >
                    <Card className="border-0 shadow-md">
                        <CardHeader>
                            <CardTitle
                                className="flex items-center gap-2 text-lg"
                            >
                                <CheckCircle
                                    className="w-5 h-5 text-green-500"
                                />
                                Organización de Clases
                            </CardTitle>
                        </CardHeader>
                        <CardContent>
                            <p class="text-sm text-muted-foreground mb-4">
                                Mantén un orden consistente en tus clases de
                                Tailwind:
                            </p>
                            <div
                                class="bg-muted rounded-lg p-4 font-mono text-sm"
                            >
                                <div class="text-green-600">/* Layout */</div>
                                <div>flex flex-col items-center</div>
                                <div class="text-green-600 mt-2">
                                    /* Spacing */
                                </div>
                                <div>p-4 m-2 gap-4</div>
                                <div class="text-green-600 mt-2">
                                    /* Sizing */
                                </div>
                                <div>w-full h-32</div>
                                <div class="text-green-600 mt-2">
                                    /* Colors */
                                </div>
                                <div>bg-blue-500 text-white</div>
                                <div class="text-green-600 mt-2">
                                    /* Typography */
                                </div>
                                <div>text-lg font-semibold</div>
                                <div class="text-green-600 mt-2">
                                    /* Effects */
                                </div>
                                <div>shadow-lg rounded-lg</div>
                            </div>
                        </CardContent>
                    </Card>

                    <Card className="border-0 shadow-md">
                        <CardHeader>
                            <CardTitle
                                className="flex items-center gap-2 text-lg"
                            >
                                <CheckCircle
                                    className="w-5 h-5 text-green-500"
                                />
                                Componentes Reutilizables
                            </CardTitle>
                        </CardHeader>
                        <CardContent>
                            <p class="text-sm text-muted-foreground mb-4">
                                Extrae patrones comunes en componentes para
                                mantener DRY:
                            </p>
                            <div
                                class="bg-muted rounded-lg p-4 font-mono text-sm"
                            >
                                <div class="text-blue-600">
                                    // Button component
                                </div>
                                <div>
                                    const Button = ({`{ variant, children }`})
                                    => {`{`}
                                </div>
                                <div class="ml-2">const baseClasses =</div>
                                <div class="ml-4">
                                    "px-4 py-2 rounded-lg font-medium"
                                </div>
                                <div class="ml-2">const variants = {`{`}</div>
                                <div class="ml-4">
                                    primary: "bg-blue-600 text-white",
                                </div>
                                <div class="ml-4">
                                    secondary: "bg-gray-200 text-gray-900"
                                </div>
                                <div class="ml-2">{`}`}</div>
                                <div class="ml-2">
                                    return &lt;button className={`{...}`}&gt;
                                </div>
                                <div class="ml-4">{`{children}`}</div>
                                <div class="ml-2">&lt;/button&gt;</div>
                                <div>{`}`}</div>
                            </div>
                        </CardContent>
                    </Card>

                    <Card className="border-0 shadow-md">
                        <CardHeader>
                            <CardTitle
                                className="flex items-center gap-2 text-lg"
                            >
                                <CheckCircle
                                    className="w-5 h-5 text-green-500"
                                />
                                Responsive Design
                            </CardTitle>
                        </CardHeader>
                        <CardContent>
                            <p class="text-sm text-muted-foreground mb-4">
                                Diseña mobile-first con los breakpoints de
                                Tailwind:
                            </p>
                            <div
                                class="bg-muted rounded-lg p-4 font-mono text-sm"
                            >
                                <div class="text-green-600">
                                    /* Mobile first */
                                </div>
                                <div>grid grid-cols-1</div>
                                <div class="text-green-600 mt-2">
                                    /* Tablet (768px+) */
                                </div>
                                <div>md:grid-cols-2</div>
                                <div class="text-green-600 mt-2">
                                    /* Desktop (1024px+) */
                                </div>
                                <div>lg:grid-cols-3</div>
                                <div class="text-green-600 mt-2">
                                    /* Large (1280px+) */
                                </div>
                                <div>xl:grid-cols-4</div>
                                <div class="text-green-600 mt-2">
                                    /* XLarge (1536px+) */
                                </div>
                                <div>2xl:grid-cols-5</div>
                            </div>
                        </CardContent>
                    </Card>

                    <Card className="border-0 shadow-md">
                        <CardHeader>
                            <CardTitle
                                className="flex items-center gap-2 text-lg"
                            >
                                <CheckCircle
                                    className="w-5 h-5 text-green-500"
                                />
                                Personalización de Tema
                            </CardTitle>
                        </CardHeader>
                        <CardContent>
                            <p class="text-sm text-muted-foreground mb-4">
                                Extiende la configuración de Tailwind para tu
                                marca:
                            </p>
                            <div
                                class="bg-muted rounded-lg p-4 font-mono text-sm"
                            >
                                <div class="text-blue-600">
                                    // tailwind.config.js
                                </div>
                                <div>module.exports = {`{`}</div>
                                <div class="ml-2">theme: {`{`}</div>
                                <div class="ml-4">extend: {`{`}</div>
                                <div class="ml-6">colors: {`{`}</div>
                                <div class="ml-8">brand: {`{`}</div>
                                <div class="ml-10">primary: '#3B82F6',</div>
                                <div class="ml-10">secondary: '#64748B'</div>
                                <div class="ml-8">{`}`}</div>
                                <div class="ml-6">{`}`},</div>
                                <div class="ml-6">fontFamily: {`{`}</div>
                                <div class="ml-8">
                                    sans: ['Inter', 'sans-serif']
                                </div>
                                <div class="ml-6">{`}`}</div>
                                <div class="ml-4">{`}`}</div>
                                <div class="ml-2">{`}`}</div>
                                <div>{`}`}</div>
                            </div>
                        </CardContent>
                    </Card>
                </div>
            </div>
        </section>

        <!-- Implementation -->
        <section class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto">
                    <div class="text-center mb-12">
                        <h2 class="text-3xl md:text-4xl font-bold mb-4">
                            Cómo Usar el Sistema
                        </h2>
                        <p class="text-lg text-muted-foreground">
                            Ejemplos prácticos de cómo aplicar nuestro sistema
                            de diseño basado en Tailwind CSS en tus componentes
                            y interfaces.
                        </p>
                    </div>

                    <div class="space-y-8">
                        <Card className="border-0 shadow-md">
                            <CardHeader>
                                <CardTitle className="flex items-center gap-2">
                                    <span
                                        class="flex items-center justify-center w-8 h-8 rounded-full bg-primary text-primary-foreground text-sm font-bold"
                                        >1</span
                                    >
                                    Tokens de Color en Acción
                                </CardTitle>
                            </CardHeader>
                            <CardContent>
                                <p class="text-sm text-muted-foreground mb-4">
                                    Usa nuestros tokens semánticos para mantener
                                    consistencia:
                                </p>
                                <div
                                    class="bg-muted rounded-lg p-4 font-mono text-sm"
                                >
                                    <div class="text-green-600">
                                        /* Estados de botones */
                                    </div>
                                    <div>
                                        &lt;button className="bg-primary
                                        hover:bg-primary/90"&gt;
                                    </div>
                                    <div>
                                        &lt;button className="bg-success
                                        hover:bg-success/90"&gt;
                                    </div>
                                    <div>
                                        &lt;button className="bg-warning
                                        hover:bg-warning/90"&gt;
                                    </div>
                                    <div>
                                        &lt;button className="bg-error
                                        hover:bg-error/90"&gt;
                                    </div>
                                </div>
                            </CardContent>
                        </Card>

                        <Card className="border-0 shadow-md">
                            <CardHeader>
                                <CardTitle className="flex items-center gap-2">
                                    <span
                                        class="flex items-center justify-center w-8 h-8 rounded-full bg-primary text-primary-foreground text-sm font-bold"
                                        >2</span
                                    >
                                    Jerarquía Tipográfica
                                </CardTitle>
                            </CardHeader>
                            <CardContent>
                                <p class="text-sm text-muted-foreground mb-4">
                                    Aplica nuestra escala tipográfica para crear
                                    jerarquía visual:
                                </p>
                                <div
                                    class="bg-muted rounded-lg p-4 font-mono text-sm"
                                >
                                    <div class="text-green-600">
                                        /* Jerarquía de títulos */
                                    </div>
                                    <div>
                                        &lt;h1 className="text-4xl
                                        font-bold"&gt;Título
                                        Principal&lt;/h1&gt;
                                    </div>
                                    <div>
                                        &lt;h2 className="text-3xl
                                        font-semibold"&gt;Subtítulo&lt;/h2&gt;
                                    </div>
                                    <div>
                                        &lt;h3 className="text-xl
                                        font-medium"&gt;Sección&lt;/h3&gt;
                                    </div>
                                    <div>
                                        &lt;p className="text-base"&gt;Texto
                                        principal&lt;/p&gt;
                                    </div>
                                    <div>
                                        &lt;span className="text-sm
                                        text-muted-foreground"&gt;Texto
                                        secundario&lt;/span&gt;
                                    </div>
                                </div>
                            </CardContent>
                        </Card>

                        <Card className="border-0 shadow-md">
                            <CardHeader>
                                <CardTitle className="flex items-center gap-2">
                                    <span
                                        class="flex items-center justify-center w-8 h-8 rounded-full bg-primary text-primary-foreground text-sm font-bold"
                                        >3</span
                                    >
                                    Sistema de Espaciado
                                </CardTitle>
                            </CardHeader>
                            <CardContent>
                                <p class="text-sm text-muted-foreground mb-4">
                                    Mantén consistencia con nuestro sistema de
                                    espaciado:
                                </p>
                                <div
                                    class="bg-muted rounded-lg p-4 font-mono text-sm"
                                >
                                    <div class="text-green-600">
                                        /* Espaciado coherente */
                                    </div>
