---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import {
    Book,
    Search,
    Code,
    Globe,
    FileText,
    Download,
    ExternalLink,
    ArrowRight,
} from "lucide-react";

const sections = [
    {
        title: "Primeros Pasos",
        icon: Book,
        items: [
            "Instalación y configuración",
            "Estructura del proyecto",
            "Configuración inicial",
            "Primer componente",
        ],
    },
    {
        title: "Componentes",
        icon: Code,
        items: [
            "Botones y formularios",
            "Navegación y menús",
            "Cards y contenedores",
            "Modales y overlays",
        ],
    },
    {
        title: "API Reference",
        icon: FileText,
        items: [
            "Props y eventos",
            "Métodos disponibles",
            "Tipos TypeScript",
            "Hooks y utilities",
        ],
    },
    {
        title: "Ejemplos",
        icon: Globe,
        items: [
            "Casos de uso comunes",
            "Integraciones populares",
            "Patrones de diseño",
            "Mejores prácticas",
        ],
    },
];

const quickLinks = [
    {
        title: "Guía de Instalación",
        description:
            "Aprende cómo integrar nuestros componentes en tu proyecto",
        icon: Download,
        url: "/productos/documentacion/instalacion",
    },
    {
        title: "API Reference",
        description: "Documentación completa de todas las props y métodos",
        icon: FileText,
        url: "/productos/documentacion/api",
    },
    {
        title: "Ejemplos de Código",
        description: "Ejemplos prácticos y casos de uso reales",
        icon: Code,
        url: "/productos/documentacion/ejemplos",
    },
];
---

<Layout
    title="Documentación - DevsHub"
    description="Documentación completa de todos nuestros productos y servicios. Guías, ejemplos y referencias de API."
>
    <main class="min-h-screen pt-24">
        <!-- Hero Section -->
        <section
            class="py-20 bg-gradient-to-br from-indigo-50 to-blue-100 dark:from-indigo-950/20 dark:to-blue-950/20"
        >
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto text-center">
                    <Badge className="mb-4">Documentación</Badge>
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        <span class="text-primary">Documentación</span> Completa
                    </h1>
                    <p class="text-xl text-muted-foreground mb-8">
                        Todo lo que necesitas saber para usar nuestros
                        productos. Guías paso a paso, ejemplos de código y
                        referencias completas de API.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a
                            href="#buscar"
                            class="inline-flex items-center justify-center px-8 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors"
                        >
                            <Search className="w-4 h-4 mr-2" />
                            Buscar Documentación
                        </a>
                        <a
                            href="#guias"
                            class="inline-flex items-center justify-center px-8 py-3 border border-input rounded-lg font-medium hover:bg-accent hover:text-accent-foreground transition-colors"
                        >
                            Ver Guías
                            <ArrowRight className="w-4 h-4 ml-2" />
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Search Section -->
        <section id="buscar" class="py-12 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="max-w-2xl mx-auto">
                    <div class="relative">
                        <Search
                            className="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-muted-foreground"
                        />
                        <input
                            type="text"
                            placeholder="Buscar en la documentación..."
                            class="w-full pl-12 pr-4 py-4 rounded-xl border border-input bg-background text-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        />
                    </div>
                    <p class="text-center text-sm text-muted-foreground mt-4">
                        Busca guías, componentes, ejemplos y más
                    </p>
                </div>
            </div>
        </section>

        <!-- Quick Links -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Enlaces Rápidos
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Accede rápidamente a las secciones más importantes de
                        nuestra documentación.
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {
                        quickLinks.map((link) => (
                            <Card className="border-0 shadow-md hover:shadow-lg transition-shadow group cursor-pointer">
                                <CardHeader>
                                    <div class="flex items-center gap-4 mb-4">
                                        <div class="p-3 rounded-lg bg-primary/10 group-hover:bg-primary/20 transition-colors">
                                            <link.icon className="w-6 h-6 text-primary" />
                                        </div>
                                        <ExternalLink className="w-4 h-4 text-muted-foreground group-hover:text-primary transition-colors ml-auto" />
                                    </div>
                                    <CardTitle className="text-xl">
                                        {link.title}
                                    </CardTitle>
                                </CardHeader>
                                <CardContent>
                                    <p class="text-muted-foreground">
                                        {link.description}
                                    </p>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Documentation Sections -->
        <section id="guias" class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Secciones de Documentación
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Explora todas las secciones de nuestra documentación
                        organizadas por categorías.
                    </p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    {
                        sections.map((section) => (
                            <Card className="border-0 shadow-md">
                                <CardHeader>
                                    <div class="flex items-center gap-3 mb-4">
                                        <div class="p-2 rounded-lg bg-primary/10">
                                            <section.icon className="w-6 h-6 text-primary" />
                                        </div>
                                        <CardTitle className="text-xl">
                                            {section.title}
                                        </CardTitle>
                                    </div>
                                </CardHeader>
                                <CardContent>
                                    <div class="space-y-3">
                                        {section.items.map((item) => (
                                            <div class="flex items-center gap-3 p-3 rounded-lg hover:bg-muted/50 transition-colors cursor-pointer group">
                                                <div class="w-2 h-2 rounded-full bg-primary/60" />
                                                <span class="text-sm font-medium group-hover:text-primary transition-colors">
                                                    {item}
                                                </span>
                                                <ArrowRight className="w-4 h-4 text-muted-foreground group-hover:text-primary transition-colors ml-auto opacity-0 group-hover:opacity-100" />
                                            </div>
                                        ))}
                                    </div>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Help Section -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto text-center">
                    <h2 class="text-3xl md:text-4xl font-bold mb-6">
                        ¿No encuentras lo que buscas?
                    </h2>
                    <p class="text-lg text-muted-foreground mb-8">
                        Nuestro equipo de soporte está aquí para ayudarte.
                        Contáctanos si tienes preguntas específicas o necesitas
                        ayuda personalizada.
                    </p>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <Card className="border-0 shadow-md">
                            <CardContent className="p-6 text-center">
                                <div class="mb-4">
                                    <div
                                        class="p-3 rounded-full bg-primary/10 w-fit mx-auto"
                                    >
                                        <Book
                                            className="w-6 h-6 text-primary"
                                        />
                                    </div>
                                </div>
                                <h3 class="font-semibold mb-2">
                                    Centro de Ayuda
                                </h3>
                                <p class="text-sm text-muted-foreground mb-4">
                                    Preguntas frecuentes y soluciones comunes
                                </p>
                                <a
                                    href="/faq"
                                    class="text-primary hover:underline font-medium text-sm"
                                >
                                    Ver FAQ →
                                </a>
                            </CardContent>
                        </Card>

                        <Card className="border-0 shadow-md">
                            <CardContent className="p-6 text-center">
                                <div class="mb-4">
                                    <div
                                        class="p-3 rounded-full bg-primary/10 w-fit mx-auto"
                                    >
                                        <Globe
                                            className="w-6 h-6 text-primary"
                                        />
                                    </div>
                                </div>
                                <h3 class="font-semibold mb-2">Comunidad</h3>
                                <p class="text-sm text-muted-foreground mb-4">
                                    Únete a nuestra comunidad de desarrolladores
                                </p>
                                <a
                                    href="/comunidad"
                                    class="text-primary hover:underline font-medium text-sm"
                                >
                                    Unirse →
                                </a>
                            </CardContent>
                        </Card>

                        <Card className="border-0 shadow-md">
                            <CardContent className="p-6 text-center">
                                <div class="mb-4">
                                    <div
                                        class="p-3 rounded-full bg-primary/10 w-fit mx-auto"
                                    >
                                        <FileText
                                            className="w-6 h-6 text-primary"
                                        />
                                    </div>
                                </div>
                                <h3 class="font-semibold mb-2">
                                    Soporte Directo
                                </h3>
                                <p class="text-sm text-muted-foreground mb-4">
                                    Contacta directamente con nuestro equipo
                                </p>
                                <a
                                    href="/contacto"
                                    class="text-primary hover:underline font-medium text-sm"
                                >
                                    Contactar →
                                </a>
                            </CardContent>
                        </Card>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-20 bg-primary text-primary-foreground">
            <div class="container mx-auto px-4 text-center">
                <div class="max-w-3xl mx-auto">
                    <h2 class="text-3xl md:text-4xl font-bold mb-6">
                        Comienza a desarrollar hoy
                    </h2>
                    <p class="text-lg opacity-90 mb-8">
                        Con nuestra documentación completa y ejemplos prácticos,
                        podrás integrar nuestros productos en minutos.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a
                            href="/productos"
                            class="inline-flex items-center justify-center px-8 py-3 bg-white text-primary rounded-lg font-medium hover:bg-gray-100 transition-colors"
                        >
                            Ver Productos
                        </a>
                        <a
                            href="/contacto"
                            class="inline-flex items-center justify-center px-8 py-3 border border-white/20 rounded-lg font-medium hover:bg-white/10 transition-colors"
                        >
                            Soporte Personalizado
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
