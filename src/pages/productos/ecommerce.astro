const platforms = [
    {
        title: 'Shopify Plus',
        description: 'Para empresas que necesitan escalabilidad enterprise',
        icon: Package,
        pros: ['Fácil de usar', 'Apps ecosystem', 'Hosting incluido', 'Soporte 24/7'],
