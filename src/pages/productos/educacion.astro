---
import Layout from '@/layouts/Layout.astro';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import {
    GraduationCap,
    BookOpen,
    Users,
    Video,
    Award,
    PieChart,
    Monitor,
    ArrowRight,
} from 'lucide-react';
import HeroProductos from '@/components/interfaces/HeroProductos.astro';

const solutions = [
    {
        icon: Video,
        title: 'Plataformas de E-Learning',
        description: 'Sistemas completos de aprendizaje en línea',
        features: [
            'Aulas virtuales interactivas',
            'Gestión de cursos y contenido',
            'Evaluaciones y exámenes online',
            'Seguimiento del progreso',
        ],
    },
    {
        icon: Users,
        title: 'Gestión Académica',
        description: 'Sistemas integrales para administración educativa',
        features: [
            'Gestión de estudiantes y profesores',
            'Horarios y calendario académico',
            'Calificaciones y reportes',
            'Comunicación institucional',
        ],
    },
    {
        icon: BookOpen,
        title: 'Bibliotecas Digitales',
        description: 'Repositorios digitales de recursos educativos',
        features: [
            'Catálogo digital de recursos',
            'Búsqueda avanzada',
            'Acceso remoto seguro',
            'Gestión de préstamos digitales',
        ],
    },
];

const features = [
    {
        icon: Monitor,
        title: 'Acceso Multiplataforma',
        description: 'Accede desde computadoras, tablets y smartphones con la misma experiencia.',
    },
    {
        icon: PieChart,
        title: 'Analytics Educativo',
        description: 'Métricas detalladas del rendimiento académico y participación estudiantil.',
    },
    {
        icon: Award,
        title: 'Gamificación',
        description: 'Elementos de juego que aumentan la motivación y participación.',
    },
];

const benefits = [
    'Aumento del 65% en la participación estudiantil',
    'Reducción del 40% en costos administrativos',
    'Mejora del 50% en el seguimiento académico',
    'Acceso 24/7 a recursos educativos',
    'Comunicación eficiente entre stakeholders',
    'Reportes automáticos de rendimiento',
];

const educationLevels = [
    {
        level: 'Educación Básica',
        description: 'Soluciones para escuelas primarias y secundarias',
        features: ['Gestión de aulas', 'Comunicación con padres', 'Actividades interactivas'],
    },
    {
        level: 'Educación Superior',
        description: 'Plataformas para universidades e institutos',
        features: ['Campus virtual', 'Investigación colaborativa', 'Gestión de títulos'],
    },
    {
        level: 'Educación Corporativa',
        description: 'Capacitación y desarrollo de talento empresarial',
        features: ['Cursos corporativos', 'Certificaciones', 'Onboarding digital'],
    },
    {
        level: 'Educación Continua',
        description: 'Programas de formación profesional continua',
        features: ['Microlearning', 'Certificaciones profesionales', 'Rutas de aprendizaje'],
    },
];

const caseStudies = [
    {
        title: 'Universidad Digital del Norte',
        description: 'Transformación digital completa de campus universitario',
        results: [
            '15,000 estudiantes en plataforma virtual',
            '80% reducción en procesos manuales',
            '95% satisfacción estudiantil',
        ],
    },
    {
        title: 'Red de Colegios Innovadores',
        description: 'Implementación de aulas digitales en 25 colegios',
        results: [
            '5,000 estudiantes beneficiados',
            '45% mejora en calificaciones',
            '100% de padres conectados',
        ],
    },
];
---

<Layout
    title="Soluciones para Educación - Devanthos"
    description="Desarrollamos plataformas educativas innovadoras. E-learning, gestión académica, aulas virtuales y más para transformar la educación.">
    <!-- Hero Section -->
    <HeroProductos
        badge="Soluciones para Educación"
        title="<span>Educación</span> del Futuro"
        description="Transformamos la educación con tecnología innovadora. Desde aulas virtuales hasta sistemas de gestión académica, creamos soluciones que mejoran el aprendizaje."
        imageSrc="/images/productos/educacion-hero.avif"
        image430Src="/images/productos/educacion-hero-w430.avif"
        image768Src="/images/productos/educacion-hero-w768.avif"
        buttons={[
            { text: 'Ver Soluciones', href: '#soluciones', icon: GraduationCap },
            { text: 'Demo Personalizado', variant: 'secondary', href: '/contacto' },
        ]}
    />

    <!-- Features Section -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Tecnología Educativa Avanzada</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Nuestras plataformas educativas incluyen las últimas innovaciones tecnológicas
                    para crear experiencias de aprendizaje excepcionales.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
                {
                    features.map((feature) => (
                        <Card className="text-center border-0 shadow-md">
                            <CardHeader>
                                <div class="bg-primary/10 mx-auto mb-4 w-fit rounded-lg p-3">
                                    <feature.icon className="w-8 h-8 text-primary" />
                                </div>
                                <CardTitle className="text-xl">{feature.title}</CardTitle>
                            </CardHeader>
                            <CardContent>
                                <p class="text-muted-foreground">{feature.description}</p>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Solutions Section -->
    <section id="soluciones" class="bg-muted/30 py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Soluciones Educativas Completas</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Desde educación básica hasta corporativa, tenemos la solución perfecta para cada
                    nivel educativo.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
                {
                    solutions.map((solution) => (
                        <Card className="border-0 shadow-md hover:shadow-lg transition-shadow">
                            <CardHeader>
                                <div class="bg-primary/10 mb-4 w-fit rounded-lg p-3">
                                    <solution.icon className="w-8 h-8 text-primary" />
                                </div>
                                <CardTitle className="text-xl mb-2">{solution.title}</CardTitle>
                                <p class="text-muted-foreground text-sm">{solution.description}</p>
                            </CardHeader>
                            <CardContent>
                                <ul class="mb-4 space-y-2">
                                    {solution.features.map((feature) => (
                                        <li class="flex items-center gap-2 text-sm">
                                            <div class="bg-primary h-1.5 w-1.5 rounded-full" />
                                            {feature}
                                        </li>
                                    ))}
                                </ul>
                                <a
                                    href="/contacto"
                                    class="text-primary hover:text-primary/80 inline-flex items-center text-sm font-medium">
                                    Más información
                                    <ArrowRight className="w-4 h-4 ml-1" />
                                </a>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Education Levels -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">
                    Soluciones para Todos los Niveles
                </h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Adaptamos nuestras soluciones a las necesidades específicas de cada nivel
                    educativo.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
                {
                    educationLevels.map((level) => (
                        <Card className="border-0 shadow-md">
                            <CardHeader>
                                <CardTitle className="text-xl text-primary">
                                    {level.level}
                                </CardTitle>
                                <p class="text-muted-foreground text-sm">{level.description}</p>
                            </CardHeader>
                            <CardContent>
                                <div class="grid grid-cols-1 gap-2">
                                    {level.features.map((feature) => (
                                        <div class="flex items-center gap-3">
                                            <div class="bg-primary h-2 w-2 rounded-full" />
                                            <span class="text-sm">{feature}</span>
                                        </div>
                                    ))}
                                </div>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Benefits Section -->
    <section class="bg-muted/30 py-20">
        <div class="container mx-auto px-4">
            <div class="mx-auto max-w-6xl">
                <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
                    <div>
                        <h2 class="mb-6 text-3xl font-bold md:text-4xl">
                            Impacto Medible en la Educación
                        </h2>
                        <p class="text-muted-foreground mb-8 text-lg">
                            Nuestras soluciones han demostrado mejoras significativas en el
                            rendimiento académico y la eficiencia institucional.
                        </p>
                        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                            {
                                benefits.map((benefit) => (
                                    <div class="flex items-center gap-3">
                                        <div class="bg-primary h-2 w-2 flex-shrink-0 rounded-full" />
                                        <span class="text-sm">{benefit}</span>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                    <div
                        class="rounded-xl bg-gradient-to-br from-blue-50 to-indigo-100 p-8 dark:from-blue-950/20 dark:to-indigo-950/20">
                        <h3 class="mb-6 text-center text-2xl font-bold">Resultados Comprobados</h3>
                        <div class="grid grid-cols-2 gap-6">
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">50k+</div>
                                <p class="text-muted-foreground text-sm">Estudiantes activos</p>
                            </div>
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">200+</div>
                                <p class="text-muted-foreground text-sm">Instituciones</p>
                            </div>
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">98%</div>
                                <p class="text-muted-foreground text-sm">Satisfacción</p>
                            </div>
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">24/7</div>
                                <p class="text-muted-foreground text-sm">Disponibilidad</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Case Studies -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Casos de Éxito</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Descubre cómo hemos transformado la experiencia educativa en diferentes
                    instituciones.
                </p>
            </div>

            <div class="mx-auto grid max-w-5xl grid-cols-1 gap-8 lg:grid-cols-2">
                {
                    caseStudies.map((study) => (
                        <Card className="border-0 shadow-md">
                            <CardHeader>
                                <CardTitle className="text-xl">{study.title}</CardTitle>
                                <p class="text-muted-foreground text-sm">{study.description}</p>
                            </CardHeader>
                            <CardContent>
                                <h4 class="text-primary mb-3 font-semibold">
                                    Resultados obtenidos:
                                </h4>
                                <ul class="space-y-2">
                                    {study.results.map((result) => (
                                        <li class="flex items-center gap-3">
                                            <GraduationCap className="w-4 h-4 text-primary flex-shrink-0" />
                                            <span class="text-sm">{result}</span>
                                        </li>
                                    ))}
                                </ul>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Technology Stack -->
    <section class="bg-muted/30 py-20">
        <div class="container mx-auto px-4">
            <div class="mx-auto max-w-4xl text-center">
                <BookOpen className="text-primary mx-auto mb-6 h-16 w-16" />
                <h2 class="mb-6 text-3xl font-bold md:text-4xl">Tecnología de Vanguardia</h2>
                <p class="text-muted-foreground mb-8 text-lg">
                    Utilizamos las mejores tecnologías para crear plataformas educativas robustas,
                    escalables y fáciles de usar.
                </p>
                <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
                    <Card className="border-0 shadow-md">
                        <CardContent className="p-6 text-center">
                            <h3 class="mb-2 font-semibold">Inteligencia Artificial</h3>
                            <p class="text-muted-foreground text-sm">
                                Personalización del aprendizaje y recomendaciones inteligentes
                            </p>
                        </CardContent>
                    </Card>
                    <Card className="border-0 shadow-md">
                        <CardContent className="p-6 text-center">
                            <h3 class="mb-2 font-semibold">Realidad Virtual</h3>
                            <p class="text-muted-foreground text-sm">
                                Experiencias inmersivas para laboratorios virtuales
                            </p>
                        </CardContent>
                    </Card>
                    <Card className="border-0 shadow-md">
                        <CardContent className="p-6 text-center">
                            <h3 class="mb-2 font-semibold">Blockchain</h3>
                            <p class="text-muted-foreground text-sm">
                                Certificaciones digitales seguras e inmutables
                            </p>
                        </CardContent>
                    </Card>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-primary text-primary-foreground py-20">
        <div class="container mx-auto px-4 text-center">
            <div class="mx-auto max-w-3xl">
                <h2 class="mb-6 text-3xl font-bold md:text-4xl">
                    Transforma la educación en tu institución
                </h2>
                <p class="mb-8 text-lg opacity-90">
                    Únete a las instituciones educativas que ya han mejorado sus resultados
                    académicos con nuestras soluciones tecnológicas innovadoras.
                </p>
                <div class="flex flex-col justify-center gap-4 sm:flex-row">
                    <a
                        href="/contacto"
                        class="text-primary inline-flex items-center justify-center rounded-lg bg-white px-8 py-3 font-medium transition-colors hover:bg-gray-100">
                        <Video className="mr-2 h-4 w-4" />
                        Solicitar Demo
                    </a>
                    <a
                        href="/soluciones"
                        class="inline-flex items-center justify-center rounded-lg border border-white/20 px-8 py-3 font-medium transition-colors hover:bg-white/10">
                        Ver Todas las Soluciones
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>
