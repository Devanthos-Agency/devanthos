---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import {
    Play,
    Code,
    Eye,
    Download,
    ArrowRight,
    Zap,
    Globe,
} from "lucide-react";

const examples = [
    {
        title: "Dashboard Admin",
        description: "Panel de administración completo con gráficos y tablas",
        image: "/images/gallery/164_1x_shots_so.png",
        technologies: ["React", "Chart.js", "Tailwind"],
        liveUrl: "#",
        codeUrl: "#",
        category: "Web App",
    },
    {
        title: "E-commerce Store",
        description: "Tienda online moderna con carrito de compras",
        image: "/images/gallery/227_1x_shots_so.png",
        technologies: ["Next.js", "Stripe", "MongoDB"],
        liveUrl: "#",
        codeUrl: "#",
        category: "E-commerce",
    },
    {
        title: "Landing Page",
        description: "Página de aterrizaje responsive y optimizada",
        image: "/images/gallery/389_1x_shots_so.png",
        technologies: ["Astro", "Tailwind", "Framer Motion"],
        liveUrl: "#",
        codeUrl: "#",
        category: "Marketing",
    },
    {
        title: "Blog Personal",
        description: "Blog moderno con sistema de comentarios",
        image: "/images/gallery/454_1x_shots_so.png",
        technologies: ["Gatsby", "GraphQL", "Netlify CMS"],
        liveUrl: "#",
        codeUrl: "#",
        category: "Blog",
    },
    {
        title: "App Móvil",
        description: "Aplicación móvil híbrida para iOS y Android",
        image: "/images/gallery/498_1x_shots_so.png",
        technologies: ["React Native", "Firebase", "Redux"],
        liveUrl: "#",
        codeUrl: "#",
        category: "Mobile",
    },
    {
        title: "Portfolio Creativo",
        description: "Portfolio con animaciones y transiciones únicas",
        image: "/images/gallery/589_1x_shots_so.png",
        technologies: ["Three.js", "GSAP", "Nuxt.js"],
        liveUrl: "#",
        codeUrl: "#",
        category: "Portfolio",
    },
];

const categories = [
    "Todos",
    "Web App",
    "E-commerce",
    "Marketing",
    "Blog",
    "Mobile",
    "Portfolio",
];

const features = [
    {
        icon: Code,
        title: "Código Fuente",
        description: "Acceso completo al código fuente de todos los ejemplos",
    },
    {
        icon: Play,
        title: "Demos En Vivo",
        description: "Prueba cada ejemplo en tiempo real desde tu navegador",
    },
    {
        icon: Download,
        title: "Descarga Gratuita",
        description: "Descarga y personaliza los ejemplos para tus proyectos",
    },
];
---

<Layout
    title="Ejemplos en Vivo - Devanthos"
    description="Explora nuestra galería de ejemplos en vivo. Demos interactivos, código fuente y casos de uso reales."
>
    <main class="min-h-screen">
        <!-- Hero Section -->
        <section class="h-dvh md:py-40 md:h-fit relative overflow-hidden">
            <div
                class="absolute inset-0 bg-gradient-to-br from-primary/50 via-transparent to-accent/50"
            >
            </div>
            <div
                class="absolute -top-40 -right-40 w-80 h-80 bg-primary/60 rounded-full blur-3xl"
            >
            </div>
            <div
                class="absolute -bottom-40 -left-40 w-80 h-80 bg-accent/80 rounded-full blur-3xl"
            >
            </div>
            <div
                class="container h-full flex justify-center items-center mx-auto px-4"
            >
                <div class="max-w-4xl mx-auto text-center">
                    <Badge className="mb-4">Ejemplos en Vivo</Badge>
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        <span class="text-primary">Ejemplos</span> Reales y Funcionales
                    </h1>
                    <p class="text-xl text-muted-foreground mb-8">
                        Explora nuestra galería de proyectos reales. Cada
                        ejemplo incluye demo en vivo, código fuente completo y
                        documentación detallada.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a
                            href="#ejemplos"
                            class="inline-flex items-center justify-center px-8 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors"
                        >
                            <Eye className="w-4 h-4 mr-2" />
                            Ver Ejemplos
                        </a>
                        <a
                            href="/contacto"
                            class="inline-flex items-center justify-center px-8 py-3 border border-input rounded-lg font-medium hover:bg-accent hover:text-accent-foreground transition-colors"
                        >
                            Proyecto Personalizado
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Todo lo que Necesitas
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Cada ejemplo viene con todo lo necesario para que puedas
                        implementarlo en tus propios proyectos.
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {
                        features.map((feature) => (
                            <Card className="text-center border-0 shadow-md">
                                <CardHeader>
                                    <div class="mx-auto mb-4 p-3 rounded-lg bg-primary/10 w-fit">
                                        <feature.icon className="w-8 h-8 text-primary" />
                                    </div>
                                    <CardTitle className="text-xl">
                                        {feature.title}
                                    </CardTitle>
                                </CardHeader>
                                <CardContent>
                                    <p class="text-muted-foreground">
                                        {feature.description}
                                    </p>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Examples Gallery -->
        <section id="ejemplos" class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Galería de Ejemplos
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Explora proyectos reales organizados por categorías.
                        Cada ejemplo incluye código fuente y demo en vivo.
                    </p>
                </div>

                <!-- Filter Categories -->
                <div class="flex flex-wrap justify-center gap-2 mb-12">
                    {
                        categories.map((category, index) => (
                            <button
                                class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${
                                    index === 0
                                        ? "bg-primary text-primary-foreground"
                                        : "bg-background border border-input hover:bg-accent hover:text-accent-foreground"
                                }`}
                            >
                                {category}
                            </button>
                        ))
                    }
                </div>

                <!-- Examples Grid -->
                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
                >
                    {
                        examples.map((example) => (
                            <Card className="border-0 shadow-md hover:shadow-lg transition-shadow overflow-hidden group">
                                <div class="relative overflow-hidden">
                                    <img
                                        src={example.image}
                                        alt={example.title}
                                        class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                                    />
                                    <div class="absolute top-4 left-4">
                                        <Badge
                                            variant="secondary"
                                            className="bg-white/90 text-gray-900"
                                        >
                                            {example.category}
                                        </Badge>
                                    </div>
                                    <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center gap-4">
                                        <a
                                            href={example.liveUrl}
                                            class="p-3 bg-white/20 backdrop-blur-sm rounded-full hover:bg-white/30 transition-colors"
                                            title="Ver demo en vivo"
                                        >
                                            <Eye className="w-5 h-5 text-white" />
                                        </a>
                                        <a
                                            href={example.codeUrl}
                                            class="p-3 bg-white/20 backdrop-blur-sm rounded-full hover:bg-white/30 transition-colors"
                                            title="Ver código fuente"
                                        >
                                            <Code className="w-5 h-5 text-white" />
                                        </a>
                                    </div>
                                </div>
                                <CardHeader>
                                    <CardTitle className="text-lg">
                                        {example.title}
                                    </CardTitle>
                                </CardHeader>
                                <CardContent>
                                    <p class="text-muted-foreground text-sm mb-4">
                                        {example.description}
                                    </p>
                                    <div class="flex flex-wrap gap-2">
                                        {example.technologies.map((tech) => (
                                            <Badge
                                                variant="outline"
                                                className="text-xs"
                                            >
                                                {tech}
                                            </Badge>
                                        ))}
                                    </div>
                                    <div class="flex gap-2 mt-4">
                                        <a
                                            href={example.liveUrl}
                                            class="flex-1 px-3 py-2 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors text-sm text-center"
                                        >
                                            <Globe className="w-4 h-4 mr-1 inline" />
                                            Demo
                                        </a>
                                        <a
                                            href={example.codeUrl}
                                            class="flex-1 px-3 py-2 border border-input rounded-lg font-medium hover:bg-accent hover:text-accent-foreground transition-colors text-sm text-center"
                                        >
                                            <Code className="w-4 h-4 mr-1 inline" />
                                            Código
                                        </a>
                                    </div>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Usage Section -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="max-w-6xl mx-auto">
                    <div
                        class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
                    >
                        <div>
                            <h2 class="text-3xl md:text-4xl font-bold mb-6">
                                Cómo Usar los Ejemplos
                            </h2>
                            <p class="text-lg text-muted-foreground mb-8">
                                Todos nuestros ejemplos están diseñados para ser
                                fáciles de usar y personalizar según tus
                                necesidades específicas.
                            </p>
                            <div class="space-y-6">
                                <div class="flex items-start gap-4">
                                    <div
                                        class="flex-shrink-0 w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center"
                                    >
                                        <span
                                            class="text-primary font-bold text-sm"
                                            >1</span
                                        >
                                    </div>
                                    <div>
                                        <h3 class="font-semibold mb-2">
                                            Explora el Demo
                                        </h3>
                                        <p
                                            class="text-muted-foreground text-sm"
                                        >
                                            Prueba la funcionalidad completa del
                                            ejemplo en vivo.
                                        </p>
                                    </div>
                                </div>
                                <div class="flex items-start gap-4">
                                    <div
                                        class="flex-shrink-0 w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center"
                                    >
                                        <span
                                            class="text-primary font-bold text-sm"
                                            >2</span
                                        >
                                    </div>
                                    <div>
                                        <h3 class="font-semibold mb-2">
                                            Descarga el Código
                                        </h3>
                                        <p
                                            class="text-muted-foreground text-sm"
                                        >
                                            Obtén acceso completo al código
                                            fuente organizado.
                                        </p>
                                    </div>
                                </div>
                                <div class="flex items-start gap-4">
                                    <div
                                        class="flex-shrink-0 w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center"
                                    >
                                        <span
                                            class="text-primary font-bold text-sm"
                                            >3</span
                                        >
                                    </div>
                                    <div>
                                        <h3 class="font-semibold mb-2">
                                            Personaliza y Adapta
                                        </h3>
                                        <p
                                            class="text-muted-foreground text-sm"
                                        >
                                            Modifica el código según las
                                            necesidades de tu proyecto.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div
                            class="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-blue-950/20 dark:to-indigo-950/20 p-8 rounded-xl"
                        >
                            <div class="text-center">
                                <Zap
                                    className="w-16 h-16 text-primary mx-auto mb-6"
                                />
                                <h3 class="text-2xl font-bold mb-4">
                                    ¿Necesitas algo específico?
                                </h3>
                                <p class="text-muted-foreground mb-6">
                                    Si no encuentras el ejemplo exacto que
                                    necesitas, podemos crear uno personalizado
                                    para ti.
                                </p>
                                <a
                                    href="/contacto"
                                    class="inline-flex items-center justify-center px-6 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors"
                                >
                                    Solicitar Ejemplo Personalizado
                                    <ArrowRight className="w-4 h-4 ml-2" />
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-20 bg-primary text-primary-foreground">
            <div class="container mx-auto px-4 text-center">
                <div class="max-w-3xl mx-auto">
                    <h2 class="text-3xl md:text-4xl font-bold mb-6">
                        Acelera tu desarrollo con ejemplos reales
                    </h2>
                    <p class="text-lg opacity-90 mb-8">
                        No pierdas tiempo empezando desde cero. Utiliza nuestros
                        ejemplos como base para crear proyectos increíbles más
                        rápido.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a
                            href="/productos"
                            class="inline-flex items-center justify-center px-8 py-3 bg-white text-primary rounded-lg font-medium hover:bg-gray-100 transition-colors"
                        >
                            Ver Todos los Productos
                        </a>
                        <a
                            href="/contacto"
                            class="inline-flex items-center justify-center px-8 py-3 border border-white/20 rounded-lg font-medium hover:bg-white/10 transition-colors"
                        >
                            Consultoría Personalizada
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
