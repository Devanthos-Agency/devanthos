---
import Layout from '@/layouts/Layout.astro';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import {
    DollarSign,
    TrendingUp,
    Shield,
    Building,
    CreditCard,
    PieChart,
    Lock,
    ArrowRight,
} from 'lucide-react';
import HeroProductos from '@/components/interfaces/HeroProductos.astro';

const solutions = [
    {
        icon: Building,
        title: 'Banca Digital',
        description: 'Plataformas bancarias modernas y seguras',
        features: [
            'Aplicaciones móviles bancarias',
            'Banca online con 2FA',
            'Gestión de cuentas en tiempo real',
            'Transferencias y pagos digitales',
        ],
    },
    {
        icon: CreditCard,
        title: 'Fintech Solutions',
        description: 'Soluciones innovadoras para fintech',
        features: [
            'Procesamiento de pagos',
            'Wallets digitales',
            'Préstamos automatizados',
            'Inversiones roboadvisor',
        ],
    },
    {
        icon: PieChart,
        title: 'Gestión de Inversiones',
        description: 'Plataformas para gestión de portfolios',
        features: [
            'Dashboard de inversiones',
            'Análisis de riesgo automatizado',
            'Reportes de rendimiento',
            'Alertas de mercado en tiempo real',
        ],
    },
];

const features = [
    {
        icon: Shield,
        title: 'Seguridad PCI DSS',
        description: 'Cumplimiento total con estándares de seguridad financiera internacional.',
    },
    {
        icon: Lock,
        title: 'Encriptación Avanzada',
        description: 'Protección de datos con encriptación AES-256 y protocolos seguros.',
    },
    {
        icon: TrendingUp,
        title: 'Escalabilidad',
        description: 'Arquitectura cloud que se adapta al crecimiento de tu negocio.',
    },
];

const regulations = [
    {
        name: 'PCI DSS',
        description: 'Estándar de seguridad para datos de tarjetas de pago',
        level: 'Nivel 1',
    },
    {
        name: 'SOX',
        description: 'Ley Sarbanes-Oxley para transparencia financiera',
        level: 'Compliant',
    },
    {
        name: 'GDPR',
        description: 'Reglamento general de protección de datos',
        level: 'Certified',
    },
    {
        name: 'ISO 27001',
        description: 'Estándar internacional de seguridad de la información',
        level: 'Certified',
    },
];

const benefits = [
    'Reducción del 60% en costos operativos',
    'Procesamiento de transacciones 10x más rápido',
    '99.99% de disponibilidad del sistema',
    'Cumplimiento automático de regulaciones',
    'Detección de fraude en tiempo real',
    'Integración con más de 50 bancos',
];

const caseStudies = [
    {
        title: 'Banco Digital Innovador',
        description: 'Lanzamiento de banco 100% digital',
        results: [
            '500k usuarios en primer año',
            '40% reducción en costos vs banca tradicional',
            'Tiempo de apertura de cuenta: 5 minutos',
        ],
    },
    {
        title: 'Fintech de Préstamos',
        description: 'Plataforma de microcréditos automatizada',
        results: [
            '$100M procesados en préstamos',
            'Aprobación automática en 2 minutos',
            'Tasa de morosidad 30% menor',
        ],
    },
];
---

<Layout
    title="Soluciones para Finanzas - Devanthos"
    description="Desarrollamos soluciones financieras seguras y escalables. Banca digital, fintech, pagos electrónicos y más con máxima seguridad.">
    <!-- Hero Section -->
    <HeroProductos
        badge="Soluciones para Finanzas"
        title="<span>Fintech</span> del Futuro"
        description="Desarrollamos soluciones financieras innovadoras y seguras. Desde banca digital hasta plataformas de inversión, cumpliendo con las regulaciones más estrictas."
        imageSrc="/images/productos/finanzas-hero.avif"
        image430Src="/images/productos/finanzas-hero-w430.avif"
        image768Src="/images/productos/finanzas-hero-w768.avif"
        buttons={[
            { text: 'Ver Soluciones', href: '#soluciones', icon: DollarSign },
            { text: 'Consultoría Especializada', variant: 'secondary', href: '/contacto' },
        ]}
    />

    <!-- Features Section -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">
                    Seguridad y Confianza Garantizada
                </h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    El sector financiero requiere los más altos estándares de seguridad. Nuestras
                    soluciones cumplen con todas las regulaciones internacionales.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
                {
                    features.map((feature) => (
                        <Card className="text-center border-0 shadow-md">
                            <CardHeader>
                                <div class="bg-primary/10 mx-auto mb-4 w-fit rounded-lg p-3">
                                    <feature.icon className="w-8 h-8 text-primary" />
                                </div>
                                <CardTitle className="text-xl">{feature.title}</CardTitle>
                            </CardHeader>
                            <CardContent>
                                <p class="text-muted-foreground">{feature.description}</p>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Solutions Section -->
    <section id="soluciones" class="bg-muted/30 py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">
                    Soluciones Financieras Integrales
                </h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Desde banca tradicional hasta fintech disruptivas, creamos soluciones que
                    transforman la industria financiera.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
                {
                    solutions.map((solution) => (
                        <Card className="border-0 shadow-md hover:shadow-lg transition-shadow">
                            <CardHeader>
                                <div class="bg-primary/10 mb-4 w-fit rounded-lg p-3">
                                    <solution.icon className="w-8 h-8 text-primary" />
                                </div>
                                <CardTitle className="text-xl mb-2">{solution.title}</CardTitle>
                                <p class="text-muted-foreground text-sm">{solution.description}</p>
                            </CardHeader>
                            <CardContent>
                                <ul class="mb-4 space-y-2">
                                    {solution.features.map((feature) => (
                                        <li class="flex items-center gap-2 text-sm">
                                            <div class="bg-primary h-1.5 w-1.5 rounded-full" />
                                            {feature}
                                        </li>
                                    ))}
                                </ul>
                                <a
                                    href="/contacto"
                                    class="text-primary hover:text-primary/80 inline-flex items-center text-sm font-medium">
                                    Más información
                                    <ArrowRight className="w-4 h-4 ml-1" />
                                </a>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Regulations Section -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Cumplimiento Regulatorio</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Nuestras soluciones cumplen con los estándares y regulaciones más exigentes de
                    la industria financiera.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
                {
                    regulations.map((regulation) => (
                        <Card className="border-0 shadow-md text-center">
                            <CardHeader>
                                <Shield className="w-12 h-12 text-primary mx-auto mb-4" />
                                <CardTitle className="text-lg">{regulation.name}</CardTitle>
                            </CardHeader>
                            <CardContent>
                                <p class="text-muted-foreground mb-3 text-sm">
                                    {regulation.description}
                                </p>
                                <Badge variant="outline" className="text-primary border-primary">
                                    {regulation.level}
                                </Badge>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Benefits Section -->
    <section class="bg-muted/30 py-20">
        <div class="container mx-auto px-4">
            <div class="mx-auto max-w-6xl">
                <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
                    <div>
                        <h2 class="mb-6 text-3xl font-bold md:text-4xl">Resultados Comprobados</h2>
                        <p class="text-muted-foreground mb-8 text-lg">
                            Nuestras soluciones han ayudado a instituciones financieras a reducir
                            costos, aumentar eficiencia y mejorar la experiencia del cliente.
                        </p>
                        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                            {
                                benefits.map((benefit) => (
                                    <div class="flex items-center gap-3">
                                        <div class="bg-primary h-2 w-2 flex-shrink-0 rounded-full" />
                                        <span class="text-sm">{benefit}</span>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                    <div
                        class="rounded-xl bg-gradient-to-br from-blue-50 to-indigo-100 p-8 dark:from-blue-950/20 dark:to-indigo-950/20">
                        <h3 class="mb-6 text-center text-2xl font-bold">
                            Estadísticas de Rendimiento
                        </h3>
                        <div class="grid grid-cols-2 gap-6">
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">$1B+</div>
                                <p class="text-muted-foreground text-sm">
                                    Transacciones procesadas
                                </p>
                            </div>
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">99.99%</div>
                                <p class="text-muted-foreground text-sm">Uptime garantizado</p>
                            </div>
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">2M+</div>
                                <p class="text-muted-foreground text-sm">Usuarios activos</p>
                            </div>
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">0.001%</div>
                                <p class="text-muted-foreground text-sm">Tasa de fraude</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Case Studies -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Casos de Éxito</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Descubre cómo hemos ayudado a instituciones financieras a transformar
                    digitalmente sus operaciones.
                </p>
            </div>

            <div class="mx-auto grid max-w-5xl grid-cols-1 gap-8 lg:grid-cols-2">
                {
                    caseStudies.map((study) => (
                        <Card className="border-0 shadow-md">
                            <CardHeader>
                                <CardTitle className="text-xl">{study.title}</CardTitle>
                                <p class="text-muted-foreground text-sm">{study.description}</p>
                            </CardHeader>
                            <CardContent>
                                <h4 class="text-primary mb-3 font-semibold">
                                    Resultados obtenidos:
                                </h4>
                                <ul class="space-y-2">
                                    {study.results.map((result) => (
                                        <li class="flex items-center gap-3">
                                            <TrendingUp className="w-4 h-4 text-primary flex-shrink-0" />
                                            <span class="text-sm">{result}</span>
                                        </li>
                                    ))}
                                </ul>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Security Section -->
    <section class="bg-muted/30 py-20">
        <div class="container mx-auto px-4">
            <div class="mx-auto max-w-4xl text-center">
                <Lock className="text-primary mx-auto mb-6 h-16 w-16" />
                <h2 class="mb-6 text-3xl font-bold md:text-4xl">Seguridad de Nivel Bancario</h2>
                <p class="text-muted-foreground mb-8 text-lg">
                    Implementamos múltiples capas de seguridad para proteger los datos financieros
                    más sensibles.
                </p>
                <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
                    <Card className="border-0 shadow-md">
                        <CardContent className="p-6 text-center">
                            <h3 class="mb-2 font-semibold">Tokenización</h3>
                            <p class="text-muted-foreground text-sm">
                                Reemplazamos datos sensibles con tokens seguros
                            </p>
                        </CardContent>
                    </Card>
                    <Card className="border-0 shadow-md">
                        <CardContent className="p-6 text-center">
                            <h3 class="mb-2 font-semibold">Fraud Detection</h3>
                            <p class="text-muted-foreground text-sm">
                                IA para detectar patrones fraudulentos en tiempo real
                            </p>
                        </CardContent>
                    </Card>
                    <Card className="border-0 shadow-md">
                        <CardContent className="p-6 text-center">
                            <h3 class="mb-2 font-semibold">Auditoría Completa</h3>
                            <p class="text-muted-foreground text-sm">
                                Logs detallados de todas las transacciones
                            </p>
                        </CardContent>
                    </Card>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-primary text-primary-foreground py-20">
        <div class="container mx-auto px-4 text-center">
            <div class="mx-auto max-w-3xl">
                <h2 class="mb-6 text-3xl font-bold md:text-4xl">
                    Revoluciona tu institución financiera
                </h2>
                <p class="mb-8 text-lg opacity-90">
                    Únete a las instituciones financieras que ya han transformado sus operaciones
                    con nuestras soluciones seguras e innovadoras.
                </p>
                <div class="flex flex-col justify-center gap-4 sm:flex-row">
                    <a
                        href="/contacto"
                        class="text-primary inline-flex items-center justify-center rounded-lg bg-white px-8 py-3 font-medium transition-colors hover:bg-gray-100">
                        <Building className="mr-2 h-4 w-4" />
                        Agendar Consulta
                    </a>
                    <a
                        href="/soluciones"
                        class="inline-flex items-center justify-center rounded-lg border border-white/20 px-8 py-3 font-medium transition-colors hover:bg-white/10">
                        Ver Todas las Soluciones
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>
