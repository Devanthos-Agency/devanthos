<script>
    document.addEventListener("DOMContentLoaded", function () {
        const btn = document.getElementById("explorar-herramientas-btn");
        const grid = document.getElementById("herramientas-grid");
        const btnText = document.getElementById("btn-text");
        const btnIcon = document.getElementById("btn-icon");
        const cards = document.querySelectorAll(".development-card");

        let isExpanded = false;

        btn?.addEventListener("click", function () {
            if (!isExpanded) {
                // Expandir
                if (grid) {
                    grid.style.maxHeight = "none";
                    grid.classList.remove("opacity-0");
                    grid.classList.add("opacity-100");
                }

                // Animar las cards con delay escalonado
                setTimeout(() => {
                    cards.forEach((card, index) => {
                        setTimeout(() => {
                            card.classList.remove("opacity-0", "translate-y-8");
                            card.classList.add("opacity-100", "translate-y-0");
                        }, index * 150);
                    });
                }, 200);

                // Cambiar el botón
                if (btnText) btnText.textContent = "Ocultar Herramientas";
                if (btnIcon) btnIcon.style.transform = "rotate(180deg)";

                isExpanded = true;
            } else {
                // Colapsar
                cards.forEach((card) => {
                    card.classList.remove("opacity-100", "translate-y-0");
                    card.classList.add("opacity-0", "translate-y-8");
                });

                setTimeout(() => {
                    if (grid) {
                        grid.classList.remove("opacity-100");
                        grid.classList.add("opacity-0");
                        grid.style.maxHeight = "0";
                    }
                }, 400);

                // Cambiar el botón
                if (btnText) btnText.textContent = "Ver Todas las Herramientas";
                if (btnIcon) btnIcon.style.transform = "rotate(0deg)";

                isExpanded = false;
            }
        });
    });
</script>
