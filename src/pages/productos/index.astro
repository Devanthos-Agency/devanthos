                        </div>
                    </div>
                    <!-- Stats -->
                    <div class="grid grid-cols-2 gap-8 pt-12 md:grid-cols-4">
                        {
                            stats.map((stat) => (
                                <div class="text-center">
                                    <div class="text-primary mb-2 text-3xl font-bold [text-shadow:0_0_10px_rgba(94,111,182,0.65)]">
