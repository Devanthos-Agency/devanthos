<Layout
    title="Desarrollo de Portales Personales - Devanthos"
    description="Creamos portales personalizados para empleados, clientes y estudiantes. Plataformas seguras con SSO, gestión de documentos y analytics."
>
    <main class="min-h-screen">
        <!-- Hero Section -->
        <section class="h-dvh md:py-40 md:h-fit relative overflow-hidden">
            <div
                class="absolute inset-0 bg-gradient-to-br from-primary/50 via-transparent to-accent/50"
            >
            </div>
            <div
                class="absolute -top-40 -right-40 w-80 h-80 bg-primary/60 rounded-full blur-3xl"
            >
            </div>
            <div
                class="absolute -bottom-40 -left-40 w-80 h-80 bg-accent/80 rounded-full blur-3xl"
            >
            </div>
            <div
                class="container h-full flex justify-center items-center mx-auto px-4"
            >
                <div class="max-w-4xl mx-auto text-center">
                    <Badge className="mb-4">Portales Personalizados</Badge>
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        Portales que <span class="text-primary">Conectan</span> Comunidades
                    </h1>
                    <p class="text-xl text-muted-foreground mb-8">
                        Desarrollamos portales personalizados para empleados,
                        clientes y estudiantes. Plataformas seguras que
                        centralizan información y mejoran la experiencia de
                        usuario.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a
                            href="/contacto?servicio=portal-personal"
                            class="inline-flex items-center justify-center px-8 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors"
                        >
                            <User className="w-4 h-4 mr-2" />
                            Crear Portal
                        </a>
                        <a
                            href="#tipos-portal"
                            class="inline-flex items-center justify-center px-8 py-3 border border-input rounded-lg font-medium hover:bg-accent hover:text-accent-foreground transition-colors"
                        >
                            Explorar Opciones
                        </a>
                    </div>

                    <div class="mt-12 pt-8 border-t border-muted-foreground/20">
                        <div class="grid grid-cols-3 gap-8 max-w-md mx-auto">
                            <div class="text-center">
                                <div
                                    class="text-2xl font-bold mb-1 text-primary"
                                >
                                    SSO
                                </div>
                                <div class="text-sm text-muted-foreground">
                                    Integration
                                </div>
                            </div>
                            <div class="text-center">
                                <div
                                    class="text-2xl font-bold mb-1 text-primary"
                                >
                                    99.9%
                                </div>
                                <div class="text-sm text-muted-foreground">
                                    Uptime
                                </div>
                            </div>
                            <div class="text-center">
                                <div
                                    class="text-2xl font-bold mb-1 text-primary"
                                >
                                    24/7
                                </div>
                                <div class="text-sm text-muted-foreground">
                                    Support
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Portal Types -->
        <section id="tipos-portal" class="py-20">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Tipos de Portales
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Cada portal está diseñado para necesidades específicas
                        de diferentes audiencias y organizaciones.
                    </p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    {
                        portalTypes.map((type) => (
                            <Card className="border-0 shadow-lg hover:shadow-xl transition-all duration-300 group">
                                <CardHeader className="text-center pb-6">
                                    <div class="mx-auto mb-4 p-4 rounded-lg bg-primary/10 group-hover:bg-primary/20 transition-colors w-fit">
                                        <type.icon className="w-8 h-8 text-primary" />
                                    </div>
                                    <CardTitle className="text-xl mb-2">
                                        {type.title}
                                    </CardTitle>
                                    <p class="text-muted-foreground">
                                        {type.description}
                                    </p>
                                </CardHeader>
                                <CardContent className="space-y-6">
                                    <div>
                                        <h4 class="font-semibold mb-3">
                                            Funcionalidades:
                                        </h4>
                                        <ul class="space-y-2">
                                            {type.features.map((feature) => (
                                                <li class="flex items-center gap-2">
                                                    <CheckCircle className="w-4 h-4 text-green-500 flex-shrink-0" />
                                                    <span class="text-sm">
                                                        {feature}
                                                    </span>
                                                </li>
                                            ))}
                                        </ul>
                                    </div>

                                    <div>
                                        <h4 class="font-semibold mb-3">
                                            Módulos principales:
                                        </h4>
                                        <div class="flex flex-wrap gap-2">
                                            {type.modules.map((module) => (
                                                <Badge
                                                    variant="outline"
                                                    className="text-xs"
                                                >
