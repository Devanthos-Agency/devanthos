<Layout
    title="Desarrollo de Portales Personales - Devanthos"
    description="Creamos portales personalizados para empleados, clientes y estudiantes. Plataformas seguras con SSO, gestión de documentos y analytics.">
    <!-- Hero Section -->
    <HeroProductos
        badge="Portales Personalizados"
        title="Portales que <span>Conectan</span> Comunidades"
        description="Desarrollamos portales personalizados para empleados, clientes y estudiantes. Plataformas seguras que centralizan información y mejoran la experiencia de usuario."
        imageSrc="/images/productos/portal-personal-hero.avif"
        image430Src="/images/productos/portal-personal-hero-w430.avif"
        image768Src="/images/productos/portal-personal-hero-w768.avif"
        buttons={[
            { text: 'Crear Portal', href: '/contacto?servicio=portal-personal', icon: User },
            { text: 'Explorar Opciones', variant: 'secondary', href: '#tipos-portal' },
        ]}
    />

    <!-- Portal Types -->
    <section id="tipos-portal" class="py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Tipos de Portales</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Cada portal está diseñado para necesidades específicas de diferentes audiencias
                    y organizaciones.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
                {
                    portalTypes.map((type) => (
                        <Card className="border-0 shadow-lg hover:shadow-xl transition-all duration-300 group">
                            <CardHeader className="text-center pb-6">
                                <div class="bg-primary/10 group-hover:bg-primary/20 mx-auto mb-4 w-fit rounded-lg p-4 transition-colors">
                                    <type.icon className="w-8 h-8 text-primary" />
                                </div>
                                <CardTitle className="text-xl mb-2">{type.title}</CardTitle>
                                <p class="text-muted-foreground">{type.description}</p>
                            </CardHeader>
                            <CardContent className="space-y-6">
                                <div>
                                    <h4 class="mb-3 font-semibold">Funcionalidades:</h4>
                                    <ul class="space-y-2">
                                        {type.features.map((feature) => (
                                            <li class="flex items-center gap-2">
                                                <CheckCircle className="w-4 h-4 text-green-500 flex-shrink-0" />
                                                <span class="text-sm">{feature}</span>
                                            </li>
                                        ))}
                                    </ul>
                                </div>

                                <div>
                                    <h4 class="mb-3 font-semibold">Módulos principales:</h4>
                                    <div class="flex flex-wrap gap-2">
                                        {type.modules.map((module) => (
                                            <Badge variant="outline" className="text-xs">
                                                {module}
                                            </Badge>
                                        ))}
                                    </div>
                                </div>

                                <div class="border-border space-y-3 border-t pt-4">
                                    <div>
                                        <span class="text-sm font-semibold">Ideal para: </span>
                                        <span class="text-muted-foreground text-sm">
                                            {type.bestFor}
                                        </span>
                                    </div>
                                    <div>
                                        <span class="text-sm font-semibold">Capacidad: </span>
                                        <span class="text-muted-foreground text-sm">
                                            {type.users}
                                        </span>
                                    </div>
                                    <div>
                                        <span class="text-sm font-semibold">Timeline: </span>
                                        <span class="text-muted-foreground text-sm">
                                            {type.timeline}
                                        </span>
                                    </div>
                                    <div>
                                        <span class="text-sm font-semibold">Inversión: </span>
                                        <span class="text-muted-foreground text-sm">
                                            {type.investment}
                                        </span>
                                    </div>
                                </div>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Core Features -->
    <section class="bg-muted/30 py-20">
