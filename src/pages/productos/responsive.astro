---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import {
    Smartphone,
    Tablet,
    Monitor,
    Zap,
    Code,
    CheckCircle,
    ArrowRight,
} from "lucide-react";

const devices = [
    {
        icon: Smartphone,
        name: "Móvil",
        description: "Optimizado para dispositivos móviles desde 320px",
        breakpoint: "320px - 768px",
    },
    {
        icon: Tablet,
        name: "Tablet",
        description: "Perfecto para tablets y dispositivos medianos",
        breakpoint: "768px - 1024px",
    },
    {
        icon: Monitor,
        name: "Desktop",
        description: "Experiencia completa en pantallas grandes",
        breakpoint: "1024px+",
    },
];

const features = [
    {
        icon: Zap,
        title: "Mobile First",
        description:
            "Diseñamos primero para móvil, luego escalamos hacia arriba.",
    },
    {
        icon: Code,
        title: "CSS Grid & Flexbox",
        description: "Utilizamos las mejores tecnologías modernas de CSS.",
    },
    {
        icon: CheckCircle,
        title: "Breakpoints Optimizados",
        description: "Puntos de ruptura cuidadosamente seleccionados.",
    },
];
---

<Layout
    title="Diseño Responsive - Devanthos"
    description="Creamos sitios web que se adaptan perfectamente a cualquier dispositivo. Diseño responsive profesional y optimizado."
>
    <main class="min-h-screen">
        <!-- Hero Section -->
        <section class="h-dvh md:py-40 md:h-fit relative overflow-hidden">
            <div
                class="absolute inset-0 bg-gradient-to-br from-primary/50 via-transparent to-accent/50"
            >
            </div>
            <div
                class="absolute -top-40 -right-40 w-80 h-80 bg-primary/60 rounded-full blur-3xl"
            >
            </div>
            <div
                class="absolute -bottom-40 -left-40 w-80 h-80 bg-accent/80 rounded-full blur-3xl"
            >
            </div>
            <div
                class="container h-full flex justify-center items-center mx-auto px-4"
            >
                <div class="max-w-4xl mx-auto text-center">
                    <Badge className="mb-4">Diseño Responsive</Badge>
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        <span class="text-primary">Adaptable</span> a Todo Dispositivo
                    </h1>
                    <p class="text-xl text-muted-foreground mb-8">
                        Creamos experiencias web que se ven y funcionan
                        perfectamente en móviles, tablets y desktops. Tu sitio
                        web siempre lucirá profesional.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a
                            href="#dispositivos"
                            class="inline-flex items-center justify-center px-8 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors"
                        >
                            Ver Compatibilidad
                            <ArrowRight className="w-4 h-4 ml-2" />
                        </a>
                        <a
                            href="/contacto"
                            class="inline-flex items-center justify-center px-8 py-3 border border-input rounded-lg font-medium hover:bg-accent hover:text-accent-foreground transition-colors"
                        >
                            Solicitar Cotización
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Nuestro Enfoque Responsive
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Utilizamos las mejores prácticas y tecnologías modernas
                        para garantizar una experiencia óptima en todos los
                        dispositivos.
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {
                        features.map((feature) => (
                            <Card className="text-center border-0 shadow-md">
                                <CardHeader>
                                    <div class="mx-auto mb-4 p-3 rounded-lg bg-primary/10 w-fit">
                                        <feature.icon className="w-8 h-8 text-primary" />
                                    </div>
                                    <CardTitle className="text-xl">
                                        {feature.title}
                                    </CardTitle>
                                </CardHeader>
                                <CardContent>
                                    <p class="text-muted-foreground">
                                        {feature.description}
                                    </p>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Devices Section -->
        <section id="dispositivos" class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Compatibilidad Total
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Tu sitio web funcionará perfectamente en todos los
                        dispositivos y tamaños de pantalla.
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {
                        devices.map((device) => (
                            <Card className="border-0 shadow-md hover:shadow-lg transition-shadow">
                                <CardHeader>
                                    <div class="flex items-center justify-center mb-4">
                                        <div class="p-4 rounded-full bg-primary/10">
                                            <device.icon className="w-12 h-12 text-primary" />
                                        </div>
                                    </div>
                                    <CardTitle className="text-xl text-center">
                                        {device.name}
                                    </CardTitle>
                                </CardHeader>
                                <CardContent className="text-center">
                                    <p class="text-muted-foreground mb-4">
                                        {device.description}
                                    </p>
                                    <Badge
                                        variant="outline"
                                        className="font-mono"
                                    >
                                        {device.breakpoint}
                                    </Badge>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Benefits Section -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="max-w-6xl mx-auto">
                    <div
                        class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
                    >
                        <div>
                            <h2 class="text-3xl md:text-4xl font-bold mb-6">
                                Beneficios del Diseño Responsive
                            </h2>
                            <div class="space-y-6">
                                <div class="flex items-start gap-4">
                                    <div
                                        class="flex-shrink-0 w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center"
                                    >
                                        <CheckCircle
                                            className="w-5 h-5 text-primary"
                                        />
                                    </div>
                                    <div>
                                        <h3 class="font-semibold mb-2">
                                            Mejor Experiencia de Usuario
                                        </h3>
                                        <p class="text-muted-foreground">
                                            Los usuarios pueden navegar
                                            cómodamente desde cualquier
                                            dispositivo.
                                        </p>
                                    </div>
                                </div>
                                <div class="flex items-start gap-4">
                                    <div
                                        class="flex-shrink-0 w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center"
                                    >
                                        <CheckCircle
                                            className="w-5 h-5 text-primary"
                                        />
                                    </div>
                                    <div>
                                        <h3 class="font-semibold mb-2">
                                            Mejor SEO
                                        </h3>
                                        <p class="text-muted-foreground">
                                            Google prioriza sitios web
                                            responsive en sus resultados de
                                            búsqueda.
                                        </p>
                                    </div>
                                </div>
                                <div class="flex items-start gap-4">
                                    <div
                                        class="flex-shrink-0 w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center"
                                    >
                                        <CheckCircle
                                            className="w-5 h-5 text-primary"
                                        />
                                    </div>
                                    <div>
                                        <h3 class="font-semibold mb-2">
                                            Menos Mantenimiento
                                        </h3>
                                        <p class="text-muted-foreground">
                                            Un solo sitio web para todos los
                                            dispositivos reduce costos.
                                        </p>
                                    </div>
                                </div>
                                <div class="flex items-start gap-4">
                                    <div
                                        class="flex-shrink-0 w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center"
                                    >
                                        <CheckCircle
                                            className="w-5 h-5 text-primary"
                                        />
                                    </div>
                                    <div>
                                        <h3 class="font-semibold mb-2">
                                            Mayor Alcance
                                        </h3>
                                        <p class="text-muted-foreground">
                                            Llega a más usuarios sin importar el
                                            dispositivo que usen.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div
                            class="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-blue-950/20 dark:to-indigo-950/20 p-8 rounded-xl"
                        >
                            <div class="text-center">
                                <h3 class="text-2xl font-bold mb-4">
                                    Estadísticas Móviles
                                </h3>
                                <div class="grid grid-cols-2 gap-6">
                                    <div>
                                        <div
                                            class="text-3xl font-bold text-primary mb-2"
                                        >
                                            58%
                                        </div>
                                        <p
                                            class="text-sm text-muted-foreground"
                                        >
                                            Tráfico móvil mundial
                                        </p>
                                    </div>
                                    <div>
                                        <div
                                            class="text-3xl font-bold text-primary mb-2"
                                        >
                                            85%
                                        </div>
                                        <p
                                            class="text-sm text-muted-foreground"
                                        >
                                            Usuarios esperan responsive
                                        </p>
                                    </div>
                                    <div>
                                        <div
                                            class="text-3xl font-bold text-primary mb-2"
                                        >
                                            3x
                                        </div>
                                        <p
                                            class="text-sm text-muted-foreground"
                                        >
                                            Más probable que abandonen
                                        </p>
                                    </div>
                                    <div>
                                        <div
                                            class="text-3xl font-bold text-primary mb-2"
                                        >
                                            61%
                                        </div>
                                        <p
                                            class="text-sm text-muted-foreground"
                                        >
                                            No volverán si no es responsive
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-20 bg-primary text-primary-foreground">
            <div class="container mx-auto px-4 text-center">
                <div class="max-w-3xl mx-auto">
                    <h2 class="text-3xl md:text-4xl font-bold mb-6">
                        ¿Listo para un sitio web responsive?
                    </h2>
                    <p class="text-lg opacity-90 mb-8">
                        No pierdas más usuarios por un sitio que no se adapta a
                        sus dispositivos. Contacta con nosotros para crear tu
                        sitio web responsive.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a
                            href="/contacto"
                            class="inline-flex items-center justify-center px-8 py-3 bg-white text-primary rounded-lg font-medium hover:bg-gray-100 transition-colors"
                        >
                            Solicitar Cotización
                        </a>
                        <a
                            href="/productos"
                            class="inline-flex items-center justify-center px-8 py-3 border border-white/20 rounded-lg font-medium hover:bg-white/10 transition-colors"
                        >
                            Ver Otros Productos
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
