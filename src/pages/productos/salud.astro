---
import Layout from '@/layouts/Layout.astro';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import {
    Heart,
    Shield,
    Users,
    Calendar,
    FileText,
    Phone,
    Database,
    ArrowRight,
} from 'lucide-react';
import HeroProductos from '@/components/interfaces/HeroProductos.astro';

const solutions = [
    {
        icon: Heart,
        title: 'Telemedicina',
        description: 'Plataformas para consultas médicas remotas',
        features: [
            'Videoconsultas seguras',
            'Historial médico digital',
            'Prescripciones electrónicas',
            'Integración con dispositivos médicos',
        ],
    },
    {
        icon: Calendar,
        title: 'Gestión de Citas',
        description: 'Sistemas de reserva y gestión de citas médicas',
        features: [
            'Calendario inteligente',
            'Recordatorios automáticos',
            'Gestión de lista de espera',
            'Sincronización multiplataforma',
        ],
    },
    {
        icon: FileText,
        title: 'Historia Clínica Digital',
        description: 'Sistemas seguros para el manejo de registros médicos',
        features: [
            'Almacenamiento seguro HIPAA',
            'Acceso controlado por roles',
            'Búsqueda avanzada',
            'Backup automático',
        ],
    },
];

const features = [
    {
        icon: Shield,
        title: 'Cumplimiento HIPAA',
        description: 'Garantizamos el cumplimiento de todas las regulaciones de privacidad médica.',
    },
    {
        icon: Database,
        title: 'Interoperabilidad',
        description: 'Integración con sistemas existentes y estándares HL7 FHIR.',
    },
    {
        icon: Users,
        title: 'Multi-usuario',
        description: 'Soporte para médicos, pacientes, administradores y personal de apoyo.',
    },
];

const benefits = [
    'Reducción de costos operativos hasta 40%',
    'Mejora en la eficiencia del personal médico',
    'Mayor satisfacción del paciente',
    'Acceso 24/7 a información médica',
    'Reducción de errores médicos',
    'Cumplimiento de regulaciones de salud',
];

const caseStudies = [
    {
        title: 'Clínica San Rafael',
        description: 'Implementación de sistema integral de gestión hospitalaria',
        results: [
            '45% reducción en tiempos de espera',
            '60% menos errores en prescripciones',
            '30% aumento en satisfacción del paciente',
        ],
    },
    {
        title: 'Red de Centros Médicos',
        description: 'Plataforma de telemedicina para 15 centros médicos',
        results: [
            '5000+ consultas remotas mensuales',
            '25% reducción en costos operativos',
            'Expansión a zonas rurales',
        ],
    },
];
---

<Layout
    title="Soluciones para Salud - Devanthos"
    description="Desarrollamos soluciones tecnológicas innovadoras para el sector salud. Telemedicina, gestión hospitalaria, historias clínicas digitales y más.">
    <!-- Hero Section -->

    <HeroProductos
        badge="Soluciones para Salud"
        title="Tecnología que <span>Salva Vidas</span>"
        description="Desarrollamos soluciones tecnológicas innovadoras para hospitales, clínicas y profesionales de la salud. Mejora la atención al paciente y optimiza tus procesos."
        imageSrc="/images/productos/salud-hero.avif"
        buttons={[
            { text: 'Ver Soluciones', href: '#soluciones', icon: Heart },
            { text: 'Consulta Especializada', variant: 'secondary', href: '/contacto' },
        ]}
    />

    <!-- Features Section -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Características Especializadas</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Nuestras soluciones están diseñadas específicamente para el sector salud,
                    cumpliendo con todas las regulaciones y estándares necesarios.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
                {
                    features.map((feature) => (
                        <Card className="text-center border-0 shadow-md">
                            <CardHeader>
                                <div class="bg-primary/10 mx-auto mb-4 w-fit rounded-lg p-3">
                                    <feature.icon className="w-8 h-8 text-primary" />
                                </div>
                                <CardTitle className="text-xl">{feature.title}</CardTitle>
                            </CardHeader>
                            <CardContent>
                                <p class="text-muted-foreground">{feature.description}</p>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Solutions Section -->
    <section id="soluciones" class="bg-muted/30 py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Nuestras Soluciones para Salud</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Desde telemedicina hasta gestión hospitalaria completa, cubrimos todas las
                    necesidades tecnológicas del sector salud.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
                {
                    solutions.map((solution) => (
                        <Card className="border-0 shadow-md hover:shadow-lg transition-shadow">
                            <CardHeader>
                                <div class="bg-primary/10 mb-4 w-fit rounded-lg p-3">
                                    <solution.icon className="w-8 h-8 text-primary" />
                                </div>
                                <CardTitle className="text-xl mb-2">{solution.title}</CardTitle>
                                <p class="text-muted-foreground text-sm">{solution.description}</p>
                            </CardHeader>
                            <CardContent>
                                <ul class="mb-4 space-y-2">
                                    {solution.features.map((feature) => (
                                        <li class="flex items-center gap-2 text-sm">
                                            <div class="bg-primary h-1.5 w-1.5 rounded-full" />
                                            {feature}
                                        </li>
                                    ))}
                                </ul>
                                <a
                                    href="/contacto"
                                    class="text-primary hover:text-primary/80 inline-flex items-center text-sm font-medium">
                                    Más información
                                    <ArrowRight className="w-4 h-4 ml-1" />
                                </a>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Benefits Section -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="mx-auto max-w-6xl">
                <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
                    <div>
                        <h2 class="mb-6 text-3xl font-bold md:text-4xl">Beneficios Comprobados</h2>
                        <p class="text-muted-foreground mb-8 text-lg">
                            Nuestras soluciones han demostrado mejoras significativas en la
                            eficiencia operativa y la calidad de atención médica.
                        </p>
                        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                            {
                                benefits.map((benefit) => (
                                    <div class="flex items-center gap-3">
                                        <div class="bg-primary h-2 w-2 flex-shrink-0 rounded-full" />
                                        <span class="text-sm">{benefit}</span>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                    <div
                        class="rounded-xl bg-gradient-to-br from-green-50 to-emerald-100 p-8 dark:from-green-950/20 dark:to-emerald-950/20">
                        <h3 class="mb-6 text-center text-2xl font-bold">Impacto en Números</h3>
                        <div class="grid grid-cols-2 gap-6">
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">98%</div>
                                <p class="text-muted-foreground text-sm">
                                    Disponibilidad del sistema
                                </p>
                            </div>
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">45%</div>
                                <p class="text-muted-foreground text-sm">Reducción de costos</p>
                            </div>
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">10k+</div>
                                <p class="text-muted-foreground text-sm">Pacientes atendidos</p>
                            </div>
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">24/7</div>
                                <p class="text-muted-foreground text-sm">Soporte técnico</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Case Studies -->
    <section class="bg-muted/30 py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Casos de Éxito</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Descubre cómo hemos ayudado a instituciones de salud a transformar digitalmente
                    sus operaciones.
                </p>
            </div>

            <div class="mx-auto grid max-w-5xl grid-cols-1 gap-8 lg:grid-cols-2">
                {
                    caseStudies.map((study) => (
                        <Card className="border-0 shadow-md">
                            <CardHeader>
                                <CardTitle className="text-xl">{study.title}</CardTitle>
                                <p class="text-muted-foreground text-sm">{study.description}</p>
                            </CardHeader>
                            <CardContent>
                                <h4 class="text-primary mb-3 font-semibold">
                                    Resultados obtenidos:
                                </h4>
                                <ul class="space-y-2">
                                    {study.results.map((result) => (
                                        <li class="flex items-center gap-3">
                                            <Heart className="w-4 h-4 text-primary flex-shrink-0" />
                                            <span class="text-sm">{result}</span>
                                        </li>
                                    ))}
                                </ul>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Security Section -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="mx-auto max-w-4xl text-center">
                <Shield className="text-primary mx-auto mb-6 h-16 w-16" />
                <h2 class="mb-6 text-3xl font-bold md:text-4xl">
                    Seguridad y Privacidad Garantizada
                </h2>
                <p class="text-muted-foreground mb-8 text-lg">
                    La información médica es altamente sensible. Por eso implementamos los más altos
                    estándares de seguridad y cumplimiento normativo.
                </p>
                <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
                    <Card className="border-0 shadow-md">
                        <CardContent className="p-6 text-center">
                            <h3 class="mb-2 font-semibold">Encriptación End-to-End</h3>
                            <p class="text-muted-foreground text-sm">
                                Todos los datos se encriptan en tránsito y en reposo
                            </p>
                        </CardContent>
                    </Card>
                    <Card className="border-0 shadow-md">
                        <CardContent className="p-6 text-center">
                            <h3 class="mb-2 font-semibold">Auditorías Regulares</h3>
                            <p class="text-muted-foreground text-sm">
                                Auditorías de seguridad y penetration testing
                            </p>
                        </CardContent>
                    </Card>
                    <Card className="border-0 shadow-md">
                        <CardContent className="p-6 text-center">
                            <h3 class="mb-2 font-semibold">Backup Redundante</h3>
                            <p class="text-muted-foreground text-sm">
                                Múltiples copias de seguridad en ubicaciones seguras
                            </p>
                        </CardContent>
                    </Card>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-primary text-primary-foreground py-20">
        <div class="container mx-auto px-4 text-center">
            <div class="mx-auto max-w-3xl">
                <h2 class="mb-6 text-3xl font-bold md:text-4xl">
                    Transforma tu institución de salud
                </h2>
                <p class="mb-8 text-lg opacity-90">
                    Únete a las instituciones de salud que ya han mejorado su eficiencia y calidad
                    de atención con nuestras soluciones tecnológicas.
                </p>
                <div class="flex flex-col justify-center gap-4 sm:flex-row">
                    <a
                        href="/contacto"
                        class="text-primary inline-flex items-center justify-center rounded-lg bg-white px-8 py-3 font-medium transition-colors hover:bg-gray-100">
                        <Phone className="mr-2 h-4 w-4" />
                        Agendar Demo
                    </a>
                    <a
                        href="/soluciones"
                        class="inline-flex items-center justify-center rounded-lg border border-white/20 px-8 py-3 font-medium transition-colors hover:bg-white/10">
                        Ver Todas las Soluciones
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>
