---
import Layout from '@/layouts/Layout.astro';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import {
    Globe,
    Zap,
    Users,
    Shield,
    Database,
    Smartphone,
    BarChart3,
    Cloud,
    Search,
    CheckCircle,
    Building,
    Laptop,
    TrendingUp,
    Hospital,
    GraduationCap,
    ShoppingCart,
    Container,
} from 'lucide-react';
import HeroProductos from '@/components/interfaces/HeroProductos.astro';

const webAppTypes = [
    {
        title: 'SPA (Single Page Application)',
        description:
            'Aplicaciones rápidas y fluidas con una sola página que se actualiza dinámicamente',
        icon: Zap,
        technologies: ['React', 'Vue.js', 'Angular', 'Svelte'],
        pros: [
            'Navegación fluida',
            'Menor carga servidor',
            'UX similar a móvil',
            'Desarrollo ágil',
        ],
        bestFor: 'Dashboards, admin panels, aplicaciones interactivas',
        timeline: '2-4 meses',
        investment: '$8,000 - $25,000',
    },
    {
        title: 'Progressive Web App (PWA)',
        description: 'Apps web que funcionan como nativas con capacidades offline',
        icon: Smartphone,
        technologies: ['PWA', 'Service Workers', 'Web APIs', 'Workbox'],
        pros: ['Funciona offline', 'Instalable', 'Push notifications', 'Multiplataforma'],
        bestFor: 'E-commerce, noticias, productividad, servicios',
        timeline: '3-5 meses',
        investment: '$10,000 - $30,000',
    },
    {
        title: 'Web App Enterprise',
        description: 'Sistemas complejos para gestión empresarial y procesos internos',
        icon: Building,
        technologies: ['Microservicios', 'Docker', 'Kubernetes', 'Cloud'],
        pros: ['Alta escalabilidad', 'Seguridad avanzada', 'Integraciones', 'Multi-tenant'],
        bestFor: 'CRM, ERP, sistemas de gestión, plataformas B2B',
        timeline: '4-8 meses',
        investment: '$20,000 - $80,000+',
    },
];

const features = [
    {
        icon: Users,
        title: 'Gestión de Usuarios',
        description: 'Sistema completo de autenticación, roles y permisos granulares.',
        capabilities: [
            'Multi-role authentication',
            'OAuth integration',
            'Permission matrix',
            'User analytics',
        ],
    },
    {
        icon: Database,
        title: 'Base de Datos Avanzada',
        description: 'Arquitectura de datos optimizada con caché, replicación y backup automático.',
        capabilities: ['Real-time queries', 'Data caching', 'Automated backups', 'Migration tools'],
    },
    {
        icon: BarChart3,
        title: 'Analytics & Reporting',
        description:
            'Dashboards interactivos con métricas en tiempo real y reportes personalizables.',
        capabilities: [
            'Custom dashboards',
            'Real-time metrics',
            'Export tools',
            'Automated reports',
        ],
    },
    {
        icon: Shield,
        title: 'Seguridad Enterprise',
        description: 'Protección avanzada con encriptación, auditoría y cumplimiento normativo.',
        capabilities: [
            'End-to-end encryption',
            'Audit trails',
            'GDPR compliance',
            'Penetration testing',
        ],
    },
    {
        icon: Cloud,
        title: 'Cloud Integration',
        description: 'Integración nativa con AWS, Azure, Google Cloud y servicios terceros.',
        capabilities: [
            'Multi-cloud support',
            'Auto-scaling',
            'CDN integration',
            'Serverless functions',
        ],
    },
    {
        icon: Search,
        title: 'Búsqueda Avanzada',
        description: 'Motor de búsqueda inteligente con filtros, facetas y búsqueda semántica.',
        capabilities: [
            'Full-text search',
            'Faceted navigation',
            'Auto-complete',
            'Search analytics',
        ],
    },
];

const industries = [
    {
        name: 'SaaS & Software',
        description: 'Plataformas de software como servicio escalables y multi-tenant',
        examples: ['CRM platforms', 'Project management', 'Analytics tools', 'API platforms'],
        icon: Laptop,
        specialFeatures: ['Multi-tenancy', 'Billing integration', 'API management', 'White-label'],
    },
    {
        name: 'Fintech & Banking',
        description: 'Aplicaciones financieras con máxima seguridad y compliance',
        examples: [
            'Digital banking',
            'Investment platforms',
            'Payment processing',
            'Crypto exchanges',
        ],
        icon: TrendingUp,
        specialFeatures: ['PCI compliance', 'KYC/AML', 'Real-time trading', 'Risk management'],
    },
    {
        name: 'Healthcare & MedTech',
        description: 'Sistemas médicos con gestión de pacientes y telemedicina',
        examples: ['Patient portals', 'EHR systems', 'Telemedicine', 'Medical devices'],
        icon: Hospital,
        specialFeatures: [
            'HIPAA compliance',
            'HL7 integration',
            'Clinical workflows',
            'Medical imaging',
        ],
    },
    {
        name: 'E-learning & EdTech',
        description: 'Plataformas educativas con LMS y herramientas de aprendizaje',
        examples: [
            'Learning management',
            'Online courses',
            'Assessment tools',
            'Virtual classrooms',
        ],
        icon: GraduationCap,
        specialFeatures: [
            'SCORM compliance',
            'Gamification',
            'Progress tracking',
            'Video streaming',
        ],
    },
    {
        name: 'Logística & Supply Chain',
        description: 'Sistemas de gestión logística y cadena de suministro',
        examples: [
            'Inventory management',
            'Fleet tracking',
            'Warehouse systems',
            'Order processing',
        ],
        icon: Container,
        specialFeatures: [
            'Real-time tracking',
            'Route optimization',
            'IoT integration',
            'Predictive analytics',
        ],
    },
    {
        name: 'Marketplace & E-commerce',
        description: 'Plataformas de comercio electrónico y marketplaces multi-vendor',
        examples: [
            'Multi-vendor platforms',
            'B2B marketplaces',
            'Auction systems',
            'Subscription commerce',
        ],
        icon: ShoppingCart,
        specialFeatures: [
            'Multi-vendor support',
            'Payment gateways',
            'Inventory sync',
            'Review system',
        ],
    },
];

const architecture = [
    {
        layer: 'Frontend',
        description: 'Interfaz de usuario moderna y responsive',
        technologies: ['React/Vue/Angular', 'TypeScript', 'Tailwind CSS', 'Component libraries'],
        features: [
            'Responsive design',
            'Accessibility',
            'Performance optimization',
            'Cross-browser compatibility',
        ],
    },
    {
        layer: 'Backend API',
        description: 'API RESTful/GraphQL escalable y documentada',
        technologies: ['Node.js/Python/Java', 'Express/FastAPI', 'GraphQL', 'API Gateway'],
        features: ['RESTful/GraphQL APIs', 'Authentication', 'Rate limiting', 'API documentation'],
    },
    {
        layer: 'Database',
        description: 'Arquitectura de datos optimizada y escalable',
        technologies: ['PostgreSQL', 'MongoDB', 'Redis', 'Elasticsearch'],
        features: ['Data modeling', 'Query optimization', 'Caching strategy', 'Backup & recovery'],
    },
    {
        layer: 'Infrastructure',
        description: 'Infraestructura cloud escalable y segura',
        technologies: ['AWS/Azure/GCP', 'Docker', 'Kubernetes', 'CI/CD'],
        features: ['Auto-scaling', 'Load balancing', 'Monitoring', 'Disaster recovery'],
    },
];

const process = [
    {
        phase: 'Discovery & Planning',
        duration: '2-3 semanas',
        activities: [
            'Business analysis',
            'Technical requirements',
            'User research',
            'Architecture planning',
        ],
        deliverables: [
            'Requirements document',
            'Technical architecture',
            'Project roadmap',
            'Risk assessment',
        ],
    },
    {
        phase: 'Design & Prototyping',
        duration: '3-4 semanas',
        activities: [
            'UX/UI design',
            'Information architecture',
            'Interactive prototypes',
            'Design system',
        ],
        deliverables: [
            'Design system',
            'Interactive prototypes',
            'User flows',
            'Technical specifications',
        ],
    },
    {
        phase: 'MVP Development',
        duration: '6-10 semanas',
        activities: [
            'Core feature development',
            'API creation',
            'Database setup',
            'Basic integrations',
        ],
        deliverables: ['MVP application', 'API documentation', 'Database schema', 'Basic testing'],
    },
    {
        phase: 'Feature Enhancement',
        duration: '4-8 semanas',
        activities: [
            'Advanced features',
            'Third-party integrations',
            'Performance optimization',
            'Security hardening',
        ],
        deliverables: [
            'Full-featured app',
            'Integration setup',
            'Security audit',
            'Performance report',
        ],
    },
    {
        phase: 'Testing & Launch',
        duration: '2-4 semanas',
        activities: [
            'Comprehensive testing',
            'Security testing',
            'Performance testing',
            'Deployment setup',
        ],
        deliverables: [
            'Test reports',
            'Security certificate',
            'Live application',
            'Monitoring setup',
        ],
    },
];

const integrations = [
    'Payment Gateways (Stripe, PayPal)',
    'Authentication (Auth0, OAuth)',
    'Cloud Storage (AWS S3, Cloudinary)',
    'Email Services (SendGrid, Mailgun)',
    'Analytics (Google Analytics, Mixpanel)',
    'CRM Systems (Salesforce, HubSpot)',
    'Social Media APIs',
    'Maps & Location (Google Maps)',
    'Video Streaming (Vimeo, YouTube)',
    'Chat & Messaging (Twilio, Socket.io)',
];
---

<Layout
    title="Desarrollo de Aplicaciones Web - Devanthos"
    description="Desarrollamos aplicaciones web modernas: SPA, PWA, sistemas enterprise. React, Vue, Angular. Soluciones escalables para tu negocio.">
    <!-- Hero Section -->
    <HeroProductos
        badge="Aplicaciones Web"
        title="Web Apps que <span>Transforman</span> Negocios"
        description="Desarrollamos aplicaciones web modernas, escalables y seguras que impulsan la productividad y el crecimiento de tu empresa."
        imageSrc="/images/productos/web-app-hero.avif"
        image430Src="/images/productos/web-app-hero-w430.avif"
        image768Src="/images/productos/web-app-hero-w768.avif"
        buttons={[
            { text: 'Iniciar Proyecto', href: '/contacto?servicio=web-app', icon: Globe },
            { text: 'Explorar Soluciones', variant: 'secondary', href: '#tipos-webapp' },
        ]}
    />

    <!-- Web App Types -->
    <section id="tipos-webapp" class="py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Tipos de Aplicaciones Web</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Desde SPAs ultrarrápidas hasta sistemas enterprise complejos, creamos la
                    solución perfecta para tu negocio.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
                {
                    webAppTypes.map((type) => (
                        <Card className="border-0 shadow-lg hover:shadow-xl transition-all duration-300 group">
                            <CardHeader className="text-center pb-6">
                                <div class="bg-primary/10 group-hover:bg-primary/20 mx-auto mb-4 w-fit rounded-lg p-4 transition-colors">
                                    <type.icon className="w-8 h-8 text-primary" />
                                </div>
                                <CardTitle className="text-xl mb-2">{type.title}</CardTitle>
                                <p class="text-muted-foreground">{type.description}</p>
                            </CardHeader>
                            <CardContent className="space-y-6">
                                <div>
                                    <h4 class="mb-3 font-semibold">Tecnologías:</h4>
                                    <div class="flex flex-wrap gap-2">
                                        {type.technologies.map((tech) => (
                                            <Badge variant="outline" className="text-xs">
                                                {tech}
                                            </Badge>
                                        ))}
                                    </div>
                                </div>

                                <div>
                                    <h4 class="mb-3 font-semibold">Ventajas:</h4>
                                    <ul class="space-y-2">
                                        {type.pros.map((pro) => (
                                            <li class="flex items-center gap-2">
                                                <CheckCircle className="w-4 h-4 text-green-500 flex-shrink-0" />
                                                <span class="text-sm">{pro}</span>
                                            </li>
                                        ))}
                                    </ul>
                                </div>

                                <div class="border-border space-y-3 border-t pt-4">
                                    <div>
                                        <span class="text-sm font-semibold">Ideal para: </span>
                                        <span class="text-muted-foreground text-sm">
                                            {type.bestFor}
                                        </span>
                                    </div>
                                    <div>
                                        <span class="text-sm font-semibold">Timeline: </span>
                                        <span class="text-muted-foreground text-sm">
                                            {type.timeline}
                                        </span>
                                    </div>
                                    <div>
                                        <span class="text-sm font-semibold">Inversión: </span>
                                        <span class="text-muted-foreground text-sm">
                                            {type.investment}
                                        </span>
                                    </div>
                                </div>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Features -->
    <section class="bg-muted/30 py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Funcionalidades Avanzadas</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Integramos las funcionalidades más demandadas para crear aplicaciones web
                    robustas y escalables.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
                {
                    features.map((feature) => (
                        <Card className="border-0 shadow-md hover:shadow-lg transition-all duration-300 group">
                            <CardHeader>
                                <div class="mb-4 flex items-center gap-4">
                                    <div class="bg-primary/10 group-hover:bg-primary/20 rounded-lg p-3 transition-colors">
                                        <feature.icon className="w-6 h-6 text-primary" />
                                    </div>
                                    <CardTitle className="text-lg">{feature.title}</CardTitle>
                                </div>
                                <p class="text-muted-foreground text-sm">{feature.description}</p>
                            </CardHeader>
                            <CardContent>
                                <ul class="space-y-2">
                                    {feature.capabilities.map((capability) => (
                                        <li class="flex items-center gap-2">
                                            <div class="bg-primary h-1.5 w-1.5 flex-shrink-0 rounded-full" />
                                            <span class="text-sm">{capability}</span>
                                        </li>
                                    ))}
                                </ul>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Architecture -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Arquitectura Moderna</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Diseñamos arquitecturas escalables, mantenibles y seguras siguiendo las mejores
                    prácticas.
                </p>
            </div>

            <div class="mx-auto max-w-5xl space-y-8">
                {
                    architecture.map((layer, index) => (
                        <Card className="border-0 shadow-md">
                            <CardContent className="p-8">
                                <div class="grid grid-cols-1 items-center gap-8 lg:grid-cols-4">
                                    <div class="text-center lg:text-left">
                                        <div class="mb-4 flex items-center justify-center gap-4 lg:justify-start">
                                            <div class="bg-primary text-primary-foreground flex h-12 w-12 items-center justify-center rounded-full text-xl font-bold">
                                                {index + 1}
                                            </div>
                                            <div>
                                                <h3 class="text-lg font-bold">{layer.layer}</h3>
                                            </div>
                                        </div>
                                        <p class="text-muted-foreground text-sm">
                                            {layer.description}
                                        </p>
                                    </div>

                                    <div>
                                        <h4 class="mb-3 font-semibold">Tecnologías:</h4>
                                        <div class="flex flex-wrap gap-2">
                                            {layer.technologies.map((tech) => (
                                                <Badge variant="outline" className="text-xs">
                                                    {tech}
                                                </Badge>
                                            ))}
                                        </div>
                                    </div>

                                    <div class="lg:col-span-2">
                                        <h4 class="mb-3 font-semibold">Características:</h4>
                                        <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
                                            {layer.features.map((feature) => (
                                                <div class="flex items-center gap-2">
                                                    <CheckCircle className="w-4 h-4 text-green-500 flex-shrink-0" />
                                                    <span class="text-sm">{feature}</span>
                                                </div>
                                            ))}
                                        </div>
                                    </div>
                                </div>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Industries -->
    <section class="bg-muted/30 py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Soluciones por Industria</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Experiencia especializada en sectores clave con soluciones adaptadas a cada
                    industria.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
                {
                    industries.map((industry) => (
                        <Card className="border-0 shadow-md hover:shadow-lg transition-all duration-300">
                            <CardHeader>
                                <div class="mb-4 text-4xl">
                                    <industry.icon className="w-8 h-8 text-primary" />
                                </div>
                                <CardTitle className="text-xl mb-2">{industry.name}</CardTitle>
                                <p class="text-muted-foreground text-sm">{industry.description}</p>
                            </CardHeader>
                            <CardContent className="space-y-4">
                                <div>
                                    <h4 class="mb-3 font-semibold">Aplicaciones típicas:</h4>
                                    <ul class="space-y-1">
                                        {industry.examples.map((example) => (
                                            <li class="text-muted-foreground text-sm">
                                                • {example}
                                            </li>
                                        ))}
                                    </ul>
                                </div>

                                <div>
                                    <h4 class="mb-3 font-semibold">Características especiales:</h4>
                                    <div class="flex flex-wrap gap-2">
                                        {industry.specialFeatures.map((feature) => (
                                            <Badge variant="outline" className="text-xs">
                                                {feature}
                                            </Badge>
                                        ))}
                                    </div>
                                </div>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Integrations -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Integraciones Disponibles</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Conectamos tu aplicación con las herramientas y servicios que ya utilizas.
                </p>
            </div>

            <div class="mx-auto max-w-4xl">
                <div class="grid grid-cols-2 gap-4 md:grid-cols-3 lg:grid-cols-5">
                    {
                        integrations.map((integration) => (
                            <Card className="border-0 shadow-sm hover:shadow-md transition-all duration-300 text-center">
                                <CardContent className="p-4">
                                    <div class="text-sm font-medium">{integration}</div>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </div>
    </section>

    <!-- Process -->
    <section class="bg-muted/30 py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Proceso de Desarrollo</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Metodología ágil con entregas incrementales y validación constante.
                </p>
            </div>

            <div class="mx-auto max-w-5xl space-y-8">
                {
                    process.map((phase, index) => (
                        <Card className="border-0 shadow-md">
                            <CardContent className="p-8">
                                <div class="grid grid-cols-1 items-start gap-8 lg:grid-cols-4">
                                    <div>
                                        <div class="mb-4 flex items-center gap-4">
                                            <div class="bg-primary text-primary-foreground flex h-12 w-12 items-center justify-center rounded-full text-xl font-bold">
                                                {index + 1}
                                            </div>
                                            <div>
                                                <h3 class="text-lg font-bold">{phase.phase}</h3>
                                                <Badge variant="outline">{phase.duration}</Badge>
                                            </div>
                                        </div>
                                    </div>

                                    <div>
                                        <h4 class="mb-3 font-semibold">Actividades:</h4>
                                        <ul class="space-y-1">
                                            {phase.activities.map((activity) => (
                                                <li class="text-muted-foreground text-sm">
                                                    • {activity}
                                                </li>
                                            ))}
                                        </ul>
                                    </div>

                                    <div class="lg:col-span-2">
                                        <h4 class="mb-3 font-semibold">Entregables:</h4>
                                        <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
                                            {phase.deliverables.map((deliverable) => (
                                                <div class="flex items-center gap-2">
                                                    <CheckCircle className="w-4 h-4 text-green-500 flex-shrink-0" />
                                                    <span class="text-sm">{deliverable}</span>
                                                </div>
                                            ))}
                                        </div>
                                    </div>
                                </div>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="from-primary to-primary/80 text-primary-foreground bg-gradient-to-r py-20">
        <div class="container mx-auto px-4 text-center">
            <div class="mx-auto max-w-3xl">
                <h2 class="mb-6 text-3xl font-bold md:text-4xl">
                    ¿Listo para transformar tu negocio?
                </h2>
                <p class="mb-8 text-lg opacity-90">
                    Desarrollamos la aplicación web perfecta para tus necesidades. Desde MVPs hasta
                    sistemas enterprise complejos.
                </p>
                <div class="flex flex-col justify-center gap-4 sm:flex-row">
                    <a
                        href="/contacto?servicio=web-app"
                        class="text-primary inline-flex items-center justify-center rounded-lg bg-white px-8 py-3 font-medium transition-colors hover:bg-gray-100">
                        <Globe className="mr-2 h-4 w-4" />
                        Iniciar Proyecto
                    </a>
                    <a
                        href="/productos"
                        class="inline-flex items-center justify-center rounded-lg border border-white/20 px-8 py-3 font-medium transition-colors hover:bg-white/10">
                        Ver Productos
                    </a>
                </div>

                <div class="mt-12 border-t border-white/20 pt-8">
                    <div class="mx-auto grid max-w-md grid-cols-3 gap-8">
                        <div class="text-center">
                            <div class="mb-1 text-2xl font-bold">200+</div>
                            <div class="text-sm opacity-75">Apps Desarrolladas</div>
                        </div>
                        <div class="text-center">
                            <div class="mb-1 text-2xl font-bold">99.9%</div>
                            <div class="text-sm opacity-75">Uptime Promedio</div>
                        </div>
                        <div class="text-center">
                            <div class="mb-1 text-2xl font-bold">50+</div>
                            <div class="text-sm opacity-75">Clientes Enterprise</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
