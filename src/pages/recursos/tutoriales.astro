---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import {
    BookOpen,
    Clock,
    Bell,
    Mail,
    Rocket,
    Code2,
    Users,
    Star,
    Calendar,
    ArrowRight,
} from "lucide-react";

const comingSoonFeatures = [
    {
        icon: BookOpen,
        title: "Tutoriales Interactivos",
        description:
            "Aprende paso a paso con ejemplos prácticos y código ejecutable",
    },
    {
        icon: Code2,
        title: "Proyectos Reales",
        description:
            "Construye aplicaciones completas siguiendo nuestras guías",
    },
    {
        icon: Users,
        title: "Comunidad de Aprendizaje",
        description:
            "Conecta con otros desarrolladores y comparte conocimiento",
    },
    {
        icon: Star,
        title: "Certificaciones",
        description: "Obtén certificados reconocidos al completar los cursos",
    },
];

const plannedContent = [
    {
        category: "Desarrollo Web",
        tutorials: [
            "Introducción a Astro",
            "React Avanzado",
            "TypeScript Práctico",
            "Tailwind CSS Mastery",
        ],
        comingSoon: "Q3 2025",
    },
    {
        category: "Backend & APIs",
        tutorials: [
            "Node.js y Express",
            "Python con FastAPI",
            "Bases de datos modernas",
            "Microservicios",
        ],
        comingSoon: "Q4 2025",
    },
    {
        category: "DevOps & Cloud",
        tutorials: [
            "Docker Fundamentals",
            "Kubernetes Basics",
            "CI/CD Pipelines",
            "AWS Deployment",
        ],
        comingSoon: "Q1 2026",
    },
    {
        category: "Mobile Development",
        tutorials: [
            "React Native",
            "Flutter Basics",
            "App Store Deployment",
            "Mobile UI/UX",
        ],
        comingSoon: "Q2 2026",
    },
];

const benefits = [
    "Contenido actualizado constantemente",
    "Proyectos del mundo real",
    "Soporte de la comunidad",
    "Certificados oficiales",
    "Acceso de por vida",
    "Descargables y recursos",
];
---

<Layout
    title="Tutoriales - Próximamente | DevsHub"
    description="Nuestros tutoriales están en desarrollo. Regístrate para ser notificado cuando estén disponibles los mejores cursos de desarrollo."
>
    <main class="min-h-screen pt-24">
        <!-- Hero Section -->
        <section
            class="py-20 bg-gradient-to-br from-amber-50 to-orange-100 dark:from-amber-950/20 dark:to-orange-950/20"
        >
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto text-center">
                    <Badge
                        className="mb-4 bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-200"
                    >
                        Próximamente
                    </Badge>
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        <span class="text-primary">Tutoriales</span> de Clase Mundial
                    </h1>
                    <p class="text-xl text-muted-foreground mb-8">
                        Estamos preparando una experiencia de aprendizaje
                        revolucionaria. Tutoriales interactivos, proyectos
                        reales y una comunidad vibrante te esperan muy pronto.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a
                            href="#notificarme"
                            class="inline-flex items-center justify-center px-8 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors"
                        >
                            <Bell className="w-4 h-4 mr-2" />
                            Notificarme Cuando Esté Listo
                        </a>
                        <a
                            href="/productos/documentacion"
                            class="inline-flex items-center justify-center px-8 py-3 border border-input rounded-lg font-medium hover:bg-accent hover:text-accent-foreground transition-colors"
                        >
                            Ver Documentación Actual
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Coming Soon Features -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Lo Que Viene
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Estamos diseñando la mejor experiencia de aprendizaje
                        para desarrolladores, con contenido práctico y
                        herramientas innovadoras.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
                >
                    {
                        comingSoonFeatures.map((feature) => (
                            <Card className="border-0 shadow-md text-center hover:shadow-lg transition-shadow">
                                <CardHeader>
                                    <div class="mx-auto mb-4 p-3 rounded-lg bg-primary/10 w-fit">
                                        <feature.icon className="w-8 h-8 text-primary" />
                                    </div>
                                    <CardTitle className="text-lg">
                                        {feature.title}
                                    </CardTitle>
                                </CardHeader>
                                <CardContent>
                                    <p class="text-muted-foreground text-sm">
                                        {feature.description}
                                    </p>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Planned Content -->
        <section class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Contenido Planificado
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Un roadmap completo de tutoriales que cubrirán todas las
                        tecnologías modernas de desarrollo.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto"
                >
                    {
                        plannedContent.map((content) => (
                            <Card className="border-0 shadow-md">
                                <CardHeader>
                                    <div class="flex justify-between items-start mb-4">
                                        <CardTitle className="text-xl">
                                            {content.category}
                                        </CardTitle>
                                        <Badge
                                            variant="outline"
                                            className="text-xs"
                                        >
                                            {content.comingSoon}
                                        </Badge>
                                    </div>
                                </CardHeader>
                                <CardContent>
                                    <ul class="space-y-2">
                                        {content.tutorials.map((tutorial) => (
                                            <li class="flex items-center gap-3">
                                                <div class="w-1.5 h-1.5 rounded-full bg-primary" />
                                                <span class="text-sm">
                                                    {tutorial}
                                                </span>
                                            </li>
                                        ))}
                                    </ul>
                                </CardContent>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Timeline -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Cronograma de Lanzamiento
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Nuestro plan de desarrollo y lanzamiento de contenido
                        educativo.
                    </p>
                </div>

                <div class="max-w-4xl mx-auto">
                    <div class="relative">
                        <!-- Timeline line -->
                        <div
                            class="absolute left-1/2 transform -translate-x-1/2 w-0.5 h-full bg-primary/20"
                        >
                        </div>

                        <div class="space-y-12">
                            <!-- Q2 2025 -->
                            <div class="relative flex items-center">
                                <div class="flex-1 text-right pr-8">
                                    <h3 class="font-bold text-lg">Q2 2025</h3>
                                    <p class="text-sm text-muted-foreground">
                                        Desarrollo de plataforma
                                    </p>
                                </div>
                                <div
                                    class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-primary rounded-full"
                                >
                                </div>
                                <div class="flex-1 pl-8">
                                    <p class="text-sm">
                                        Diseño de interfaz y arquitectura base
                                    </p>
                                </div>
                            </div>

                            <!-- Q3 2025 -->
                            <div class="relative flex items-center">
                                <div class="flex-1 text-right pr-8">
                                    <p class="text-sm">
                                        Primeros tutoriales de desarrollo web
                                    </p>
                                </div>
                                <div
                                    class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-primary rounded-full"
                                >
                                </div>
                                <div class="flex-1 pl-8">
                                    <h3 class="font-bold text-lg">Q3 2025</h3>
                                    <p class="text-sm text-muted-foreground">
                                        Beta privada
                                    </p>
                                </div>
                            </div>

                            <!-- Q4 2025 -->
                            <div class="relative flex items-center">
                                <div class="flex-1 text-right pr-8">
                                    <h3 class="font-bold text-lg">Q4 2025</h3>
                                    <p class="text-sm text-muted-foreground">
                                        Lanzamiento público
                                    </p>
                                </div>
                                <div
                                    class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-primary rounded-full"
                                >
                                </div>
                                <div class="flex-1 pl-8">
                                    <p class="text-sm">
                                        Tutoriales completos de backend y APIs
                                    </p>
                                </div>
                            </div>

                            <!-- 2026 -->
                            <div class="relative flex items-center">
                                <div class="flex-1 text-right pr-8">
                                    <p class="text-sm">
                                        Expansión a DevOps y Mobile
                                    </p>
                                </div>
                                <div
                                    class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-primary/60 rounded-full"
                                >
                                </div>
                                <div class="flex-1 pl-8">
                                    <h3 class="font-bold text-lg">2026</h3>
                                    <p class="text-sm text-muted-foreground">
                                        Contenido avanzado
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Benefits Preview -->
        <section class="py-20 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="max-w-6xl mx-auto">
                    <div
                        class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
                    >
                        <div>
                            <h2 class="text-3xl md:text-4xl font-bold mb-6">
                                ¿Por Qué Esperar Nuestros Tutoriales?
                            </h2>
                            <p class="text-lg text-muted-foreground mb-8">
                                Estamos creando más que simples tutoriales. Será
                                una experiencia de aprendizaje completa que te
                                llevará desde principiante hasta experto.
                            </p>
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                {
                                    benefits.map((benefit) => (
                                        <div class="flex items-center gap-3">
                                            <div class="w-2 h-2 rounded-full bg-primary flex-shrink-0" />
                                            <span class="text-sm">
                                                {benefit}
                                            </span>
                                        </div>
                                    ))
                                }
                            </div>
                        </div>
                        <div
                            class="bg-gradient-to-br from-blue-50 to-purple-100 dark:from-blue-950/20 dark:to-purple-950/20 p-8 rounded-xl"
                        >
                            <h3 class="text-2xl font-bold mb-6 text-center">
                                En Desarrollo
                            </h3>
                            <div class="grid grid-cols-2 gap-6">
                                <div class="text-center">
                                    <div
                                        class="text-3xl font-bold text-primary mb-2"
                                    >
                                        50+
                                    </div>
                                    <p class="text-sm text-muted-foreground">
                                        Tutoriales planificados
                                    </p>
                                </div>
                                <div class="text-center">
                                    <div
                                        class="text-3xl font-bold text-primary mb-2"
                                    >
                                        10+
                                    </div>
                                    <p class="text-sm text-muted-foreground">
                                        Proyectos completos
                                    </p>
                                </div>
                                <div class="text-center">
                                    <div
                                        class="text-3xl font-bold text-primary mb-2"
                                    >
                                        100%
                                    </div>
                                    <p class="text-sm text-muted-foreground">
                                        Contenido gratuito
                                    </p>
                                </div>
                                <div class="text-center">
                                    <div
                                        class="text-3xl font-bold text-primary mb-2"
                                    >
                                        24/7
                                    </div>
                                    <p class="text-sm text-muted-foreground">
                                        Acceso ilimitado
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Newsletter Signup -->
        <section
            id="notificarme"
            class="py-20 bg-primary text-primary-foreground"
        >
            <div class="container mx-auto px-4 text-center">
                <div class="max-w-3xl mx-auto">
                    <Clock className="w-16 h-16 mx-auto mb-6 opacity-90" />
                    <h2 class="text-3xl md:text-4xl font-bold mb-6">
                        Sé el Primero en Saberlo
                    </h2>
                    <p class="text-lg opacity-90 mb-8">
                        Regístrate para recibir actualizaciones exclusivas sobre
                        el desarrollo de nuestros tutoriales y ser notificado
                        tan pronto como estén disponibles.
                    </p>
                    <div
                        class="flex flex-col sm:flex-row gap-4 justify-center max-w-md mx-auto"
                    >
                        <input
                            type="email"
                            placeholder="tu@email.com"
                            class="flex-1 px-4 py-3 rounded-lg text-foreground focus:outline-none focus:ring-2 focus:ring-white/20"
                        />
                        <button
                            class="px-6 py-3 bg-white text-primary rounded-lg font-medium hover:bg-gray-100 transition-colors inline-flex items-center justify-center"
                        >
                            <Mail className="w-4 h-4 mr-2" />
                            Notificarme
                        </button>
                    </div>
                    <p class="text-sm opacity-75 mt-4">
                        No spam. Solo actualizaciones importantes sobre nuestros
                        tutoriales.
                    </p>
                </div>
            </div>
        </section>

        <!-- Alternative Resources -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        Mientras Tanto...
                    </h2>
                    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                        Explora nuestros recursos actuales para comenzar tu
                        journey de desarrollo ahora mismo.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto"
                >
                    <Card
                        className="border-0 shadow-md text-center hover:shadow-lg transition-shadow"
                    >
                        <CardHeader>
                            <BookOpen
                                className="w-12 h-12 text-primary mx-auto mb-4"
                            />
                            <CardTitle>Documentación</CardTitle>
                        </CardHeader>
                        <CardContent>
                            <p class="text-muted-foreground text-sm mb-4">
                                Guías completas y referencias de API
                            </p>
                            <a
                                href="/productos/documentacion"
                                class="inline-flex items-center text-primary hover:text-primary/80 font-medium text-sm"
                            >
                                Explorar Docs
                                <ArrowRight className="w-4 h-4 ml-1" />
                            </a>
                        </CardContent>
                    </Card>

                    <Card
                        className="border-0 shadow-md text-center hover:shadow-lg transition-shadow"
                    >
                        <CardHeader>
                            <Code2
                                className="w-12 h-12 text-primary mx-auto mb-4"
                            />
                            <CardTitle>Ejemplos</CardTitle>
                        </CardHeader>
                        <CardContent>
                            <p class="text-muted-foreground text-sm mb-4">
                                Código de ejemplo y demos en vivo
                            </p>
                            <a
                                href="/productos/ejemplos"
                                class="inline-flex items-center text-primary hover:text-primary/80 font-medium text-sm"
                            >
                                Ver Ejemplos
                                <ArrowRight className="w-4 h-4 ml-1" />
                            </a>
                        </CardContent>
                    </Card>

                    <Card
                        className="border-0 shadow-md text-center hover:shadow-lg transition-shadow"
                    >
                        <CardHeader>
                            <Rocket
                                className="w-12 h-12 text-primary mx-auto mb-4"
                            />
                            <CardTitle>Consultoría</CardTitle>
                        </CardHeader>
                        <CardContent>
                            <p class="text-muted-foreground text-sm mb-4">
                                Ayuda personalizada para tu proyecto
                            </p>
                            <a
                                href="/contacto"
                                class="inline-flex items-center text-primary hover:text-primary/80 font-medium text-sm"
                            >
                                Contactar
                                <ArrowRight className="w-4 h-4 ml-1" />
                            </a>
                        </CardContent>
                    </Card>
                </div>
            </div>
        </section>
    </main>
</Layout>
