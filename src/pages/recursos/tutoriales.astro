---
import Layout from '@/layouts/Layout.astro';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { BookOpen, Clock, Bell, Mail, Rocket, Code2, Users, Star, ArrowRight } from 'lucide-react';
import Button from '@/components/ui/Button.astro';

const comingSoonFeatures = [
    {
        icon: BookOpen,
        title: 'Tutoriales Interactivos',
        description: 'Aprende paso a paso con ejemplos prácticos y código ejecutable',
    },
    {
        icon: Code2,
        title: 'Proyectos Reales',
        description: 'Construye aplicaciones completas siguiendo nuestras guías',
    },
    {
        icon: Users,
        title: 'Comunidad de Aprendizaje',
        description: 'Conecta con otros desarrolladores y comparte conocimiento',
    },
    {
        icon: Star,
        title: 'Certificaciones',
        description: 'Obtén certificados reconocidos al completar los cursos',
    },
];

const plannedContent = [
    {
        category: 'Desarrollo Web',
        tutorials: [
            'Introducción a Astro',
            'React Avanzado',
            'TypeScript Práctico',
            'Tailwind CSS Mastery',
        ],
        comingSoon: 'Q3 2025',
    },
    {
        category: 'Backend & APIs',
        tutorials: [
            'Node.js y Express',
            'Python con FastAPI',
            'Bases de datos modernas',
            'Microservicios',
        ],
        comingSoon: 'Q4 2025',
    },
    {
        category: 'DevOps & Cloud',
        tutorials: [
            'Docker Fundamentals',
            'Kubernetes Basics',
            'CI/CD Pipelines',
            'AWS Deployment',
        ],
        comingSoon: 'Q1 2026',
    },
    {
        category: 'Mobile Development',
        tutorials: ['React Native', 'Flutter Basics', 'App Store Deployment', 'Mobile UI/UX'],
        comingSoon: 'Q2 2026',
    },
];

const benefits = [
    'Contenido actualizado constantemente',
    'Proyectos del mundo real',
    'Soporte de la comunidad',
    'Certificados oficiales',
    'Acceso de por vida',
    'Descargables y recursos',
];
---

<Layout
    title="Tutoriales - Próximamente | Devanthos"
    description="Nuestros tutoriales están en desarrollo. Regístrate para ser notificado cuando estén disponibles los mejores cursos de desarrollo.">
    <!-- Hero Section -->
    <section
        class="font-public_sans bg-background before:from-muted dark relative py-24 before:absolute before:top-0 before:left-0 before:z-10 before:block before:h-[15rem] before:w-full before:bg-linear-to-b before:to-transparent before:content-[''] md:py-32">
        <div class="relative z-20 container mx-auto px-4">
            <div class="relative z-20 mx-auto flex max-w-[56.25rem] flex-col items-center gap-6">
                <Badge
                    className="border-muted bg-muted hover:border-primary mb-4 flex w-fit items-center gap-1 rounded-full border px-2.5 py-1.5"
                    >Próximamente</Badge
                >
                <h1
                    class="text-foreground font-cocogoose [&_span]:text-primary text-center text-5xl leading-tight [text-shadow:0_0_10px_rgba(255,255,255,0.65)] md:text-6xl lg:text-7xl [&_span]:[text-shadow:0_0_10px_rgba(94,111,182,0.65)]">
                    <span>Tutoriales</span> de Clase Mundial
                </h1>
                <p class="text-muted-foreground text-center text-lg">
                    Estamos preparando una experiencia de aprendizaje revolucionaria. Tutoriales
                    interactivos, proyectos reales y una comunidad vibrante te esperan muy pronto.
                </p>
                <div class="mt-4 flex items-center gap-2">
                    <Button
                        href="#notificarme"
                        class="flex h-fit items-center gap-2 rounded-md px-3.5 py-2.5 text-sm font-medium">
                        <Bell className="size-5!" />
                        Notificarme Cuando Esté Listo
                    </Button>
                </div>
            </div>
        </div>
    </section>

    <!-- Coming Soon Features -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Lo Que Viene</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Estamos diseñando la mejor experiencia de aprendizaje para desarrolladores, con
                    contenido práctico y herramientas innovadoras.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
                {
                    comingSoonFeatures.map((feature) => (
                        <Card className="border-0 shadow-md text-center hover:shadow-lg transition-shadow">
                            <CardHeader>
                                <div class="bg-primary/10 mx-auto mb-4 w-fit rounded-lg p-3">
                                    <feature.icon className="w-8 h-8 text-primary" />
                                </div>
                                <CardTitle className="text-lg">{feature.title}</CardTitle>
                            </CardHeader>
                            <CardContent>
                                <p class="text-muted-foreground text-sm">{feature.description}</p>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Planned Content -->
    <section class="bg-muted/30 py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Contenido Planificado</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Un roadmap completo de tutoriales que cubrirán todas las tecnologías modernas de
                    desarrollo.
                </p>
            </div>

            <div class="mx-auto grid max-w-6xl grid-cols-1 gap-8 md:grid-cols-2">
                {
                    plannedContent.map((content) => (
                        <Card className="border-0 shadow-md">
                            <CardHeader>
                                <div class="mb-4 flex items-start justify-between">
                                    <CardTitle className="text-xl">{content.category}</CardTitle>
                                    <Badge variant="outline" className="text-xs">
                                        {content.comingSoon}
                                    </Badge>
                                </div>
                            </CardHeader>
                            <CardContent>
                                <ul class="space-y-2">
                                    {content.tutorials.map((tutorial) => (
                                        <li class="flex items-center gap-3">
                                            <div class="bg-primary h-1.5 w-1.5 rounded-full" />
                                            <span class="text-sm">{tutorial}</span>
                                        </li>
                                    ))}
                                </ul>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Timeline -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Cronograma de Lanzamiento</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Nuestro plan de desarrollo y lanzamiento de contenido educativo.
                </p>
            </div>

            <div class="mx-auto max-w-4xl">
                <div class="relative">
                    <!-- Timeline line -->
                    <div
                        class="bg-primary/20 absolute left-1/2 h-full w-0.5 -translate-x-1/2 transform">
                    </div>

                    <div class="space-y-12">
                        <!-- Q2 2025 -->
                        <div class="relative flex items-center">
                            <div class="flex-1 pr-8 text-right">
                                <h3 class="text-lg font-bold">Q2 2025</h3>
                                <p class="text-muted-foreground text-sm">
                                    Desarrollo de plataforma
                                </p>
                            </div>
                            <div
                                class="bg-primary absolute left-1/2 h-4 w-4 -translate-x-1/2 transform rounded-full">
                            </div>
                            <div class="flex-1 pl-8">
                                <p class="text-sm">Diseño de interfaz y arquitectura base</p>
                            </div>
                        </div>

                        <!-- Q3 2025 -->
                        <div class="relative flex items-center">
                            <div class="flex-1 pr-8 text-right">
                                <p class="text-sm">Primeros tutoriales de desarrollo web</p>
                            </div>
                            <div
                                class="bg-primary absolute left-1/2 h-4 w-4 -translate-x-1/2 transform rounded-full">
                            </div>
                            <div class="flex-1 pl-8">
                                <h3 class="text-lg font-bold">Q3 2025</h3>
                                <p class="text-muted-foreground text-sm">Beta privada</p>
                            </div>
                        </div>

                        <!-- Q4 2025 -->
                        <div class="relative flex items-center">
                            <div class="flex-1 pr-8 text-right">
                                <h3 class="text-lg font-bold">Q4 2025</h3>
                                <p class="text-muted-foreground text-sm">Lanzamiento público</p>
                            </div>
                            <div
                                class="bg-primary absolute left-1/2 h-4 w-4 -translate-x-1/2 transform rounded-full">
                            </div>
                            <div class="flex-1 pl-8">
                                <p class="text-sm">Tutoriales completos de backend y APIs</p>
                            </div>
                        </div>

                        <!-- 2026 -->
                        <div class="relative flex items-center">
                            <div class="flex-1 pr-8 text-right">
                                <p class="text-sm">Expansión a DevOps y Mobile</p>
                            </div>
                            <div
                                class="bg-primary/60 absolute left-1/2 h-4 w-4 -translate-x-1/2 transform rounded-full">
                            </div>
                            <div class="flex-1 pl-8">
                                <h3 class="text-lg font-bold">2026</h3>
                                <p class="text-muted-foreground text-sm">Contenido avanzado</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Benefits Preview -->
    <section class="bg-muted/30 py-20">
        <div class="container mx-auto px-4">
            <div class="mx-auto max-w-6xl">
                <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
                    <div>
                        <h2 class="mb-6 text-3xl font-bold md:text-4xl">
                            ¿Por Qué Esperar Nuestros Tutoriales?
                        </h2>
                        <p class="text-muted-foreground mb-8 text-lg">
                            Estamos creando más que simples tutoriales. Será una experiencia de
                            aprendizaje completa que te llevará desde principiante hasta experto.
                        </p>
                        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                            {
                                benefits.map((benefit) => (
                                    <div class="flex items-center gap-3">
                                        <div class="bg-primary h-2 w-2 flex-shrink-0 rounded-full" />
                                        <span class="text-sm">{benefit}</span>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                    <div
                        class="rounded-xl bg-gradient-to-br from-blue-50 to-purple-100 p-8 dark:from-blue-950/20 dark:to-purple-950/20">
                        <h3 class="mb-6 text-center text-2xl font-bold">En Desarrollo</h3>
                        <div class="grid grid-cols-2 gap-6">
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">50+</div>
                                <p class="text-muted-foreground text-sm">Tutoriales planificados</p>
                            </div>
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">10+</div>
                                <p class="text-muted-foreground text-sm">Proyectos completos</p>
                            </div>
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">100%</div>
                                <p class="text-muted-foreground text-sm">Contenido gratuito</p>
                            </div>
                            <div class="text-center">
                                <div class="text-primary mb-2 text-3xl font-bold">24/7</div>
                                <p class="text-muted-foreground text-sm">Acceso ilimitado</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Newsletter Signup -->
    <section id="notificarme" class="bg-primary text-primary-foreground py-20">
        <div class="container mx-auto px-4 text-center">
            <div class="mx-auto max-w-3xl">
                <Clock className="mx-auto mb-6 h-16 w-16 opacity-90" />
                <h2 class="mb-6 text-3xl font-bold md:text-4xl">Sé el Primero en Saberlo</h2>
                <p class="mb-8 text-lg opacity-90">
                    Regístrate para recibir actualizaciones exclusivas sobre el desarrollo de
                    nuestros tutoriales y ser notificado tan pronto como estén disponibles.
                </p>
                <div class="mx-auto flex max-w-md flex-col justify-center gap-4 sm:flex-row">
                    <input
                        type="email"
                        placeholder="tu@email.com"
                        class="text-foreground flex-1 rounded-lg px-4 py-3 focus:ring-2 focus:ring-white/20 focus:outline-none"
                    />
                    <button
                        class="text-primary inline-flex items-center justify-center rounded-lg bg-white px-6 py-3 font-medium transition-colors hover:bg-gray-100">
                        <Mail className="mr-2 h-4 w-4" />
                        Notificarme
                    </button>
                </div>
                <p class="mt-4 text-sm opacity-75">
                    No spam. Solo actualizaciones importantes sobre nuestros tutoriales.
                </p>
            </div>
        </div>
    </section>

    <!-- Alternative Resources -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h2 class="mb-4 text-3xl font-bold md:text-4xl">Mientras Tanto...</h2>
                <p class="text-muted-foreground mx-auto max-w-2xl text-lg">
                    Explora nuestros recursos actuales para comenzar tu journey de desarrollo ahora
                    mismo.
                </p>
            </div>

            <div class="mx-auto grid max-w-4xl grid-cols-1 gap-8 md:grid-cols-3">
                <Card className="border-0 text-center shadow-md transition-shadow hover:shadow-lg">
                    <CardHeader>
                        <BookOpen className="text-primary mx-auto mb-4 h-12 w-12" />
                        <CardTitle>Documentación</CardTitle>
                    </CardHeader>
                    <CardContent>
                        <p class="text-muted-foreground mb-4 text-sm">
                            Guías completas y referencias de API
                        </p>
                        <a
                            href="/productos/documentacion"
                            class="text-primary hover:text-primary/80 inline-flex items-center text-sm font-medium">
                            Explorar Docs
                            <ArrowRight className="ml-1 h-4 w-4" />
                        </a>
                    </CardContent>
                </Card>

                <Card className="border-0 text-center shadow-md transition-shadow hover:shadow-lg">
                    <CardHeader>
                        <Code2 className="text-primary mx-auto mb-4 h-12 w-12" />
                        <CardTitle>Ejemplos</CardTitle>
                    </CardHeader>
                    <CardContent>
                        <p class="text-muted-foreground mb-4 text-sm">
                            Código de ejemplo y demos en vivo
                        </p>
                        <a
                            href="/productos/ejemplos"
                            class="text-primary hover:text-primary/80 inline-flex items-center text-sm font-medium">
                            Ver Ejemplos
                            <ArrowRight className="ml-1 h-4 w-4" />
                        </a>
                    </CardContent>
                </Card>

                <Card className="border-0 text-center shadow-md transition-shadow hover:shadow-lg">
                    <CardHeader>
                        <Rocket className="text-primary mx-auto mb-4 h-12 w-12" />
                        <CardTitle>Consultoría</CardTitle>
                    </CardHeader>
                    <CardContent>
                        <p class="text-muted-foreground mb-4 text-sm">
                            Ayuda personalizada para tu proyecto
                        </p>
                        <a
                            href="/contacto"
                            class="text-primary hover:text-primary/80 inline-flex items-center text-sm font-medium">
                            Contactar
                            <ArrowRight className="ml-1 h-4 w-4" />
                        </a>
                    </CardContent>
                </Card>
            </div>
        </div>
    </section>
</Layout>
