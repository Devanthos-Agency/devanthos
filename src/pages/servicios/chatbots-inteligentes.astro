---
import Layout from '@/layouts/Layout.astro';
import { Card, CardContent, CardFooter, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import Button from '@/components/ui/Button.astro';
import { Alert, AlertDescription, AlertTitle } from '@/components/ui/alert';
import {
    Bot,
    MessageCircle,
    Zap,
    Settings,
    CheckCircle,
    ArrowRight,
    Star,
    TrendingUp,
    Clock,
    DollarSign,
    Smartphone,
    Globe,
    ShoppingCart,
    Utensils,
    ChevronRight,
} from 'lucide-react';
import Avatar from '@/components/starwind/avatar/Avatar.astro';
import { AvatarFallback, AvatarImage } from '@/components/starwind/avatar';

// Tipos de chatbots que ofrecemos
const chatbotTypes = [
    {
        icon: Globe,
        title: 'Chatbot para tu Sitio Web',
        description:
            'Un asistente virtual que atiende a tus visitantes 24/7, responde preguntas frecuentes y captura clientes potenciales mientras duermes',
        gradient: 'from-blue-500 to-cyan-500',
        benefits: [
            'Atención automática 24/7',
