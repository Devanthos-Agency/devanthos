// Paquetes de precios
const pricingPackages = [
    {
        name: 'Chatbot Web',
        price: 'Desde $199/mes',
        description: 'Para tu sitio web',
        gradient: 'from-blue-500 to-cyan-500',
        icon: Globe,
        features: [
            'Chatbot en tu página web',
            'Respuestas automáticas 24/7',
            'Captura datos de clientes',
            'Panel para ver conversaciones',
            'Soporte incluido',
        ],
    },
    {
        name: 'Chatbot WhatsApp',
        price: 'Desde $299/mes',
        description: 'Para WhatsApp Business',
        gradient: 'from-green-500 to-emerald-500',
        icon: Smartphone,
        features: [
            'Automatiza tu WhatsApp',
            'Envía catálogos y precios',
            'Recibe pedidos automáticamente',
            'Agenda citas sin esfuerzo',
            'Soporte prioritario',
        ],
        popular: true,
    },
    {
        name: 'Combo Completo',
        price: 'Desde $449/mes',
        description: 'Web + WhatsApp',
        gradient: 'from-purple-500 to-indigo-500',
        icon: Star,
        features: [
            'Chatbot Web + WhatsApp',
            'Todo conectado entre sí',
            'Un solo panel de control',
            'Reportes de ventas y consultas',
            'Soporte VIP',
            'Actualizaciones gratis',
        ],
    },
];

// Beneficios
const benefits = [
    {
        icon: Clock,
        title: 'Nunca Pierdas un Cliente',
        description: 'Atiende consultas a cualquier hora, incluso cuando duermes',
        gradient: 'from-green-500 to-emerald-500',
    },
    {
        icon: Zap,
        title: 'Respuestas al Instante',
        description: 'Tus clientes no esperan, reciben respuesta inmediata',
        gradient: 'from-yellow-500 to-orange-500',
    },
    {
        icon: DollarSign,
        title: 'Ahorra Tiempo y Dinero',
        description: 'Deja de responder las mismas preguntas una y otra vez',
        gradient: 'from-blue-500 to-cyan-500',
    },
    {
        icon: TrendingUp,
        title: 'Vende Más',
        description: 'Cada visitante recibe atención personalizada que convierte',
        gradient: 'from-purple-500 to-indigo-500',
    },
];

// Cómo funciona
const howItWorks = [
    {
        number: 1,
        title: 'Cuéntanos tu Negocio',
        description:
            'Nos dices qué vendes, qué preguntas te hacen más seguido y cómo quieres que responda tu chatbot',
        icon: MessageCircle,
        features: [
            'Llamada o videollamada de 30 minutos',
            'Analizamos tus necesidades',
            'Te mostramos ejemplos similares',
        ],
    },
    {
        number: 2,
        title: 'Lo Creamos Para Ti',
        description: 'Nosotros hacemos todo el trabajo técnico. Tú solo revisas y apruebas',
        icon: Settings,
        features: [
            'Configuramos todas las respuestas',
            'Lo probamos antes de entregarlo',
            'Te enseñamos a usarlo',
        ],
    },
    {
        number: 3,
        title: '¡Listo para Vender!',
        description: 'Tu chatbot empieza a trabajar. Tú te relajas mientras él atiende clientes',
        icon: CheckCircle,
        features: [
            'Instalación en tu web o WhatsApp',
            'Soporte continuo incluido',
            'Mejoras cuando las necesites',
        ],
    },
];
---

<Layout
    title="Chatbots para Web y WhatsApp | Devanthos - Atención Automática 24/7"
    description="Creamos chatbots para tu sitio web y WhatsApp que atienden clientes 24/7, responden preguntas, agendan citas y reciben pedidos automáticamente. Desde $199/mes.">
    <!-- Hero Section -->
    <section class="relative min-h-screen overflow-hidden px-4 py-20">
        <div
            class="absolute inset-0 bg-gradient-to-br from-purple-500/20 via-transparent to-indigo-500/20">
        </div>
        <div class="absolute -top-40 -right-40 h-80 w-80 rounded-full bg-purple-500/30 blur-3xl">
        </div>
        <div class="absolute -bottom-40 -left-40 h-80 w-80 rounded-full bg-indigo-500/40 blur-3xl">
        </div>

        <div class="relative z-10 container mx-auto mt-16">
            <div class="mx-auto max-w-5xl">
                <div class="mb-6 flex justify-center">
                    <Badge variant="outline" className="px-4 py-2 text-xs md:text-lg">
                        <Bot className="mr-2 h-4 w-4 text-purple-500" />
                        Automatización Inteligente 24/7
                    </Badge>
                </div>

                <div class="mb-12 text-center">
                    <h1 class="font-cocogoose mb-6 text-2xl leading-tight sm:text-3xl md:text-6xl">
                        Chatbots para
                        <span
                            class="bg-gradient-to-r from-purple-500 to-indigo-500 bg-clip-text text-transparent">
                            Web y WhatsApp
                        </span>
                        <span class="sr-only">
                            - Asistentes virtuales automáticos para tu negocio, chatbot para sitio
                            web y WhatsApp Business
                        </span>
                    </h1>

                    <p class="text-muted-foreground mx-auto mb-8 max-w-3xl md:text-xl">
                        <strong
                            >¿Cansado de perder clientes porque no puedes responder a tiempo?</strong
                        >
                        Creamos chatbots que atienden a tus clientes las 24 horas, responden preguntas,
                        agendan citas y reciben pedidos todo automáticamente, mientras tú te enfocas
                        en lo importante.
                    </p>
                </div>

                <div class="grid grid-cols-1 items-center gap-8 lg:grid-cols-2">
                    <div class="space-y-6">
                        <Alert className="border-purple-200 bg-purple-50">
                            <Bot className="h-5 w-5 stroke-purple-600" />
                            <AlertTitle className="text-purple-800">
                                ¡Demo Interactiva Disponible!
                            </AlertTitle>
                            <AlertDescription className="text-purple-700">
                                Presentamos a Devi - nuestro chatbot inteligente de muestra. Prueba
                                su capacidad para responder consultas, procesar pedidos y brindar
                                soporte las 24 horas del día.
                            </AlertDescription>
                        </Alert>

                        <div class="flex flex-col gap-4 sm:flex-row">
                            <Button
                                href="https://devi.devanthos.com/"
                                target="_blank"
                                rel="noopener noreferrer"
                                size="lg"
                                class="bg-gradient-to-r from-purple-500 to-indigo-500 px-8 text-lg hover:from-purple-600 hover:to-indigo-600">
                                Charlar con Devi
                                <ArrowRight className="ml-2 h-5 w-5" />
                            </Button>
                            <Button
                                href="https://api.whatsapp.com/send?phone=56934248692&text=Hola%2C%20quiero%20una%20consulta%20gratuita%20sobre%20marketing%20digital%20y%20SEO."
                                target="_blank"
                                rel="noreferrer"
                                variant="outline"
                                size="lg"
                                class="border-purple-500 px-8 text-lg text-purple-600 hover:bg-purple-50">
                                Consulta Gratuita
                            </Button>
                        </div>
                    </div>

                    <div class="relative">
                        <img
                            src="/images/service/chatbots-inteligentes.avif"
                            alt="Chatbots Inteligentes"
                            class="rounded-2xl shadow-2xl"
                        />
                        <div
                            class="absolute -right-4 -bottom-4 rounded-xl bg-gradient-to-r from-purple-500 to-indigo-500 p-4 text-white shadow-lg">
                            <div class="flex items-center gap-2">
                                <Bot className="h-6 w-6" />
                                <div>
                                    <p class="font-semibold">Desde $199</p>
                                    <p class="text-sm opacity-90">Por mes</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Introducción a Devi -->
    <section class="dark flex">
        <div class="bg-background flex w-full items-center justify-center lg:w-1/2">
            <div class="container mx-auto my-10 flex w-[500px] flex-col gap-24 px-4">
                <h2 class="text-foreground text-4xl">Chatbot Inteligente</h2>
                <div>
                    <h3 class="text-foreground font-cocogoose text-4xl text-balance lg:text-6xl">
                        Prueba <span class="text-primary">Devi</span>, nuestro chatbot inteligente
                    </h3>
                    <p class="text-foreground mt-2.5 lg:text-xl">
                        Puedes configurar el chatbot para simular diferentes escenarios de negocio y
                        probar sus capacidades.
                    </p>
                    <Button
                        href="https://devi.devanthos.com/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="mt-10 flex h-fit items-center gap-2.5 rounded-xl px-5 py-4 font-bold">
                        <span> Probar Devi Ahora </span>
                        <ChevronRight className="size-5!" />
                    </Button>
                </div>
                <div class="flex items-center gap-3.5">
                    <div class="flex -space-x-3">
                        <Avatar
                            class="block size-11 min-h-11 min-w-11 rounded-full object-cover lg:size-11">
                            <AvatarImage
                                alt=""
                                src="https://deifkwefumgah.cloudfront.net/shadcnblocks/block/avatar-1.webp"
                            />
                            <AvatarFallback>A</AvatarFallback>
                        </Avatar>
                        <Avatar
                            class="block size-11 min-h-11 min-w-11 rounded-full object-cover lg:size-11">
                            <AvatarImage
                                alt=""
                                src="https://deifkwefumgah.cloudfront.net/shadcnblocks/block/avatar-2.webp"
                            />
                            <AvatarFallback>B</AvatarFallback>
                        </Avatar>
                        <Avatar
                            class="block size-11 min-h-11 min-w-11 rounded-full object-cover lg:size-11">
                            <AvatarImage
                                alt=""
                                src="https://deifkwefumgah.cloudfront.net/shadcnblocks/block/avatar-3.webp"
                            />
                            <AvatarFallback>C</AvatarFallback>
                        </Avatar>
                        <Avatar
                            class="block size-11 min-h-11 min-w-11 rounded-full object-cover lg:size-11">
                            <AvatarImage
                                alt=""
                                src="https://deifkwefumgah.cloudfront.net/shadcnblocks/block/avatar-4.webp"
                            />
                            <AvatarFallback>D</AvatarFallback>
                        </Avatar>
                        <Avatar
                            class="block size-11 min-h-11 min-w-11 rounded-full object-cover lg:size-11">
                            <AvatarImage
                                alt=""
                                src="https://deifkwefumgah.cloudfront.net/shadcnblocks/block/avatar-5.webp"
                            />
                            <AvatarFallback>E</AvatarFallback>
                        </Avatar>
                    </div>
                    <span class="text-foreground text-xs lg:text-sm">
                        Mas de 100 empresas ya prueban Devi
                    </span>
                </div>
            </div>
        </div>
        <img
            src="/images/service/chatbot-devi.avif"
            alt=""
            class="hidden h-screen w-1/2 object-cover lg:block"
        />
    </section>

    <!-- Tipos de Chatbots -->
    <section class="bg-muted/30 px-4 py-20">
        <div class="container mx-auto">
            <div class="mx-auto mb-16 max-w-4xl text-center">
                <h2 class="font-cocogoose mb-4 text-2xl leading-tight tracking-tight md:text-6xl">
                    ¿Qué Chatbot Necesitas?
                </h2>
                <p class="text-muted-foreground md:text-xl">
                    Elige la opción perfecta para tu negocio. Nosotros nos encargamos de todo lo
                    técnico.
                </p>
            </div>

            <div class="mb-16 grid grid-cols-1 gap-8 lg:grid-cols-2">
                {
                    chatbotTypes.map((chatbot) => {
                        const IconComponent = chatbot.icon;
                        return (
                            <Card className="hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
                                <CardHeader className="pb-6">
                                    <div
                                        class={`h-16 w-16 bg-gradient-to-br ${chatbot.gradient} mb-4 flex items-center justify-center rounded-full`}>
                                        <IconComponent className="w-8 h-8 text-white" />
                                    </div>
                                    <CardTitle className="text-2xl">{chatbot.title}</CardTitle>
                                    <p class="text-muted-foreground">{chatbot.description}</p>
                                </CardHeader>
                                <CardContent>
                                    <div class="space-y-2">
                                        {chatbot.benefits.map((benefit) => (
                                            <div class="flex items-center gap-2">
                                                <CheckCircle className="w-4 h-4 text-green-500" />
                                                <span class="text-sm">{benefit}</span>
                                            </div>
                                        ))}
                                    </div>
                                </CardContent>
                            </Card>
                        );
                    })
                }
            </div>

            <!-- Sectores -->
            <div class="mb-12 text-center">
                <h3 class="font-cocogoose mb-6 text-4xl">Ideal para Negocios Como el Tuyo</h3>
                <div class="flex flex-wrap justify-center gap-2">
                    {
                        sectors.map((sector) => (
                            <Badge variant="outline" className="text-sm md:text-base px-4 py-2">
                                {sector}
                            </Badge>
                        ))
                    }
                </div>
            </div>
        </div>
    </section>

    <!-- Casos de Éxito -->
    <section class="px-4 py-20">
        <div class="container mx-auto">
            <div class="mx-auto mb-16 max-w-4xl text-center">
                <h2 class="font-cocogoose mb-4 text-2xl leading-tight tracking-tight md:text-6xl">
                    Negocios que ya Usan Nuestros Chatbots
                </h2>
                <p class="text-muted-foreground md:text-xl">
                    Mira cómo otros negocios como el tuyo están vendiendo más y trabajando menos
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
                {
                    successCases.map((case_) => {
                        const IconComponent = case_.icon;
                        return (
                            <Card className="hover:shadow-xl overflow-hidden transition-all duration-300 hover:-translate-y-1">
                                <div
                                    class={`h-2 bg-gradient-to-r ${case_.gradient} mb-6 blur-2xl`}
                                />
                                <CardHeader className="pb-4">
                                    <div class="mb-4 flex items-center gap-3">
                                        <div
                                            class={`rounded-xl bg-gradient-to-br p-3 ${case_.gradient} text-white`}>
                                            <IconComponent className="w-6 h-6" />
                                        </div>
                                    </div>
                                    <CardTitle className="text-lg">{case_.title}</CardTitle>
                                    <p class="text-muted-foreground text-sm">{case_.problem}</p>
                                </CardHeader>
                                <CardContent>
                                    <div class="space-y-2">
                                        <h4 class="mb-2 text-sm font-semibold text-green-600">
                                            AHORA:
                                        </h4>
                                        {case_.results.map((result) => (
                                            <div class="flex items-start gap-2">
                                                <CheckCircle className="w-4 h-4 text-green-500 mt-0.5" />
                                                <span class="text-sm">{result}</span>
                                            </div>
                                        ))}
                                    </div>
                                </CardContent>
                            </Card>
                        );
                    })
                }
            </div>
        </div>
    </section>

    <!-- Cómo Funciona -->
    <section class="bg-muted/30 px-4 py-20">
        <div class="container mx-auto">
            <div class="mx-auto mb-16 max-w-4xl text-center">
                <h2 class="font-cocogoose mb-4 text-2xl leading-tight tracking-tight md:text-6xl">
                    ¿Cómo Funciona?
                </h2>
                <p class="text-muted-foreground md:text-xl">
                    En 3 simples pasos tienes tu chatbot funcionando. Sin complicaciones.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
                {
                    howItWorks.map((step) => {
                        const IconComponent = step.icon;
                        return (
                            <Card className="text-center hover:shadow-lg transition-all duration-300">
                                <CardHeader className="pb-6">
                                    <div class="relative mb-4">
                                        <div class="from-primary to-accent mx-auto flex h-20 w-20 items-center justify-center rounded-full bg-gradient-to-br">
                                            <IconComponent className="w-10 h-10 text-white" />
                                        </div>
                                        <div class="bg-primary absolute -top-2 -right-2 flex h-8 w-8 items-center justify-center rounded-full text-sm font-bold text-white">
                                            {step.number}
                                        </div>
                                    </div>
                                    <CardTitle className="text-xl">{step.title}</CardTitle>
                                    <p class="text-muted-foreground">{step.description}</p>
                                </CardHeader>
                                <CardContent>
                                    <div class="space-y-2">
                                        {step.features.map((feature) => (
                                            <div class="flex items-center gap-2 text-sm">
                                                <CheckCircle className="w-4 h-4 text-green-500" />
                                                <span>{feature}</span>
                                            </div>
                                        ))}
                                    </div>
                                </CardContent>
                            </Card>
                        );
                    })
                }
            </div>
        </div>
    </section>

    <!-- Precios -->
    <section class="px-4 py-20">
        <div class="container mx-auto">
            <div class="mx-auto mb-16 max-w-4xl text-center">
                <h2 class="font-cocogoose mb-4 text-2xl leading-tight tracking-tight md:text-6xl">
                    Precios Claros, Sin Sorpresas
                </h2>
                <p class="text-muted-foreground md:text-xl">
                    Elige el plan que mejor se adapte a tu negocio. Incluye soporte y
                    actualizaciones.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
                {
                    pricingPackages.map((pkg) => {
                        const IconComponent = pkg.icon;
                        return (
                            <Card
                                className={`relative pt-0 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl ${pkg.popular ? 'border-primary ring-primary/20 border-2 ring-2' : ''}`}>
                                {pkg.popular && (
                                    <div class="absolute -top-4 left-1/2 -translate-x-1/2 transform">
                                        <Badge className="bg-primary text-primary-foreground px-4 py-1">
                                            <Star className="w-4 h-4 mr-1" />
                                            Más Popular
                                        </Badge>
                                    </div>
                                )}

                                <CardHeader className="text-center overflow-hidden pt-8 pb-4">
                                    <div class={`h-2 bg-gradient-to-r blur-2xl ${pkg.gradient}`} />
                                    <div
                                        class={`h-16 w-16 bg-gradient-to-br ${pkg.gradient} mx-auto mb-4 flex items-center justify-center rounded-full`}>
                                        <IconComponent className="w-8 h-8 text-white" />
                                    </div>
                                    <CardTitle className="text-2xl">{pkg.name}</CardTitle>
                                    <p class="text-muted-foreground">{pkg.description}</p>
                                    <div class="text-primary mt-4 text-3xl font-bold">
                                        {pkg.price}
                                    </div>
                                </CardHeader>

                                <CardContent className="flex-1">
                                    <div class="space-y-3">
                                        {pkg.features.map((feature) => (
                                            <div class="flex items-start gap-3">
                                                <CheckCircle className="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" />
                                                <span class="text-sm">{feature}</span>
                                            </div>
                                        ))}
                                    </div>
                                </CardContent>
                                <CardFooter className="pt-4">
                                    <Button
                                        href={`https://api.whatsapp.com/send?phone=56934248692&text=Hola%2C%20quiero%20contratar%20el%20paquete%20${encodeURIComponent(
                                            pkg.name
                                        )}.`}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class={`mt-6 w-full bg-gradient-to-r ${pkg.gradient} hover:opacity-90`}>
                                        Elegir {pkg.name}
                                        <ArrowRight className="ml-2 w-4 h-4" />
                                    </Button>
                                </CardFooter>
                            </Card>
                        );
                    })
                }
            </div>
        </div>
    </section>

    <!-- Beneficios -->
    <section class="bg-muted/30 px-4 py-20">
