// Metodología de trabajo
const methodology = [
    {
        number: 1,
        title: "Descubrimiento y Diagnóstico",
        duration: "2-4 semanas",
        description: "Análisis profundo de la situación actual",
        icon: Search,
        activities: [
            "Entrevistas con stakeholders clave",
            "Análisis documental y procesos",
            "Benchmarking con mejores prácticas",
            "Identificación de gaps y oportunidades",
        ],
    },
    {
        number: 2,
        title: "Estrategia y Planificación",
        duration: "2-3 semanas",
        description: "Desarrollo de estrategias personalizadas",
        icon: Target,
        activities: [
            "Desarrollo de estrategias personalizadas",
            "Definición de objetivos y KPIs",
            "Cronograma de implementación",
            "Plan de gestión del cambio",
        ],
    },
    {
        number: 3,
        title: "Implementación y Seguimiento",
        duration: "3-12 meses",
        description: "Ejecución y monitoreo de resultados",
        icon: TrendingUp,
        activities: [
            "Ejecución de iniciativas planificadas",
            "Capacitación de equipos internos",
            "Monitoreo de avances y resultados",
            "Ajustes y optimizaciones continuas",
        ],
    },
];

// Equipo de expertos
const expertTeam = [
    {
        icon: Award,
        title: "Consultores Senior",
        description: "+15 años de experiencia en transformación empresarial",
        gradient: "from-blue-500 to-cyan-500",
    },
    {
        icon: BookOpen,
        title: "Especialistas Certificados",
        description: "MBA, PMP, Six Sigma Black Belt, Lean Master",
        gradient: "from-green-500 to-emerald-500",
    },
    {
        icon: Globe,
        title: "Experiencia Internacional",
        description: "Proyectos exitosos en +20 países",
        gradient: "from-purple-500 to-indigo-500",
    },
    {
        icon: Building,
        title: "Multisectorial",
        description: "Experiencia en +30 industrias diferentes",
        gradient: "from-orange-500 to-red-500",
    },
];
---

<Layout
    title="Consultoría Empresarial | Devanthos - Transformación Digital y Estratégica"
    description="Impulsamos el crecimiento de tu empresa con estrategias personalizadas, optimización de procesos y transformación digital integral para maximizar tu potencial competitivo."
>
    <!-- Hero Section -->
    <section class="relative py-20 min-h-screen px-4 overflow-hidden">
        <div
            class="absolute inset-0 bg-gradient-to-br from-orange-500/20 via-transparent to-red-500/20"
        >
        </div>
        <div
            class="absolute -top-40 -right-40 w-80 h-80 bg-orange-500/30 rounded-full blur-3xl"
        >
        </div>
        <div
            class="absolute -bottom-40 -left-40 w-80 h-80 bg-red-500/40 rounded-full blur-3xl"
        >
        </div>

        <div class="container mx-auto relative z-10 mt-16">
            <div class="max-w-5xl mx-auto">
                <div class="flex justify-center mb-6">
                    <Badge variant="outline" className="text-lg px-4 py-2">
                        <Brain className="w-4 h-4 mr-2 text-orange-500" />
                        Transformación Empresarial Integral
                    </Badge>
                </div>

                <div class="text-center mb-12">
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        Consultoría Empresarial y
                        <span
                            class="bg-gradient-to-r from-orange-500 to-red-500 bg-clip-text text-transparent"
                        >
                            Transformación Digital
                        </span>
                    </h1>

                    <p
                        class="text-xl text-muted-foreground mb-8 max-w-3xl mx-auto"
                    >
                        Impulsamos el crecimiento de tu empresa con <strong
                            >estrategias personalizadas, optimización de
                            procesos y transformación digital integral</strong
                        > para maximizar tu potencial competitivo. La diferencia
                        entre el éxito y el estancamiento radica en la capacidad
                        de adaptarse e innovar.
                    </p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
                    <div class="space-y-6">
                        <Alert className="border-orange-200 bg-orange-50">
                            <Brain className="h-4 w-4 text-orange-600" />
                            <AlertTitle className="text-orange-800"
                                >¡Diagnóstico Empresarial Gratuito!</AlertTitle
                            >
                            <AlertDescription className="text-orange-700">
                                Obtén un análisis completo de tu situación
                                actual y un plan de acción personalizado sin
                                costo alguno.
                            </AlertDescription>
                        </Alert>

                        <div class="flex flex-col sm:flex-row gap-4">
                            <Button
                                size="lg"
                                className="text-lg px-8 bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600"
                            >
                                Diagnóstico Gratuito
                                <ArrowRight className="ml-2 w-5 h-5" />
                            </Button>
                            <Button
                                variant="outline"
                                size="lg"
                                className="text-lg px-8 border-orange-500 text-orange-600 hover:bg-orange-50"
                            >
                                Ver Casos de Éxito
                            </Button>
                        </div>
                    </div>

                    <div class="relative">
                        <img
                            src="/images/service/consultoria-empresarial.png"
                            alt="Consultoría Empresarial"
                            class="rounded-2xl shadow-2xl"
                        />
                        <div
                            class="absolute -bottom-4 -right-4 bg-gradient-to-r from-orange-500 to-red-500 text-white p-4 rounded-xl shadow-lg"
                        >
                            <div class="flex items-center gap-2">
                                <Brain className="w-6 h-6" />
                                <div>
                                    <p class="font-semibold">Desde $2,500</p>
                                    <p class="text-sm opacity-90">
                                        Por proyecto
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Why You Need Consulting -->
    <section class="py-20 px-4 bg-muted/30">
        <div class="container mx-auto">
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    ¿Por Qué Necesitas Consultoría Empresarial?
                </h2>
                <p class="text-lg text-muted-foreground">
                    En un mercado donde el <strong
                        >70% de las empresas fallan en sus iniciativas de cambio</strong
                    >, contar con experiencia especializada es crucial para el
                    éxito de tu organización.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {
                    mainServices.map((service) => {
                        const IconComponent = service.icon;
                        return (
                            <Card className="p-8 text-center hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
                                <CardHeader className="pb-6">
                                    <div
                                        class={`w-16 h-16 bg-gradient-to-br ${service.gradient} rounded-full flex items-center justify-center mx-auto mb-4`}
                                    >
                                        <IconComponent className="w-8 h-8 text-white" />
                                    </div>
                                    <CardTitle className="text-xl">
                                        {service.title}
                                    </CardTitle>
                                    <p class="text-muted-foreground">
                                        {service.description}
                                    </p>
                                </CardHeader>
                            </Card>
                        );
                    })
                }
            </div>
        </div>
    </section>

    <!-- Consulting Areas -->
    <section class="py-20 px-4">
        <div class="container mx-auto">
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Nuestros Servicios de Consultoría
                </h2>
                <p class="text-lg text-muted-foreground">
                    Cobertura integral para todas las áreas críticas de tu
                    empresa
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {
                    consultingAreas.map((area) => {
                        const IconComponent = area.icon;
                        return (
                            <Card className="p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                                <div
                                    class={`h-2 bg-gradient-to-r ${area.gradient} mb-6`}
                                />
                                <CardHeader className="pb-4">
                                    <div class="flex items-center gap-3 mb-4">
                                        <div
                                            class={`p-3 rounded-xl bg-gradient-to-br ${area.gradient} text-white`}
                                        >
                                            <IconComponent className="w-6 h-6" />
                                        </div>
                                    </div>
                                    <CardTitle className="text-xl">
                                        {area.title}
                                    </CardTitle>
                                    <p class="text-muted-foreground">
                                        {area.description}
                                    </p>
                                </CardHeader>
                                <CardContent>
                                    <div class="space-y-2">
                                        {area.services.map((service) => (
                                            <div class="flex items-center gap-2 text-sm">
                                                <CheckCircle className="w-4 h-4 text-green-500" />
                                                <span>{service}</span>
                                            </div>
                                        ))}
                                    </div>
                                </CardContent>
                            </Card>
                        );
                    })
                }
            </div>

            <div class="mt-12 text-center">
                <Alert className="border-blue-200 bg-blue-50 max-w-2xl mx-auto">
                    <Settings className="h-4 w-4 text-blue-600" />
                    <AlertTitle className="text-blue-800"
                        >Metodología Probada</AlertTitle
                    >
                    <AlertDescription className="text-blue-700">
                        Utilizamos metodologías internacionales reconocidas y
                        las adaptamos a las necesidades específicas de tu
                        industria y empresa.
                    </AlertDescription>
                </Alert>
            </div>
        </div>
    </section>

    <!-- Success Cases -->
    <section class="py-20 px-4 bg-muted/30">
        <div class="container mx-auto">
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Casos de Éxito Reales
                </h2>
                <p class="text-lg text-muted-foreground">
                    Transformaciones empresariales con resultados medibles y
                    comprobados
                </p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                {
                    successCases.map((case_) => {
                        const IconComponent = case_.icon;
                        return (
                            <Card className="p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                                <div
                                    class={`h-2 bg-gradient-to-r ${case_.gradient} mb-6`}
                                />
                                <CardHeader className="pb-4">
                                    <div class="flex items-center gap-3 mb-4">
                                        <div
                                            class={`p-3 rounded-xl bg-gradient-to-br ${case_.gradient} text-white`}
                                        >
                                            <IconComponent className="w-6 h-6" />
                                        </div>
                                        <Badge
                                            variant="outline"
                                            className="text-xs"
                                        >
                                            {case_.timeline}
                                        </Badge>
                                    </div>
                                    <CardTitle className="text-lg">
                                        {case_.title}
                                    </CardTitle>
                                    <p class="text-muted-foreground text-sm mb-4">
                                        {case_.challenge}
                                    </p>
                                </CardHeader>
                                <CardContent>
                                    <div class="space-y-2">
                                        <h4 class="font-semibold text-sm text-green-600 mb-2">
                                            RESULTADOS:
                                        </h4>
                                        {case_.results.map((result) => (
                                            <div class="flex items-start gap-2">
                                                <CheckCircle className="w-4 h-4 text-green-500 mt-0.5" />
                                                <span class="text-sm">
                                                    {result}
                                                </span>
                                            </div>
                                        ))}
                                    </div>
                                </CardContent>
                            </Card>
                        );
                    })
                }
            </div>
        </div>
    </section>

    <!-- Consulting Packages -->
    <section class="py-20 px-4">
        <div class="container mx-auto">
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Nuestros Paquetes de Consultoría
                </h2>
                <p class="text-lg text-muted-foreground">
                    Soluciones adaptadas a cada etapa de crecimiento empresarial
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    consultingPackages.map((pkg) => {
                        const IconComponent = pkg.icon;
                        return (
                            <Card
                                className={`relative hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 ${pkg.popular ? "border-2 border-primary ring-2 ring-primary/20" : ""}`}
                            >
                                {pkg.popular && (
                                    <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                                        <Badge className="bg-primary text-primary-foreground px-4 py-1">
                                            <Star className="w-4 h-4 mr-1" />
                                            Más Popular
                                        </Badge>
                                    </div>
                                )}

                                <div
                                    class={`h-2 bg-gradient-to-r ${pkg.gradient}`}
                                />

                                <CardHeader className="text-center pb-4">
                                    <div
                                        class={`w-14 h-14 bg-gradient-to-br ${pkg.gradient} rounded-full flex items-center justify-center mx-auto mb-4`}
                                    >
                                        <IconComponent className="w-7 h-7 text-white" />
                                    </div>
                                    <CardTitle className="text-lg">
                                        {pkg.name}
                                    </CardTitle>
                                    <p class="text-muted-foreground text-sm">
                                        {pkg.description}
                                    </p>
                                    <div class="text-2xl font-bold text-primary mt-4">
                                        {pkg.price}
                                    </div>
                                    {pkg.note && (
                                        <p class="text-xs text-muted-foreground italic">
                                            {pkg.note}
                                        </p>
                                    )}
                                </CardHeader>

                                <CardContent>
                                    <div class="space-y-2">
                                        {pkg.features.map((feature) => (
                                            <div class="flex items-start gap-2">
                                                <CheckCircle className="w-4 h-4 text-green-500 mt-0.5 flex-shrink-0" />
                                                <span class="text-xs">
                                                    {feature}
                                                </span>
                                            </div>
                                        ))}
                                    </div>

                                    <Button
                                        className={`w-full mt-6 bg-gradient-to-r ${pkg.gradient} hover:opacity-90 text-sm`}
                                    >
                                        Elegir Plan
                                        <ArrowRight className="ml-2 w-4 h-4" />
                                    </Button>
                                </CardContent>
                            </Card>
                        );
                    })
                }
            </div>
        </div>
    </section>

    <!-- Methodology -->
    <section class="py-20 px-4 bg-muted/30">
        <div class="container mx-auto">
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Metodología de Trabajo
                </h2>
                <p class="text-lg text-muted-foreground">
                    Proceso estructurado y probado que garantiza resultados
                    exitosos
                </p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                {
                    methodology.map((phase) => {
                        const IconComponent = phase.icon;
                        return (
                            <Card className="p-8 text-center hover:shadow-lg transition-all duration-300">
                                <CardHeader className="pb-6">
                                    <div class="relative mb-4">
                                        <div class="w-20 h-20 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center mx-auto">
                                            <IconComponent className="w-10 h-10 text-white" />
                                        </div>
                                        <div class="absolute -top-2 -right-2 w-8 h-8 bg-primary rounded-full flex items-center justify-center text-white font-bold text-sm">
                                            {phase.number}
                                        </div>
                                    </div>
                                    <CardTitle className="text-xl">
                                        {phase.title}
                                    </CardTitle>
                                    <Badge
                                        variant="outline"
                                        className="text-xs mb-2"
                                    >
                                        {phase.duration}
                                    </Badge>
                                    <p class="text-muted-foreground">
                                        {phase.description}
                                    </p>
                                </CardHeader>
                                <CardContent>
                                    <div class="space-y-2">
                                        {phase.activities.map((activity) => (
