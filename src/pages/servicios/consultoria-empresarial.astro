// Metodología de trabajo
const methodology = [
    {
        number: 1,
        title: 'Descubrimiento y Diagnóstico',
        duration: '2-4 semanas',
        description: 'Análisis profundo de la situación actual',
        icon: Search,
        activities: [
            'Entrevistas con stakeholders clave',
