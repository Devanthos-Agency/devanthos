// Paquetes de consultoría
const consultingPackages = [
    {
        name: "Paquete Diagnóstico",
        price: "$2,500 - $5,000",
        description: "Para empresas que buscan claridad",
        gradient: "from-blue-500 to-cyan-500",
        icon: Search,
        features: [
            "Auditoría organizacional completa",
            "Análisis FODA detallado",
            "Identificación de oportunidades",
            "Reporte ejecutivo con recomendaciones",
            "Sesión de presentación de resultados",
        ],
        note: "Según tamaño de empresa",
    },
    {
        name: "Paquete Estratégico",
        price: "$8,000 - $15,000",
        description: "Planificación y desarrollo",
        gradient: "from-green-500 to-emerald-500",
        icon: Target,
        features: [
            "Todo lo del paquete Diagnóstico",
            "Plan estratégico 3-5 años",
            "Definición de modelo de negocio",
            "Proyecciones financieras",
            "3 sesiones de seguimiento mensual",
        ],
        popular: true,
    },
    {
        name: "Paquete Transformación",
        price: "$25,000 - $50,000",
        description: "Implementación completa",
        gradient: "from-purple-500 to-indigo-500",
        icon: TrendingUp,
        features: [
            "Todo lo del paquete Estratégico",
            "Acompañamiento 6 meses",
            "Capacitación de equipos",
            "Implementación de procesos",
            "Dashboard personalizado",
            "Soporte continuo",
        ],
    },
    {
        name: "Paquete Retainer",
        price: "$5,000 - $15,000/mes",
        description: "Consultoría continua",
        gradient: "from-orange-500 to-red-500",
        icon: Users,
        features: [
            "Consultor dedicado mensual",
            "Acceso prioritario al equipo",
            "Revisiones estratégicas trimestrales",
            "Soporte en decisiones críticas",
            "Análisis de mercado continuo",
            "Networking y conexiones estratégicas",
        ],
    },
];

// Industrias que atendemos
const industries = [
    {
        icon: Factory,
        title: "Manufactura e Industria",
        description: "Optimización de procesos productivos e Industria 4.0",
        gradient: "from-gray-500 to-gray-700",
    },
    {
        icon: Briefcase,
        title: "Servicios Profesionales",
        description: "Escalamiento de operaciones y automatización",
        gradient: "from-blue-500 to-cyan-500",
    },
    {
        icon: ShoppingCart,
        title: "Retail y E-commerce",
        description: "Omnicanalidad y customer experience",
