    {
        name: 'Paquete Diagnóstico',
        price: '$500 - $1,000',
        description: 'Para empresas que buscan claridad',
        gradient: 'from-blue-500 to-cyan-500',
        icon: Search,
        features: [
            'Auditoría organizacional completa',
            'Análisis FODA detallado',
            'Identificación de oportunidades',
            'Reporte ejecutivo con recomendaciones',
            'Sesión de presentación de resultados',
        ],
        note: 'Según tamaño de empresa',
    },
    {
        name: 'Paquete Estratégico',
        price: '$2,000 - $4,000',
        description: 'Planificación y desarrollo',
        gradient: 'from-green-500 to-emerald-500',
        icon: Target,
        features: [
            'Todo lo del paquete Diagnóstico',
            'Plan estratégico 3-5 años',
            'Definición de modelo de negocio',
            'Proyecciones financieras',
            '3 sesiones de seguimiento mensual',
        ],
        popular: true,
    },
    {
        name: 'Paquete Transformación',
        price: '$8,000 - $10,000',
        description: 'Implementación completa',
