---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { Alert, AlertDescription, AlertTitle } from "@/components/ui/alert";
import {
    Code2,
    Globe,
    Smartphone,
    Lightbulb,
    CheckCircle,
    ArrowRight,
    Star,
    Zap,
    Shield,
    Target,
    Rocket,
    Users,
    TrendingUp,
    Code,
    Database,
    Cloud,
    Monitor,
    ShoppingCart,
    Building,
    BarChart3,
    Play,
} from "lucide-react";

// Servicios principales
const mainServices = [
    {
        icon: Globe,
        title: "Desarrollo Web",
        description:
            "Sitios web modernos, responsivos y optimizados para SEO. Desde landing pages hasta aplicaciones web complejas.",
        gradient: "from-blue-500 to-cyan-500",
        features: [
            "React & Next.js",
            "Responsive Design",
            "SEO Optimizado",
            "Panel Admin",
        ],
    },
    {
        icon: Smartphone,
        title: "Aplicaciones Móviles",
        description:
            "Apps nativas e híbridas para iOS y Android. Experiencias móviles fluidas e intuitivas.",
        gradient: "from-purple-500 to-indigo-500",
        features: [
            "iOS & Android",
            "React Native",
            "Push Notifications",
            "Offline Sync",
        ],
    },
];

// Tecnologías
const technologies = {
    frontend: [
        { name: "React", color: "text-blue-500" },
        { name: "Next.js", color: "text-black" },
        { name: "Vue.js", color: "text-green-500" },
        { name: "Astro", color: "text-orange-500" },
        { name: "Svelte", color: "text-red-500" },
        { name: "Tailwind CSS", color: "text-cyan-500" },
        { name: "ShadCN UI", color: "text-gray-700" },
    ],
    backend: [
        { name: "Node.js", color: "text-green-600" },
        { name: "Python", color: "text-blue-600" },
        { name: "FastAPI", color: "text-teal-600" },
        { name: "Supabase", color: "text-green-500" },
        { name: "Firebase", color: "text-orange-500" },
    ],
    databases: [
        { name: "PostgreSQL", color: "text-blue-700" },
        { name: "MongoDB", color: "text-green-700" },
        { name: "MySQL", color: "text-blue-600" },
    ],
    deployment: [
        { name: "Vercel", color: "text-black" },
        { name: "Netlify", color: "text-teal-500" },
        { name: "DigitalOcean", color: "text-blue-500" },
    ],
};

// Proceso de trabajo
const workProcess = [
    {
        number: 1,
        title: "Análisis y Planificación",
        description:
            "Entendemos tus objetivos y definimos la arquitectura del proyecto",
        icon: Target,
        features: [
            "Investigación de mercado",
            "Definición de requisitos",
            "Wireframes",
            "UX/UI Design",
        ],
    },
    {
        number: 2,
        title: "Desarrollo y Testing",
        description:
            "Desarrollamos siguiendo las mejores prácticas de la industria",
        icon: Code,
        features: [
            "Código limpio",
            "Pruebas automáticas",
            "Responsive design",
            "Optimización",
        ],
    },
    {
        number: 3,
        title: "Despliegue y Monitoreo",
        description: "Lanzamos tu proyecto con soporte continuo",
        icon: Rocket,
        features: [
            "CI/CD Setup",
            "Analytics",
            "Soporte técnico",
            "Actualizaciones",
        ],
    },
];

// Tipos de proyectos
const projectTypes = [
    {
        icon: Building,
        title: "Sitios Web Corporativos",
        description:
            "Sitios web profesionales que reflejan la identidad de tu marca",
        gradient: "from-blue-500 to-cyan-500",
        features: [
            "Diseño moderno y profesional",
            "Optimización SEO",
            "Integración redes sociales",
            "Panel de administración",
        ],
    },
    {
        icon: ShoppingCart,
        title: "E-commerce y Tiendas Online",
        description: "Soluciones completas para venta online",
        gradient: "from-green-500 to-emerald-500",
        features: [
            "Catálogo optimizado",
            "Carrito y pago seguro",
            "Pasarelas de pago",
            "Gestión de inventario",
        ],
    },
    {
        icon: BarChart3,
        title: "Aplicaciones Web (SaaS)",
        description: "Plataformas web complejas y escalables",
        gradient: "from-purple-500 to-indigo-500",
        features: [
            "Arquitectura cloud-native",
            "API REST/GraphQL",
            "Dashboard analytics",
            "Integraciones avanzadas",
        ],
    },
    {
        icon: Smartphone,
        title: "Aplicaciones Móviles",
        description: "Apps móviles nativas e híbridas",
        gradient: "from-orange-500 to-red-500",
        features: [
            "iOS & Android",
            "React Native/Flutter",
            "Notificaciones push",
            "Publicación en stores",
        ],
    },
];

// Casos de éxito
const successCases = [
    {
        title: "E-commerce de Moda",
        challenge:
            "Una boutique local quería expandir sus ventas online con una experiencia premium.",
        result: "300% de aumento en ventas online en 6 meses",
        gradient: "from-pink-500 to-rose-500",
    },
    {
        title: "Plataforma SaaS de Gestión",
        challenge:
            "Centralizar la gestión de clientes y proyectos de una empresa de servicios.",
        result: "50% de reducción en tiempo de gestión administrativa",
        gradient: "from-blue-500 to-cyan-500",
    },
];

// Beneficios
const benefits = [
    {
        icon: CheckCircle,
        title: "Experiencia Comprobada",
        description: "+8 años desarrollando soluciones digitales exitosas",
        gradient: "from-green-500 to-emerald-500",
    },
    {
        icon: Zap,
        title: "Entrega Rápida",
        description: "Cumplimos tiempos de entrega sin comprometer la calidad",
        gradient: "from-yellow-500 to-orange-500",
    },
    {
        icon: Shield,
        title: "Soporte Continuo",
        description: "Soporte técnico y mantenimiento post-lanzamiento",
        gradient: "from-blue-500 to-cyan-500",
    },
    {
        icon: TrendingUp,
        title: "Precios Competitivos",
        description:
            "Excelente relación calidad-precio en todos nuestros servicios",
        gradient: "from-purple-500 to-indigo-500",
    },
];
---

<Layout
    title="Desarrollo Web y Móvil | Devanthos - Soluciones Digitales Modernas"
    description="Nos especializamos en la creación de soluciones digitales modernas, intuitivas y eficientes, tanto en plataformas web como móviles. React, Next.js, apps móviles y más."
>
    <!-- Hero Section -->
    <section class="relative py-20 min-h-screen px-4 overflow-hidden">
        <div
            class="absolute inset-0 bg-gradient-to-br from-blue-500/20 via-transparent to-cyan-500/20"
        >
        </div>
        <div
            class="absolute -top-40 -right-40 w-80 h-80 bg-blue-500/30 rounded-full blur-3xl"
        >
        </div>
        <div
            class="absolute -bottom-40 -left-40 w-80 h-80 bg-cyan-500/40 rounded-full blur-3xl"
        >
        </div>

        <div class="container mx-auto relative z-10 mt-16">
            <div class="max-w-5xl mx-auto">
                <div class="flex justify-center mb-6">
                    <Badge variant="outline" className="text-lg px-4 py-2">
                        <Code2 className="w-4 h-4 mr-2 text-blue-500" />
                        Soluciones Digitales Modernas
                    </Badge>
                </div>

                <div class="text-center mb-12">
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        Desarrollo Web y
                        <span
                            class="bg-gradient-to-r text-nowrap from-blue-500 to-cyan-500 bg-clip-text text-transparent"
                        >
                            Aplicaciones Móviles
                        </span>
                    </h1>

                    <p
                        class="text-xl text-muted-foreground mb-8 max-w-3xl mx-auto"
                    >
                        Nos especializamos en la creación de <strong
                            >soluciones digitales modernas, intuitivas y
                            eficientes</strong
                        >, tanto en plataformas web como móviles. Nuestro equipo
                        domina frontend y backend para crear soluciones
                        completas y escalables.
                    </p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
                    <div class="space-y-6">
                        <Alert className="border-blue-200 bg-blue-50">
                            <Lightbulb className="h-4 w-4 text-blue-600" />
                            <AlertTitle className="text-blue-800"
                                >¡Consulta Gratuita!</AlertTitle
                            >
                            <AlertDescription className="text-blue-700">
                                Ofrecemos una consulta inicial gratuita para
                                evaluar tu proyecto y darte la mejor estrategia
                                de desarrollo.
                            </AlertDescription>
                        </Alert>

                        <div class="flex flex-col sm:flex-row gap-4">
                            <Button
                                size="lg"
                                className="text-lg px-8 bg-gradient-to-r from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600"
                            >
                                Ver Proyectos
                                <ArrowRight className="ml-2 w-5 h-5" />
                            </Button>
                            <Button
                                variant="outline"
                                size="lg"
                                className="text-lg px-8 border-blue-500 text-blue-600 hover:bg-blue-50"
                            >
                                Consulta Gratuita
                            </Button>
                        </div>
                    </div>

                    <div class="relative">
                        <img
                            src="/images/service/desarrollo-web-y-mobile.png"
                            alt="Desarrollo Web y Móvil"
                            class="rounded-2xl shadow-2xl"
                        />
                        <div
                            class="absolute -bottom-4 -right-4 bg-gradient-to-r from-blue-500 to-cyan-500 text-white p-4 rounded-xl shadow-lg"
                        >
                            <div class="flex items-center gap-2">
                                <Code2 className="w-6 h-6" />
                                <div>
                                    <p class="font-semibold">Desde $1,500</p>
                                    <p class="text-sm opacity-90">
                                        Por proyecto
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Services -->
    <section class="py-20 px-4 bg-muted/30">
        <div class="container mx-auto">
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    ¿Qué Ofrecemos?
                </h2>
                <p class="text-lg text-muted-foreground">
                    Soluciones digitales completas que combinan la mejor
                    tecnología con diseño excepcional
                </p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
                {
                    mainServices.map((service) => {
                        const IconComponent = service.icon;
                        return (
                            <Card className="p-8 hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
                                <CardHeader className="pb-6">
                                    <div
                                        class={`w-16 h-16 bg-gradient-to-br ${service.gradient} rounded-full flex items-center justify-center mb-4`}
                                    >
                                        <IconComponent className="w-8 h-8 text-white" />
                                    </div>
                                    <CardTitle className="text-2xl">
                                        {service.title}
                                    </CardTitle>
                                    <p class="text-muted-foreground">
                                        {service.description}
                                    </p>
                                </CardHeader>
                                <CardContent>
                                    <div class="grid grid-cols-2 gap-3">
                                        {service.features.map((feature) => (
                                            <div class="flex items-center gap-2">
                                                <CheckCircle className="w-4 h-4 text-green-500" />
                                                <span class="text-sm">
                                                    {feature}
                                                </span>
                                            </div>
                                        ))}
                                    </div>
                                </CardContent>
                            </Card>
                        );
                    })
                }
            </div>
        </div>
    </section>

    <!-- Technologies -->
    <section class="py-20 px-4">
        <div class="container mx-auto">
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Tecnologías que Dominamos
                </h2>
                <p class="text-lg text-muted-foreground">
                    Trabajamos con las tecnologías más modernas y confiables del
                    mercado
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <Card className="p-6">
                    <CardHeader className="pb-4">
                        <div class="flex items-center gap-2">
                            <Monitor className="w-5 h-5 text-blue-500" />
                            <CardTitle className="text-lg">Frontend</CardTitle>
                        </div>
                    </CardHeader>
                    <CardContent>
                        <div class="flex flex-wrap gap-2">
                            {
                                technologies.frontend.map((tech) => (
                                    <Badge
                                        variant="outline"
                                        className={`text-xs ${tech.color}`}
                                    >
                                        {tech.name}
                                    </Badge>
                                ))
                            }
                        </div>
                    </CardContent>
                </Card>

                <Card className="p-6">
                    <CardHeader className="pb-4">
                        <div class="flex items-center gap-2">
                            <Code className="w-5 h-5 text-green-500" />
                            <CardTitle className="text-lg">Backend</CardTitle>
                        </div>
                    </CardHeader>
                    <CardContent>
                        <div class="flex flex-wrap gap-2">
                            {
                                technologies.backend.map((tech) => (
                                    <Badge
                                        variant="outline"
                                        className={`text-xs ${tech.color}`}
                                    >
                                        {tech.name}
                                    </Badge>
                                ))
                            }
                        </div>
                    </CardContent>
                </Card>

                <Card className="p-6">
                    <CardHeader className="pb-4">
                        <div class="flex items-center gap-2">
                            <Database className="w-5 h-5 text-purple-500" />
                            <CardTitle className="text-lg"
                                >Bases de Datos</CardTitle
                            >
                        </div>
                    </CardHeader>
                    <CardContent>
                        <div class="flex flex-wrap gap-2">
                            {
                                technologies.databases.map((tech) => (
                                    <Badge
                                        variant="outline"
                                        className={`text-xs ${tech.color}`}
                                    >
                                        {tech.name}
                                    </Badge>
                                ))
                            }
                        </div>
                    </CardContent>
                </Card>

                <Card className="p-6">
                    <CardHeader className="pb-4">
                        <div class="flex items-center gap-2">
                            <Cloud className="w-5 h-5 text-orange-500" />
                            <CardTitle className="text-lg">Deployment</CardTitle
                            >
                        </div>
                    </CardHeader>
                    <CardContent>
                        <div class="flex flex-wrap gap-2">
                            {
                                technologies.deployment.map((tech) => (
                                    <Badge
                                        variant="outline"
                                        className={`text-xs ${tech.color}`}
                                    >
                                        {tech.name}
                                    </Badge>
                                ))
                            }
                        </div>
                    </CardContent>
                </Card>
            </div>
        </div>
    </section>

    <!-- Work Process -->
    <section class="py-20 px-4 bg-muted/30">
        <div class="container mx-auto">
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Nuestro Proceso de Trabajo
                </h2>
                <p class="text-lg text-muted-foreground">
                    Metodología ágil con entregas cada 2 semanas para máxima
                    transparencia
                </p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                {
                    workProcess.map((step) => {
                        const IconComponent = step.icon;
                        return (
                            <Card className="p-8 text-center hover:shadow-lg transition-all duration-300">
                                <CardHeader className="pb-6">
                                    <div class="relative mb-4">
                                        <div class="w-20 h-20 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center mx-auto">
                                            <IconComponent className="w-10 h-10 text-white" />
                                        </div>
                                        <div class="absolute -top-2 -right-2 w-8 h-8 bg-primary rounded-full flex items-center justify-center text-white font-bold text-sm">
                                            {step.number}
                                        </div>
                                    </div>
                                    <CardTitle className="text-xl">
                                        {step.title}
                                    </CardTitle>
                                    <p class="text-muted-foreground">
                                        {step.description}
                                    </p>
                                </CardHeader>
                                <CardContent>
                                    <div class="space-y-2">
                                        {step.features.map((feature) => (
                                            <div class="flex items-center gap-2 text-sm">
                                                <CheckCircle className="w-4 h-4 text-green-500" />
                                                <span>{feature}</span>
                                            </div>
                                        ))}
                                    </div>
                                </CardContent>
                            </Card>
                        );
                    })
                }
            </div>

            <div class="mt-12 text-center">
                <Alert
                    className="border-orange-200 bg-orange-50 max-w-2xl mx-auto"
                >
                    <Code className="h-4 w-4 text-orange-600" />
                    <AlertTitle className="text-orange-800"
                        >Metodología Ágil</AlertTitle
                    >
                    <AlertDescription className="text-orange-700">
                        Trabajamos con metodología Scrum, entregando avances
                        cada 2 semanas para que tengas visibilidad total del
                        progreso.
                    </AlertDescription>
                </Alert>
            </div>
        </div>
    </section>

    <!-- Project Types -->
    <section class="py-20 px-4">
        <div class="container mx-auto">
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Tipos de Proyectos que Realizamos
                </h2>
                <p class="text-lg text-muted-foreground">
                    Desde sitios web corporativos hasta aplicaciones móviles
                    complejas
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {
                    projectTypes.map((project) => {
                        const IconComponent = project.icon;
                        return (
                            <Card className="p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                                <div
                                    class={`h-2 bg-gradient-to-r ${project.gradient} mb-6`}
                                />
                                <CardHeader className="pb-4">
                                    <div class="flex items-center gap-3 mb-4">
                                        <div
                                            class={`p-3 rounded-xl bg-gradient-to-br ${project.gradient} text-white`}
                                        >
                                            <IconComponent className="w-6 h-6" />
                                        </div>
                                    </div>
                                    <CardTitle className="text-xl">
                                        {project.title}
                                    </CardTitle>
                                    <p class="text-muted-foreground">
                                        {project.description}
                                    </p>
                                </CardHeader>
                                <CardContent>
                                    <div class="space-y-2">
                                        {project.features.map((feature) => (
                                            <div class="flex items-center gap-2 text-sm">
                                                <CheckCircle className="w-4 h-4 text-green-500" />
                                                <span>{feature}</span>
                                            </div>
                                        ))}
                                    </div>
                                </CardContent>
                            </Card>
                        );
                    })
                }
            </div>
        </div>
    </section>

    <!-- Success Cases -->
    <section class="py-20 px-4 bg-muted/30">
        <div class="container mx-auto">
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Casos de Éxito
                </h2>
                <p class="text-lg text-muted-foreground">
                    Proyectos reales con resultados medibles
                </p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                {
                    successCases.map((case_) => (
                        <Card className="p-8 hover:shadow-lg transition-all duration-300">
                            <div
                                class={`h-2 bg-gradient-to-r ${case_.gradient} mb-6`}
                            />
                            <CardHeader className="pb-4">
                                <CardTitle className="text-xl">
                                    {case_.title}
                                </CardTitle>
                            </CardHeader>
                            <CardContent>
                                <div class="space-y-4">
                                    <div>
                                        <h4 class="font-semibold text-sm text-muted-foreground mb-2">
                                            DESAFÍO
                                        </h4>
                                        <p class="text-sm">{case_.challenge}</p>
                                    </div>
                                    <div>
                                        <h4 class="font-semibold text-sm text-muted-foreground mb-2">
                                            RESULTADO
                                        </h4>
                                        <p class="text-sm font-semibold text-green-600">
                                            {case_.result}
                                        </p>
                                    </div>
                                </div>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Benefits -->
    <section class="py-20 px-4">
        <div class="container mx-auto">
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    ¿Por Qué Elegirnos?
                </h2>
                <p class="text-lg text-muted-foreground">
                    La experiencia y calidad que tu proyecto necesita
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {
                    benefits.map((benefit) => {
                        const IconComponent = benefit.icon;
                        return (
                            <div class="text-center">
                                <div
                                    class={`w-16 h-16 bg-gradient-to-br ${benefit.gradient} rounded-full flex items-center justify-center mx-auto mb-4`}
                                >
                                    <IconComponent className="w-8 h-8 text-white" />
                                </div>
                                <h3 class="text-lg font-semibold mb-2">
                                    {benefit.title}
                                </h3>
                                <p class="text-muted-foreground text-sm">
                                    {benefit.description}
                                </p>
                            </div>
                        );
                    })
                }
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 px-4 bg-gradient-to-br from-blue-50 to-cyan-50">
        <div class="container mx-auto">
            <div class="max-w-4xl mx-auto text-center">
                <Card
                    className="p-12 bg-white/80 backdrop-blur-sm border-blue-200"
                >
                    <CardContent>
                        <div class="mb-6">
                            <Rocket
                                className="w-16 h-16 mx-auto text-blue-600"
                            />
                        </div>

                        <h2
                            class="text-3xl md:text-4xl font-bold mb-4 text-blue-800"
                        >
                            ¿Listo para Comenzar tu Proyecto?
                        </h2>

                        <p class="text-lg text-blue-700 mb-8 max-w-2xl mx-auto">
                            Contáctanos hoy mismo para una <strong
                                >consulta gratuita</strong
                            >. Te ayudaremos a convertir tu idea en una realidad
                            digital exitosa.
                        </p>

                        <div
                            class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8 max-w-2xl mx-auto"
                        >
                            <div class="flex items-center gap-3 justify-center">
                                <Zap className="w-5 h-5 text-blue-600" />
                                <span class="text-blue-700"
                                    >Desarrollo rápido y eficiente</span
                                >
                            </div>
