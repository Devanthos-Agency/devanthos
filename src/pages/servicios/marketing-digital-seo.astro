// Plataformas donde trabajamos
const platforms = [
    { name: 'Instagram', icon: Instagram, color: 'text-pink-500' },
    { name: 'Facebook', icon: Facebook, color: 'text-blue-600' },
    { name: 'TikTok', icon: TikTok, color: 'text-black' },
    { name: 'Google Ads', icon: Google, color: 'text-green-600' },
];

// Servicios de Google My Business
const googleMyBusinessFeatures = [
    {
        icon: MapPin,
        title: 'Información de Ubicación',
        description: 'Dirección exacta y geolocalización precisa',
    },
    {
        icon: Clock,
        title: 'Horarios de Atención',
