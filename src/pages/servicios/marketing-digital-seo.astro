// Datos de paquetes de redes sociales
const socialPackages = [
    {
        name: 'Paquete Startup',
        price: '$250 USD/mes',
        description: 'Ideal para emprendedores y pequeños negocios',
        gradient: 'from-green-500 to-emerald-500',
        icon: TrendingUp,
        features: [
            '8 Publicaciones Mensuales',
            '8 Historias Mensuales',
            '8 Campañas ADS',
            'Videos para Instagram, Facebook y TikTok',
