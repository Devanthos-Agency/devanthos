---
import Layout from '@/layouts/Layout.astro';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Button } from '@/components/ui/button';
import { Alert, AlertDescription, AlertTitle } from '@/components/ui/alert';
import {
    TrendingUp,
    Target,
    BarChart3,
    Search,
    Heart,
    Lightbulb,
    Handshake,
    Eye,
    Megaphone,
    CheckCircle,
    ArrowRight,
    Star,
    MapPin,
    Clock,
    Phone,
    Camera,
    Zap,
} from 'lucide-react';
import { Facebook, Google, Instagram, TikTok } from '@/components/icons';

// Datos de paquetes de redes sociales
const socialPackages = [
    {
        name: 'Paquete Startup',
        price: '$250 USD/mes',
        description: 'Ideal para emprendedores y pequeños negocios',
        gradient: 'from-green-500 to-emerald-500',
        icon: TrendingUp,
        features: [
            '8 Publicaciones Mensuales',
            '8 Historias Mensuales',
            '8 Campañas ADS',
            'Videos para Instagram, Facebook y TikTok',
            'Edición de video y guión incluido',
            'Inversión sugerida: $20 USD por campaña',
        ],
        highlight: '2 publicaciones semanales originales',
    },
    {
        name: 'Paquete Growth',
        price: '$400 USD/mes',
        description: 'Para empresas en crecimiento',
        gradient: 'from-blue-500 to-cyan-500',
        icon: BarChart3,
        features: [
            '12 Publicaciones Mensuales',
            '12 Historias Mensuales',
            '12 Campañas ADS',
            'Diseño gráfico o video profesional',
            '3 publicaciones semanales originales',
            'Inversión sugerida: $20 USD por campaña',
        ],
        highlight: 'Mayor frecuencia de contenido',
        popular: true,
    },
    {
        name: 'Paquete Pro',
        price: '$600 USD/mes',
        description: 'Para empresas establecidas que buscan maximizar resultados',
        gradient: 'from-purple-500 to-indigo-500',
        icon: Target,
        features: [
            '16 Publicaciones Mensuales',
            '16 Historias Mensuales',
            '16 Campañas ADS',
            'Videos de alta calidad',
            '4 publicaciones semanales originales',
            'Inversión sugerida: $10 USD por campaña',
        ],
        highlight: 'Máxima presencia digital',
    },
];

// Beneficios de elegirnos
const benefits = [
    {
        icon: Target,
        title: 'Experiencia y Profesionalismo',
        description:
            'Equipo altamente capacitado y experimentado en marketing y gestión de redes sociales',
        gradient: 'from-blue-500 to-cyan-500',
    },
    {
        icon: Lightbulb,
        title: 'Creatividad y Originalidad',
        description: 'Estrategias innovadoras y creativas para destacar en un mercado competitivo',
        gradient: 'from-green-500 to-emerald-500',
    },
    {
        icon: Handshake,
        title: 'Compromiso con el Éxito',
        description:
            'Colaboración estrecha para comprender necesidades y proporcionar soluciones personalizadas',
        gradient: 'from-purple-500 to-indigo-500',
    },
];

// Proceso de trabajo
const workProcess = [
    {
        number: 1,
        title: 'Análisis Inicial',
        description:
            'Estudiamos tu marca, competencia y audiencia para crear la estrategia perfecta',
        icon: Search,
    },
    {
        number: 2,
        title: 'Planificación Estratégica',
        description: 'Desarrollamos un plan detallado con objetivos, métricas y cronograma',
        icon: Target,
    },
    {
        number: 3,
        title: 'Creación de Contenido',
        description: 'Producimos contenido original, atractivo y alineado con tu marca',
        icon: Lightbulb,
    },
    {
        number: 4,
        title: 'Monitoreo y Optimización',
        description: 'Seguimiento constante y ajustes para maximizar resultados',
        icon: BarChart3,
    },
];

// Plataformas donde trabajamos
const platforms = [
    { name: 'Instagram', icon: Instagram, color: 'text-pink-500' },
    { name: 'Facebook', icon: Facebook, color: 'text-blue-600' },
    { name: 'TikTok', icon: TikTok, color: 'text-black' },
    { name: 'Google Ads', icon: Google, color: 'text-green-600' },
];

// Servicios de Google My Business
const googleMyBusinessFeatures = [
    {
        icon: MapPin,
        title: 'Información de Ubicación',
        description: 'Dirección exacta y geolocalización precisa',
    },
    {
        icon: Clock,
        title: 'Horarios de Atención',
        description: 'Horarios detallados y actualizados',
    },
    {
        icon: Phone,
        title: 'Información de Contacto',
        description: 'Números de teléfono y enlaces web',
    },
    {
        icon: Camera,
        title: 'Fotos de Alta Calidad',
        description: 'Imágenes profesionales de tu negocio',
    },
];
---

<Layout
    title="Marketing Digital y SEO | Devanthos - Estrategias que Generan Impacto"
    description="Potenciamos tu presencia digital con estrategias personalizadas de marketing, gestión de redes sociales y creación de contenido que generan impacto, construyen futuro y crean legado.">
    <!-- Hero Section -->
    <section class="relative min-h-screen overflow-hidden px-4 py-20">
        <div
            class="absolute inset-0 bg-gradient-to-br from-red-500/20 via-transparent to-rose-400/20">
        </div>
        <div class="absolute -top-40 -right-40 h-80 w-80 rounded-full bg-rose-500/30 blur-3xl">
        </div>
        <div class="absolute -bottom-40 -left-40 h-80 w-80 rounded-full bg-red-400/40 blur-3xl">
        </div>

        <div class="relative z-10 container mx-auto mt-16">
            <div class="mx-auto max-w-5xl">
                <div class="mb-6 flex justify-center">
                    <Badge variant="outline" className="px-4 py-2 text-xs md:text-lg">
                        <Heart className="mr-2 h-4 w-4 text-red-500" />
                        Generamos Impacto, Construimos Futuro y Creamos Legado
                    </Badge>
                </div>

                <div class="mb-12 text-center">
                    <h1 class="font-cocogoose mb-6 text-3xl leading-tight md:text-7xl">
                        Marketing Digital y
                        <span
                            class="bg-gradient-to-r from-red-500 to-rose-500 bg-clip-text text-nowrap text-transparent">
                            Gestión de Redes Sociales
                        </span>
                        <span class="sr-only"
                            >en Argentina - Especialistas en posicionamiento web Google, campañas de
                            pago por clic, gestión de redes sociales Instagram Facebook TikTok y
                            estrategias de conversión digital</span
                        >
                    </h1>

                    <p class="text-muted-foreground mx-auto mb-8 max-w-3xl text-xl">
                        Potenciamos tu presencia digital con estrategias personalizadas de
                        marketing, gestión de redes sociales y creación de contenido que <strong
                            >generan impacto, construyen futuro y crean legado</strong
                        >.
                        <span class="sr-only"
                            >Servicios profesionales de SEO técnico on-page y off-page, Google Ads y
                            Facebook Ads optimizadas, content marketing, analítica web con Google
                            Analytics 4, social media management y estrategias de growth hacking
                            para empresas.</span
                        >
                    </p>
                </div>

                <div class="grid grid-cols-1 items-center gap-8 lg:grid-cols-2">
                    <div class="space-y-6">
                        <Alert className="border-red-200 bg-red-50">
                            <Heart className="h-4 w-4 fill-red-600 stroke-red-600" />
                            <AlertTitle className="text-red-800"
                                >En Devanthos tejemos historias digitales</AlertTitle
                            >
                            <AlertDescription className="text-red-700">
                                Somos un equipo apasionado por el marketing digital y la creación de
                                contenido, dedicados a potenciar la presencia en línea de negocios
                                como el tuyo.
                            </AlertDescription>
                        </Alert>

                        <div class="flex flex-col gap-4 sm:flex-row">
                            <Button
                                size="lg"
                                className="bg-gradient-to-r from-red-500 to-rose-500 px-8 text-lg hover:from-red-600 hover:to-rose-600">
                                Ver Paquetes
                                <ArrowRight className="ml-2 h-5 w-5" />
                            </Button>
                            <Button
                                variant="outline"
                                size="lg"
                                className="border-red-500 px-8 text-lg text-red-600 hover:bg-red-50">
                                Consulta Gratuita
                            </Button>
                        </div>
                    </div>

                    <div class="relative">
                        <img
                            src="/images/service/marketing-digital-seo.avif"
                            alt="Marketing Digital y SEO"
                            class="rounded-2xl shadow-2xl"
                        />
                        <div
                            class="absolute -right-4 -bottom-4 rounded-xl bg-gradient-to-r from-red-500 to-rose-500 p-4 text-white shadow-lg">
                            <div class="flex items-center gap-2">
                                <TrendingUp className="h-6 w-6" />
                                <div>
                                    <p class="font-semibold">+100 Clientes</p>
                                    <p class="text-sm opacity-90">Satisfechos</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- What We Do Section -->
    <section class="bg-muted/30 px-4 py-20">
        <div class="container mx-auto">
            <div class="mx-auto mb-16 max-w-4xl text-center">
                <h2 class="font-cocogoose text-2xl leading-tight tracking-tight md:text-6xl">
                    ¿Qué Hacemos?
                    <span class="sr-only"
                        >Agencia de marketing digital especializada en posicionamiento SEO,
                        publicidad digital y gestión de redes sociales</span
                    >
                </h2>
                <p class="text-muted-foreground mb-8 text-xl">
                    En <strong>Devanthos</strong>, nos especializamos en potenciar el alcance de
                    nuestros clientes a través de servicios integrales de marketing.
                    <span class="sr-only"
                        >Expertos en auditorías SEO, investigación de palabras clave, link building,
                        creación de contenido optimizado, gestión de Google My Business y
                        estrategias omnicanal para maximizar el ROI digital.</span
                    >
                </p>

                <div class="mb-8 flex flex-wrap justify-center gap-2">
                    <Badge variant="outline" className="text-sm">Auditorías de Marketing</Badge>
                    <Badge variant="outline" className="text-sm">Campañas Publicitarias</Badge>
                    <Badge variant="outline" className="text-sm">Creación de Páginas Web</Badge>
                    <Badge variant="outline" className="text-sm">Gestión de Redes Sociales</Badge>
                    <Badge variant="outline" className="text-sm">Creación de Contenido</Badge>
                    <Badge variant="outline" className="text-sm">Google My Business</Badge>
                </div>
            </div>

            <!-- Platforms -->
            <div class="mx-auto mb-16 max-w-2xl">
                <h3 class="mb-6 text-center text-xl font-semibold">Plataformas donde Trabajamos</h3>
                <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
                    {
                        platforms.map((platform) => {
                            const IconComponent = platform.icon;
                            return (
                                <Card className="text-center p-4 hover:shadow-lg transition-shadow">
                                    <CardContent className="p-0">
                                        <IconComponent className="mx-auto mb-2 size-12" />
                                        <p class="text-sm font-medium">{platform.name}</p>
                                    </CardContent>
                                </Card>
                            );
                        })
                    }
                </div>
            </div>

            <!-- Benefits -->
            <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
                {
                    benefits.map((benefit) => {
                        const IconComponent = benefit.icon;
                        return (
                            <Card className="text-center p-6 hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
                                <CardContent className="p-0">
                                    <div
                                        class={`h-16 w-16 bg-gradient-to-br ${benefit.gradient} mx-auto mb-4 flex items-center justify-center rounded-full`}>
                                        <IconComponent className="w-8 h-8 text-white" />
                                    </div>
                                    <h3 class="mb-3 text-xl font-semibold">{benefit.title}</h3>
                                    <p class="text-muted-foreground">{benefit.description}</p>
                                </CardContent>
                            </Card>
                        );
                    })
                }
            </div>
        </div>
    </section>

    <!-- Social Media Packages -->
    <section class="px-4 py-20">
        <div class="container mx-auto">
            <div class="mx-auto mb-16 max-w-4xl text-center">
                <h2 class="font-cocogoose text-2xl leading-tight tracking-tight md:text-6xl">
                    Gestión de Redes Sociales
                    <span class="sr-only"
                        >profesional para Instagram, Facebook, TikTok y LinkedIn con creación de
                        contenido original, estrategias de engagement y campañas publicitarias
                        segmentadas</span
                    >
                </h2>
                <p class="text-muted-foreground text-xl">
                    Ofrecemos tres paquetes diseñados para diferentes necesidades y presupuestos.
                    Cada paquete incluye contenido original, estrategias creativas y campañas
                    publicitarias optimizadas.
                    <span class="sr-only"
                        >Con métricas de performance, análisis de audiencia, community management,
                        diseño gráfico profesional, video marketing y automatización de
                        publicaciones para maximizar alcance orgánico y conversiones.</span
                    >
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
                {
                    socialPackages.map((pkg) => {
                        const IconComponent = pkg.icon;
                        return (
                            <Card
                                className={`relative transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl ${pkg.popular ? 'border-primary ring-primary/20 border-2 ring-2' : ''}`}>
                                {pkg.popular && (
                                    <div class="absolute -top-4 left-1/2 -translate-x-1/2 transform">
                                        <Badge className="bg-primary text-primary-foreground px-4 py-1">
                                            <Star className="w-4 h-4 mr-1" />
                                            Más Popular
                                        </Badge>
                                    </div>
                                )}

                                <div class={`h-2 bg-gradient-to-r ${pkg.gradient}`} />

                                <CardHeader className="text-center pb-4">
                                    <div
                                        class={`h-16 w-16 bg-gradient-to-br ${pkg.gradient} mx-auto mb-4 flex items-center justify-center rounded-full`}>
                                        <IconComponent className="w-8 h-8 text-white" />
                                    </div>
                                    <CardTitle className="text-2xl">{pkg.name}</CardTitle>
                                    <p class="text-muted-foreground">{pkg.description}</p>
                                    <div class="text-primary mt-4 text-3xl font-bold">
                                        {pkg.price}
                                    </div>
                                    {pkg.highlight && (
                                        <Badge variant="secondary" className="mt-2">
                                            {pkg.highlight}
                                        </Badge>
                                    )}
                                </CardHeader>

                                <CardContent>
                                    <div class="space-y-3">
                                        {pkg.features.map((feature) => (
                                            <div class="flex items-start gap-3">
                                                <CheckCircle className="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" />
                                                <span class="text-sm">{feature}</span>
                                            </div>
                                        ))}
                                    </div>

                                    <Button
                                        className={`mt-6 w-full bg-gradient-to-r ${pkg.gradient} hover:opacity-90`}>
                                        Elegir {pkg.name}
                                        <ArrowRight className="ml-2 w-4 h-4" />
                                    </Button>
                                </CardContent>
                            </Card>
                        );
                    })
                }
            </div>
        </div>
    </section>

    <!-- Google My Business Section -->
    <section class="bg-muted/30 px-4 py-20">
        <div class="container mx-auto">
            <div class="mx-auto max-w-4xl">
                <div class="mb-16 text-center">
                    <h2 class="font-cocogoose text-2xl leading-tight tracking-tight md:text-6xl">
                        Ficha de Google My Business
                        <span class="sr-only"
                            >y SEO local - optimización de ficha empresarial, gestión de reseñas,
                            posicionamiento en Maps y estrategias de marketing de proximidad</span
                        >
                    </h2>
                    <p class="text-muted-foreground text-xl">
                        Optimiza tu presencia local y atrae más clientes
                        <span class="sr-only"
                            >mediante técnicas de SEO local avanzado, optimización de NAP (nombre,
                            dirección, teléfono), gestión de citations, marketing de reputación
                            online y estrategias de visibilidad en búsquedas por ubicación.</span
                        >
                    </p>
                </div>

                <Card
                    className="border-red-200 bg-gradient-to-br from-red-50 to-orange-50 p-8 dark:border-red-700 dark:bg-gradient-to-br dark:from-red-900/50 dark:to-orange-900/50">
                    <CardHeader className="pb-6 text-center">
                        <div
                            class="mx-auto mb-4 flex h-20 w-20 items-center justify-center rounded-full bg-gradient-to-br from-red-500 to-orange-500 dark:from-red-600 dark:to-orange-600">
                            <Search className="h-10 w-10 text-white" />
                        </div>
                        <CardTitle className="mb-2 text-2xl text-red-800 dark:text-red-200">
                            Creación y Optimización de Ficha
                        </CardTitle>
                        <div class="text-3xl font-bold text-red-600 dark:text-red-200">
                            $100 USD
                        </div>
                        <Badge
                            variant="outline"
                            className="mt-2 border-red-300 text-red-600 dark:text-red-400 *:dark:border-red-700">
                            Pago Único
                        </Badge>
                    </CardHeader>

                    <CardContent>
                        <div class="mb-8 grid grid-cols-1 gap-6 md:grid-cols-2">
                            {
                                googleMyBusinessFeatures.map((feature) => {
                                    const IconComponent = feature.icon;
                                    return (
                                        <div class="flex items-start gap-3">
                                            <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-red-100">
                                                <IconComponent className="w-5 h-5 text-red-600 dark:text-red-400" />
                                            </div>
                                            <div>
                                                <h4 class="font-semibold text-red-800 dark:text-red-200">
                                                    {feature.title}
                                                </h4>
                                                <p class="text-sm text-red-600 dark:text-red-400">
                                                    {feature.description}
                                                </p>
                                            </div>
                                        </div>
                                    );
                                })
                            }
                        </div>

                        <Alert
                            className="mb-6 border-green-200 bg-green-50 dark:border-green-700 dark:bg-green-900/50">
                            <Eye className="h-4 w-4 text-green-600 dark:text-green-400" />
                            <AlertTitle className="text-green-800 dark:text-green-200"
                                >Beneficios de Tener tu Ficha Optimizada</AlertTitle
                            >
                            <AlertDescription className="text-green-700 dark:text-green-400">
                                Cualquier persona que busque tu negocio en Google podrá encontrarte
                                fácilmente, acceder a tu ubicación, horarios y demás información
                                relevante, aumentando la visibilidad en búsquedas locales y
                                atrayendo más tráfico hacia tu tienda física.
                            </AlertDescription>
                        </Alert>

                        <div class="mt-6 text-center">
                            <Button
                                size="lg"
                                className="bg-gradient-to-r from-red-500 to-orange-500 px-8 text-lg transition-colors hover:from-red-600 hover:to-orange-600 dark:text-white">
                                Optimizar mi Ficha
                                <ArrowRight className="ml-2 h-5 w-5" />
                            </Button>
                        </div>
                    </CardContent>
                </Card>
            </div>
        </div>
    </section>

    <!-- Work Process Section -->
    <section class="px-4 py-20">
        <div class="container mx-auto">
            <div class="mx-auto max-w-4xl">
                <div class="mb-16 text-center">
                    <h2 class="mb-4 text-3xl font-bold md:text-4xl">Nuestro Proceso de Trabajo</h2>
                    <p class="text-muted-foreground text-lg">
                        En <strong>Devanthos</strong>, trabajamos con una metodología probada que
                        garantiza resultados excepcionales
                    </p>
                </div>

                <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
                    {
                        workProcess.map((step) => {
                            const IconComponent = step.icon;
                            return (
                                <div class="text-center">
                                    <div class="relative mb-6">
                                        <div class="from-primary to-accent mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br">
                                            <IconComponent className="w-8 h-8 text-white" />
                                        </div>
                                        <div class="bg-primary absolute -top-2 -right-2 flex h-8 w-8 items-center justify-center rounded-full text-sm font-bold text-white">
                                            {step.number}
                                        </div>
                                    </div>
                                    <h3 class="mb-2 text-lg font-semibold">{step.title}</h3>
                                    <p class="text-muted-foreground text-sm">{step.description}</p>
                                </div>
                            );
                        })
                    }
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gradient-to-br from-green-50 to-emerald-50 px-4 py-20">
        <div class="container mx-auto">
            <div class="mx-auto max-w-4xl text-center">
                <Card className="border-green-200 bg-white/80 p-12 backdrop-blur-sm">
                    <CardContent>
                        <div class="mb-6">
                            <Megaphone className="mx-auto h-16 w-16 text-green-600" />
                        </div>

                        <h2 class="mb-4 text-3xl font-bold text-green-800 md:text-4xl">
                            ¿Listo para Transformar tu Presencia Digital?
                        </h2>

                        <p class="mx-auto mb-8 max-w-2xl text-lg text-green-700">
                            En Devanthos tejemos historias digitales que <strong
                                >generan impacto, construyen futuro y crean legado</strong
                            >. Contáctanos hoy mismo para comenzar a potenciar tu negocio con
                            estrategias de marketing personalizadas.
                        </p>

                        <div class="mx-auto mb-8 grid max-w-2xl grid-cols-1 gap-6 md:grid-cols-2">
                            <div class="flex items-center justify-center gap-3">
                                <Zap className="h-5 w-5 text-green-600" />
                                <span class="text-green-700">Impulsa tu presencia digital</span>
                            </div>
                            <div class="flex items-center justify-center gap-3">
                                <Target className="h-5 w-5 text-green-600" />
                                <span class="text-green-700">Atrae a tu audiencia ideal</span>
                            </div>
                            <div class="flex items-center justify-center gap-3">
                                <TrendingUp className="h-5 w-5 text-green-600" />
                                <span class="text-green-700">Aumenta tus ventas y conversiones</span
                                >
                            </div>
                            <div class="flex items-center justify-center gap-3">
                                <Star className="h-5 w-5 text-green-600" />
                                <span class="text-green-700"
                                    >Destaca por encima de la competencia</span
                                >
                            </div>
                        </div>

                        <div class="flex flex-col justify-center gap-4 sm:flex-row">
                            <Button
                                size="lg"
                                className="bg-gradient-to-r from-green-500 to-emerald-500 px-8 text-lg hover:from-green-600 hover:to-emerald-600">
                                Comenzar Ahora
                                <ArrowRight className="ml-2 h-5 w-5" />
                            </Button>
                            <Button
                                variant="outline"
                                size="lg"
                                className="border-green-500 px-8 text-lg text-green-600 hover:bg-green-50">
                                Consulta Gratuita
                            </Button>
                        </div>

                        <div
                            class="mt-6 flex items-center justify-center gap-4 text-sm text-green-600">
                            <div class="flex items-center gap-1">
                                <CheckCircle className="h-4 w-4" />
                                <span>Sin compromiso</span>
                            </div>
                            <div class="flex items-center gap-1">
                                <CheckCircle className="h-4 w-4" />
                                <span>Respuesta en 24h</span>
                            </div>
                        </div>
                    </CardContent>
                </Card>
            </div>
        </div>
    </section>
</Layout>

<style>
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
