---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import {
    Code2,
    Cloud,
    Cpu,
    Smartphone,
    Database,
    Shield,
    Zap,
    Globe,
    Bot,
    ArrowRight,
    Rocket,
    Settings,
} from "lucide-react";

const solutions = [
    {
        icon: Cloud,
        title: "Arquitectura Cloud",
        description: "Infraestructura escalable y resiliente en la nube",
        features: [
            "Migración a AWS, Azure, GCP",
            "Microservicios y contenedores",
            "CI/CD automatizado",
            "Monitoreo y observabilidad",
        ],
    },
    {
        icon: Code2,
        title: "Desarrollo de Software",
        description: "Soluciones personalizadas con tecnologías modernas",
        features: [
            "Aplicaciones web y móviles",
            "APIs REST y GraphQL",
            "Arquitectura serverless",
            "Desarrollo ágil y DevOps",
        ],
    },
    {
        icon: Bot,
        title: "Inteligencia Artificial",
        description: "IA y Machine Learning para automatización",
        features: [
            "Chatbots inteligentes",
            "Análisis predictivo",
            "Procesamiento de lenguaje natural",
            "Computer vision",
        ],
    },
];

const technologies = [
    {
        category: "Frontend",
        stack: [
            "React",
            "Next.js",
            "Vue.js",
            "Astro",
            "TypeScript",
            "Tailwind CSS",
        ],
        icon: Globe,
    },
    {
        category: "Backend",
        stack: ["Node.js", "Python", "Go", "Java", "PostgreSQL", "MongoDB"],
        icon: Database,
    },
    {
        category: "Mobile",
        stack: ["React Native", "Flutter", "Swift", "Kotlin", "Expo"],
        icon: Smartphone,
    },
    {
        category: "Cloud & DevOps",
        stack: [
            "AWS",
            "Docker",
            "Kubernetes",
            "Terraform",
            "Jenkins",
            "GitHub Actions",
        ],
        icon: Cloud,
    },
    {
        category: "AI & Data",
        stack: [
            "TensorFlow",
            "PyTorch",
            "Pandas",
            "Apache Spark",
            "Elasticsearch",
        ],
